@model EndPoint.WebSite.Controllers.CliftonQuestionVm
@{
    ViewData["Title"] = "بخش Clifton";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="mb-0">سؤال @Model.Index از @Model.Total</h4>
                        <span class="badge bg-primary">Clifton</span>
                    </div>

                    @if (TempData["Error"] is string error)
                    {
                        <div class="alert alert-danger">@error</div>
                    }

                    <form method="post" asp-action="Clifton" asp-route-index="@Model.Index" asp-route-runId="@Model.RunId">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="runId" value="@Model.RunId" />

                        <div class="row g-3">
                            <div class="col-md-6">
                                <button type="submit" name="answer" value="A" class="btn btn-outline-success w-100 py-3">
                                    <span class="fw-bold">گزینه A</span>
                                    <div class="mt-2 text-start">@Model.TextA</div>
                                </button>
                            </div>
                            <div class="col-md-6">
                                <button type="submit" name="answer" value="B" class="btn btn-outline-info w-100 py-3">
                                    <span class="fw-bold">گزینه B</span>
                                    <div class="mt-2 text-start">@Model.TextB</div>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
