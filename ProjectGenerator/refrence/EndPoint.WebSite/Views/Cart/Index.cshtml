@model EndPoint.WebSite.Models.Cart.CartViewModel
@{
    ViewData["Title"] = "سبد خرید";
    ViewData["ContainerClass"] = "container cart-container";
    ViewData["MainClass"] = "site-main cart-main";
    var successMessage = ViewBag.SuccessMessage as string;
    var errorMessage = ViewBag.ErrorMessage as string;
    var discountForm = ViewBag.ApplyDiscount as EndPoint.WebSite.Models.Cart.ApplyDiscountInputModel ?? new EndPoint.WebSite.Models.Cart.ApplyDiscountInputModel();
}
@section Styles {
    <link rel="stylesheet" href="~/css/cart-modern.css" asp-append-version="true" />
}

<section class="cart" aria-labelledby="cartTitle">
    <div class="cart__header">
        <h1 class="cart__title" id="cartTitle">سبد خرید</h1>
        <p class="cart__subtitle">مروری بر محصولات انتخاب شده و مدیریت تخفیف‌ها</p>
    </div>

    @if (!string.IsNullOrWhiteSpace(successMessage))
    {
        <div class="alert alert-success cart__alert" role="status">@successMessage</div>
    }
    @if (!string.IsNullOrWhiteSpace(errorMessage))
    {
        <div class="alert alert-danger cart__alert" role="alert">@errorMessage</div>
    }

    @if (Model.IsEmpty)
    {
        <div class="cart-empty" role="status">
            <h2 class="cart-empty__title">سبد خرید شما خالی است</h2>
            <p class="cart-empty__text">برای شروع می‌توانید به صفحه محصولات بروید و موارد مورد نظر خود را انتخاب کنید.</p>
            <a class="cart-empty__cta" asp-controller="Product" asp-action="Index">مشاهده محصولات</a>
        </div>
    }
    else
    {
        <section class="cart-overview" aria-label="مرور سریع سبد خرید">
            <div class="cart-overview__metric">
                <span class="cart-overview__metric-label">تعداد آیتم‌ها</span>
                <span class="cart-overview__metric-value">@Model.Items.Count</span>
            </div>
            <div class="cart-overview__metric">
                <span class="cart-overview__metric-label">جمع جزء</span>
                <span class="cart-overview__metric-value">@Model.Subtotal.ToString("N0", new System.Globalization.CultureInfo("fa-IR")) تومان</span>
            </div>
            <div class="cart-overview__metric">
                <span class="cart-overview__metric-label">مبلغ نهایی</span>
                <span class="cart-overview__metric-value">@Model.GrandTotal.ToString("N0", new System.Globalization.CultureInfo("fa-IR")) تومان</span>
            </div>
            @if (User?.Identity?.IsAuthenticated ?? false)
            {
                <a class="cart-overview__cta" asp-controller="Checkout" asp-action="Index">تسویه حساب</a>
            }
            else
            {
                <a class="cart-overview__cta" asp-controller="Account" asp-action="PhoneLogin" asp-route-returnUrl="@Url.Action("Index", "Checkout")">ورود و تسویه حساب</a>
            }
        </section>
        <div class="cart-content">
            <section class="cart-items" aria-label="لیست محصولات">
                <table class="cart-table">
                    <thead>
                        <tr>
                            <th scope="col">محصول</th>
                            <th scope="col">قیمت واحد</th>
                            <th scope="col">تعداد</th>
                            <th scope="col">جمع جزء</th>
                            <th scope="col" class="cart-table__actions">عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr class="cart-item">
                                <td data-label="محصول">
                                    <div class="cart-item__product">
                                        <img class="cart-item__thumbnail" src="@(!string.IsNullOrWhiteSpace(item.ThumbnailUrl) ? item.ThumbnailUrl : "https://placehold.co/160x160?text=Arsis")" alt="" loading="lazy" />
                                        <div class="cart-item__info">
                                            <a class="cart-item__name" asp-controller="Product" asp-action="Details" asp-route-slug="@item.Slug">@item.Name</a>
                                            <span class="cart-item__type">@((item.ProductType == Arsis.Domain.Enums.ProductType.Digital) ? "محصول دیجیتال" : "محصول حضوری")</span>
                                        </div>
                                    </div>
                                </td>
                                <td data-label="قیمت واحد">
                                    <div class="cart-item__price">
                                        <span>@item.UnitPrice.ToString("N0", new System.Globalization.CultureInfo("fa-IR")) تومان</span>
                                        @if (item.CompareAtPrice.HasValue)
                                        {
                                            <span class="cart-item__price-original">@item.CompareAtPrice.Value.ToString("N0", new System.Globalization.CultureInfo("fa-IR")) تومان</span>
                                        }
                                    </div>
                                </td>
                                <td data-label="تعداد">
                                    <form asp-action="UpdateQuantity" method="post" class="cart-item__quantity-form">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                        <div class="input-group">
                                            <input type="number" name="quantity" value="@item.Quantity" min="1" max="99" inputmode="numeric" dir="ltr" @(item.CanIncreaseQuantity ? null : "readonly") class="cart-item__quantity-input" />
                                            <button type="submit" class="btn btn-outline-secondary cart-item__quantity-button" @(item.CanIncreaseQuantity ? null : "disabled")>به‌روزرسانی</button>
                                        </div>
                                    </form>
                                </td>
                                <td data-label="جمع جزء">
                                    <span class="cart-item__total">@item.LineTotal.ToString("N0", new System.Globalization.CultureInfo("fa-IR")) تومان</span>
                                </td>
                                <td data-label="عملیات" class="cart-table__actions">
                                    <form asp-action="RemoveItem" method="post" class="cart-item__remove-form">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                        <button type="submit" class="cart-item__remove" aria-label="حذف @item.Name از سبد">
                                            حذف
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </section>

            <aside class="cart-summary" aria-label="خلاصه سفارش">
                <div class="cart-summary__card">
                    <h2 class="cart-summary__title">خلاصه سفارش</h2>
                    <dl class="cart-summary__details">
                        <div class="cart-summary__row">
                            <dt>جمع جزء</dt>
                            <dd>@Model.Subtotal.ToString("N0", new System.Globalization.CultureInfo("fa-IR")) تومان</dd>
                        </div>
                        <div class="cart-summary__row">
                            <dt>تخفیف</dt>
                            <dd>@Model.DiscountTotal.ToString("N0", new System.Globalization.CultureInfo("fa-IR")) تومان</dd>
                        </div>
                        <div class="cart-summary__divider" aria-hidden="true"></div>
                        <div class="cart-summary__row cart-summary__row--total">
                            <dt>مبلغ قابل پرداخت</dt>
                            <dd>@Model.GrandTotal.ToString("N0", new System.Globalization.CultureInfo("fa-IR")) تومان</dd>
                        </div>
                    </dl>

                    @if (Model.Discount is not null)
                    {
                        <div class="cart-summary__discount-info">
                            <strong>کد تخفیف فعال:</strong> <span>@Model.Discount.Code</span>
                            <form asp-action="ClearDiscount" method="post" class="cart-summary__discount-remove">
                                @Html.AntiForgeryToken()
                                <button type="submit">حذف تخفیف</button>
                            </form>
                        </div>
                    }
                    else
                    {
                        <form asp-action="ApplyDiscount" method="post" class="cart-summary__discount-form">
                            @Html.AntiForgeryToken()
                            <label for="discountCode" class="form-label">کد تخفیف دارید؟</label>
                            <input id="discountCode" name="Code" value="@discountForm.Code" class="form-control" autocomplete="off" />
                            <button type="submit" class="cart-summary__discount-button">اعمال کد</button>
                        </form>
                    }

                    <div class="cart-summary__cta">
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <a class="cart-summary__checkout" asp-controller="Checkout" asp-action="Index">
                                تسویه حساب
                            </a>
                        }
                        else
                        {
                            <a class="cart-summary__checkout" asp-controller="Account" asp-action="PhoneLogin" asp-route-returnUrl="@Url.Action("Index", "Checkout")">
                                تسویه حساب
                            </a>
                        }
                        <a class="cart-summary__continue" asp-controller="Product" asp-action="Index">ادامه خرید</a>
                    </div>
                </div>
            </aside>
        </div>
    }
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
