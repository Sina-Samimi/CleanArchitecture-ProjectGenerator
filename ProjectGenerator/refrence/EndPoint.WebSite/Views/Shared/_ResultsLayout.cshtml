@{
    Layout = "_Layout";
}

@section Styles {
    <style>
        /* Global Styles */
        body {
            direction: rtl;
            font-family: 'IRANSans', system-ui, -apple-system, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            background-attachment: fixed;
            min-height: 100vh;
        }

        /* Container */
        .results-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem 1rem;
        }

        /* Hero Section */
        .hero-section {
            text-align: center;
            margin-bottom: 3rem;
        }

        .success-banner {
            background: white;
            border-radius: 24px;
            padding: 3rem 2rem;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
            margin-bottom: 1.5rem;
            animation: slideDown 0.6s ease-out;
        }

        @@keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .success-icon {
            margin: 0 auto 1.5rem;
            width: 80px;
            height: 80px;
        }

        .checkmark {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            display: block;
            stroke-width: 3;
            stroke: #10b981;
            stroke-miterlimit: 10;
            box-shadow: inset 0px 0px 0px #10b981;
            animation: fill 0.4s ease-in-out 0.4s forwards, scale 0.3s ease-in-out 0.9s both;
        }

        .checkmark-circle {
            stroke-dasharray: 166;
            stroke-dashoffset: 166;
            stroke-width: 3;
            stroke-miterlimit: 10;
            stroke: #10b981;
            fill: none;
            animation: stroke 0.6s cubic-bezier(0.65, 0, 0.45, 1) forwards;
        }

        .checkmark-check {
            transform-origin: 50% 50%;
            stroke-dasharray: 48;
            stroke-dashoffset: 48;
            stroke: #10b981;
            animation: stroke 0.3s cubic-bezier(0.65, 0, 0.45, 1) 0.8s forwards;
        }

        @@keyframes stroke {
            100% {
                stroke-dashoffset: 0;
            }
        }

        @@keyframes scale {
            0%, 100% {
                transform: none;
            }
            50% {
                transform: scale3d(1.1, 1.1, 1);
            }
        }

        @@keyframes fill {
            100% {
                box-shadow: inset 0px 0px 0px 30px #10b981;
            }
        }

        .success-title {
            font-size: 2rem;
            font-weight: 800;
            color: #1f2937;
            margin-bottom: 0.5rem;
        }

        .success-subtitle {
            font-size: 1.1rem;
            color: #6b7280;
            font-weight: 500;
        }

        .action-bar {
            display: flex;
            justify-content: center;
            gap: 1rem;
        }

        .btn-download {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            background: white;
            color: #667eea;
            padding: 0.875rem 1.75rem;
            border-radius: 12px;
            font-weight: 600;
            text-decoration: none;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.2);
            transition: all 0.3s ease;
        }

        .btn-download:hover {
            background: #667eea;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
        }

        /* Chart Grid */
        .chart-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(min(100%, 500px), 1fr));
            gap: 2rem;
            margin-bottom: 2rem;
        }

        /* Panel Styles */
        .panel {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: all 0.3s ease;
        }

        .panel:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 50px rgba(0, 0, 0, 0.15);
        }

        .panel-full {
            grid-column: 1 / -1;
        }

        .panel-header-modern {
            padding: 1.5rem 2rem;
            color: white;
            position: relative;
            overflow: hidden;
        }

        .panel-header-modern::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: inherit;
            opacity: 0.9;
            z-index: 0;
        }

        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: relative;
            z-index: 1;
        }

        .header-content h3 {
            margin: 0;
            font-size: 1.5rem;
            font-weight: 800;
        }

        .header-badge {
            background: rgba(255, 255, 255, 0.25);
            padding: 0.4rem 1rem;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
            backdrop-filter: blur(10px);
        }

        .pvq-gradient {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        }

        .clifton-gradient {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        }

        .job-gradient {
            background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
        }

        .panel-body-modern {
            padding: 2rem;
        }

        .panel-description {
            color: #6b7280;
            font-size: 0.95rem;
            margin-bottom: 1.5rem;
            line-height: 1.6;
        }

        /* Chart Containers */
        .chart-container {
            margin-bottom: 2rem;
            padding: 1rem;
            background: #f9fafb;
            border-radius: 12px;
        }

        .chart-container-large {
            margin-bottom: 2rem;
            padding: 1.5rem;
            background: #f9fafb;
            border-radius: 12px;
            height: 400px;
        }

        /* Scores List */
        .scores-list {
            max-height: 400px;
            overflow-y: auto;
        }

        .scores-list::-webkit-scrollbar {
            width: 6px;
        }

        .scores-list::-webkit-scrollbar-track {
            background: #f1f5f9;
            border-radius: 10px;
        }

        .scores-list::-webkit-scrollbar-thumb {
            background: #cbd5e1;
            border-radius: 10px;
        }

        .scores-list::-webkit-scrollbar-thumb:hover {
            background: #94a3b8;
        }

        .scores-header {
            display: flex;
            justify-content: space-between;
            padding: 0.75rem 1rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            font-weight: 700;
            border-radius: 12px;
            margin-bottom: 0.75rem;
        }

        .score-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.875rem 1rem;
            border-radius: 10px;
            margin-bottom: 0.5rem;
            transition: all 0.2s ease;
            border: 2px solid transparent;
        }

        .score-item:hover {
            transform: translateX(-5px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
        }

        .score-top {
            background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
            border-color: #f59e0b;
        }

        .score-mid {
            background: #f3f4f6;
        }

        .score-low {
            background: #f9fafb;
        }

        .score-label {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            font-weight: 600;
            color: #374151;
        }

        .rank-badge {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 28px;
            height: 28px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 50%;
            font-size: 0.8rem;
            font-weight: 700;
        }

        .score-value {
            font-weight: 700;
            color: #1f2937;
            font-size: 1.05rem;
            font-family: 'Courier New', monospace;
        }

        /* Job Groups Grid */
        .job-groups-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 1.5rem;
            margin: 2rem 0;
        }

        .job-card {
            background: linear-gradient(135deg, #ffffff 0%, #f9fafb 100%);
            border-radius: 16px;
            padding: 1.75rem;
            border: 2px solid #e5e7eb;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .job-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #667eea, #764ba2);
        }

        .job-card:hover {
            border-color: #667eea;
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.2);
        }

        .job-rank {
            font-size: 2.5rem;
            margin-bottom: 0.5rem;
        }

        .job-title {
            font-size: 1.25rem;
            font-weight: 700;
            color: #1f2937;
            margin-bottom: 0.25rem;
        }

        .job-code {
            color: #9ca3af;
            font-size: 0.85rem;
            margin-bottom: 1rem;
        }

        .job-score-display {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 0.75rem;
        }

        .job-score-label {
            color: #6b7280;
            font-size: 0.9rem;
        }

        .job-score-value {
            font-size: 1.5rem;
            font-weight: 800;
            background: linear-gradient(135deg, #667eea, #764ba2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .progress-bar-wrapper {
            width: 100%;
            height: 8px;
            background: #e5e7eb;
            border-radius: 10px;
            overflow: hidden;
        }

        .progress-bar-fill {
            height: 100%;
            background: linear-gradient(90deg, #667eea, #764ba2);
            border-radius: 10px;
            transition: width 1s ease-out;
        }

        /* All Jobs Details */
        .all-jobs-details {
            margin-top: 2rem;
            border-top: 2px solid #e5e7eb;
            padding-top: 1.5rem;
        }

        .all-jobs-details summary {
            cursor: pointer;
            font-weight: 600;
            color: #667eea;
            padding: 0.75rem;
            border-radius: 8px;
            transition: background 0.2s ease;
            list-style: none;
        }

        .all-jobs-details summary::-webkit-details-marker {
            display: none;
        }

        .all-jobs-details summary::before {
            content: '◀';
            display: inline-block;
            margin-left: 0.5rem;
            transition: transform 0.3s ease;
        }

        .all-jobs-details[open] summary::before {
            transform: rotate(-90deg);
        }

        .all-jobs-details summary:hover {
            background: #f3f4f6;
        }

        .all-jobs-table {
            margin-top: 1rem;
        }

        .job-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.875rem 1rem;
            border-radius: 8px;
            margin-bottom: 0.5rem;
            background: #f9fafb;
            transition: all 0.2s ease;
        }

        .job-row:hover {
            background: #f3f4f6;
            transform: translateX(-5px);
        }

        .job-row-label {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            font-weight: 500;
            color: #374151;
        }

        .job-dot {
            width: 8px;
            height: 8px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            border-radius: 50%;
        }

        .job-row-code {
            color: #9ca3af;
            font-size: 0.85rem;
        }

        .job-row-score {
            font-weight: 700;
            color: #1f2937;
            font-family: 'Courier New', monospace;
        }

        /* Section Header */
        .section-header {
            text-align: center;
            margin: 3rem 0 2rem;
            color: white;
        }

        .section-header h2 {
            font-size: 2rem;
            font-weight: 800;
            margin-bottom: 0.5rem;
        }

        .section-header p {
            font-size: 1.1rem;
            opacity: 0.9;
        }

        /* Skill Plans Grid */
        .skill-plans-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(min(100%, 350px), 1fr));
            gap: 2rem;
            margin-bottom: 2rem;
        }

        .skill-plan-card {
            background: white;
            border-radius: 20px;
            padding: 2rem;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

        .skill-plan-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 50px rgba(0, 0, 0, 0.15);
        }

        .skill-plan-header {
            text-align: center;
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 3px solid #e5e7eb;
        }

        .skill-plan-header h3 {
            font-size: 1.5rem;
            font-weight: 800;
            background: linear-gradient(135deg, #667eea, #764ba2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .skill-sections {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .skill-section {
            display: flex;
            gap: 1rem;
            align-items: flex-start;
        }

        .skill-section-icon {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            flex-shrink: 0;
        }

        .skill-section-icon.awareness {
            background: linear-gradient(135deg, #667eea, #764ba2);
        }

        .skill-section-icon.building {
            background: linear-gradient(135deg, #f093fb, #f5576c);
        }

        .skill-section-icon.development {
            background: linear-gradient(135deg, #4facfe, #00f2fe);
        }

        .skill-section-icon.actualization {
            background: linear-gradient(135deg, #43e97b, #38f9d7);
        }

        .skill-section-content {
            flex: 1;
        }

        .skill-section-content h4 {
            font-size: 1.1rem;
            font-weight: 700;
            color: #1f2937;
            margin-bottom: 0.25rem;
        }

        .skill-section-subtitle {
            font-size: 0.85rem;
            color: #9ca3af;
            margin-bottom: 0.75rem;
        }

        .skill-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .skill-list li {
            padding: 0.5rem 0;
            color: #4b5563;
            font-size: 0.95rem;
            line-height: 1.5;
            position: relative;
            padding-right: 1.25rem;
        }

        .skill-list li::before {
            content: '•';
            position: absolute;
            right: 0;
            color: #667eea;
            font-weight: 700;
            font-size: 1.2rem;
        }

        /* Info Note */
        .info-note {
            background: white;
            border-radius: 16px;
            padding: 1.75rem;
            display: flex;
            gap: 1.25rem;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
            border-right: 4px solid #3b82f6;
        }

        .info-icon {
            font-size: 2rem;
            flex-shrink: 0;
        }

        .info-content h4 {
            font-size: 1.1rem;
            font-weight: 700;
            color: #1f2937;
            margin-bottom: 0.5rem;
        }

        .info-content p {
            color: #6b7280;
            line-height: 1.7;
            margin: 0;
        }

        /* Animations */
        .animate-fade-in {
            opacity: 0;
            transform: translateY(20px);
            transition: opacity 0.6s ease, transform 0.6s ease;
        }

        .animate-fade-in.visible {
            opacity: 1;
            transform: translateY(0);
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .results-container {
                padding: 1rem;
            }

            .success-banner {
                padding: 2rem 1.5rem;
            }

            .success-title {
                font-size: 1.5rem;
            }

            .success-subtitle {
                font-size: 1rem;
            }

            .chart-grid {
                grid-template-columns: 1fr;
                gap: 1.5rem;
            }

            .panel-body-modern {
                padding: 1.5rem;
            }

            .header-content h3 {
                font-size: 1.25rem;
            }

            .job-groups-grid {
                grid-template-columns: 1fr;
            }

            .skill-plans-grid {
                grid-template-columns: 1fr;
            }

            .section-header h2 {
                font-size: 1.5rem;
            }

            .chart-container-large {
                height: 300px;
            }
        }

        @@media print {
            body {
                background: white;
            }

            .btn-download {
                display: none;
            }
        }
    </style>
}

@RenderBody()
