    document.addEventListener('DOMContentLoaded', function() {
        // OTP Input Management
        const form = document.querySelector('[data-otp-form]');
        const container = document.querySelector('[data-otp-container]');
        const inputs = container ? Array.from(container.querySelectorAll('[data-otp-input]')) : [];
        const hiddenInput = document.getElementById('VerificationCode');
        const resendButton = document.getElementById('resendButton');
        const timerElement = document.querySelector('.auth-code__timer');
        const timerValue = document.getElementById('timerValue');

        if (!form || !inputs.length || !hiddenInput) {
            console.error('OTP form elements not found');
            return;
        }

        console.log('OTP inputs initialized:', inputs.length);

        const updateHidden = () => {
            hiddenInput.value = inputs.map(input => input.value).join('');
            console.log('Hidden input updated:', hiddenInput.value);
        };

        const focusNext = (index) => {
            if (index < inputs.length - 1) {
                setTimeout(() => {
                    inputs[index + 1].focus();
                    inputs[index + 1].select();
                    console.log('Focused next input:', index + 1);
                }, 10);
            }
        };

        const focusPrev = (index) => {
            if (index > 0) {
                setTimeout(() => {
                    inputs[index - 1].focus();
                    inputs[index - 1].select();
                    console.log('Focused prev input:', index - 1);
                }, 10);
            }
        };

        const handlePaste = (e, index) => {
            e.preventDefault();
            const paste = (e.clipboardData || window.clipboardData).getData('text');
            const digits = paste.replace(/\D/g, '').split('');
            
            console.log('Pasted digits:', digits);
            
            digits.forEach((digit, i) => {
                const targetIndex = index + i;
                if (targetIndex < inputs.length) {
                    inputs[targetIndex].value = digit;
                }
            });
            
            updateHidden();
            const lastIndex = Math.min(index + digits.length - 1, inputs.length - 1);
            setTimeout(() => {
                inputs[lastIndex].focus();
            }, 10);

            // Check if all inputs are filled
            if (inputs.every(inp => inp.value)) {
                console.log('All inputs filled, auto-submitting...');
                setTimeout(() => form.submit(), 500);
            }
        };

        inputs.forEach((input, index) => {
            // Clear previous value
            input.value = '';

            // Input event - handles typing
            input.addEventListener('input', (e) => {
                // Remove any non-digit characters
                let value = e.target.value.replace(/\D/g, '');
                
                // If multiple digits pasted, take only first one
                if (value.length > 1) {
                    value = value.charAt(0);
                }
                
                e.target.value = value;
                console.log('Input ' + index + ' value:', value);
                
                // Move to next input if digit entered
                if (value.length === 1) {
                    updateHidden();
                    focusNext(index);
                    
                    // Check if all inputs are filled for auto-submit
                    if (inputs.every(inp => inp.value)) {
                        console.log('All inputs filled, auto-submitting...');
                        setTimeout(() => {
                            updateHidden();
                            form.submit();
                        }, 300);
                    }
                } else {
                    updateHidden();
                }
            });

            // Keydown event - handles backspace and arrows
            input.addEventListener('keydown', (e) => {
                // Backspace: if empty, go to previous
                if (e.key === 'Backspace') {
                    if (!input.value) {
                        e.preventDefault();
                        focusPrev(index);
                    }
                }
                // Arrow Left
                else if (e.key === 'ArrowLeft') {
                    e.preventDefault();
                    focusPrev(index);
                }
                // Arrow Right  
                else if (e.key === 'ArrowRight') {
                    e.preventDefault();
                    focusNext(index);
                }
                // Allow only digits
                else if (e.key.length === 1 && !/[0-9]/.test(e.key)) {
                    e.preventDefault();
                }
            });

            // Paste event
            input.addEventListener('paste', (e) => handlePaste(e, index));

            // Focus event - select all
            input.addEventListener('focus', (e) => {
                e.target.select();
            });

            // Click event - select all
            input.addEventListener('click', (e) => {
                e.target.select();
            });
        });

        // Auto-focus first input
        console.log('Auto-focusing first input...');
        setTimeout(() => {
            inputs[0].focus();
            inputs[0].select();
        }, 300);

        // Timer Management
        if (timerElement && resendButton && timerValue) {
            const expirationAttr = timerElement.getAttribute('data-expiration');
            
            if (!expirationAttr) {
                markExpired();
            } else {
                const expiration = new Date(expirationAttr).getTime();
                
                if (isNaN(expiration)) {
                    markExpired();
                } else {
                    const updateTimer = () => {
                        const now = Date.now();
                        const remaining = Math.max(0, Math.floor((expiration - now) / 1000));
                        timerValue.textContent = remaining;
                        
                        if (remaining <= 0) {
                            clearInterval(interval);
                            markExpired();
                        }
                    };

                    updateTimer();
                    const interval = setInterval(updateTimer, 1000);
                }
            }
        }

        function markExpired() {
            if (resendButton) resendButton.removeAttribute('disabled');
            if (timerElement) timerElement.classList.add('auth-code__timer--expired');
            if (timerValue) timerValue.textContent = '0';
        }

        // Form submission
        form.addEventListener('submit', function(e) {
            updateHidden();
            const button = form.querySelector('.auth-button[type="submit"]');
            if (button && form.checkValidity()) {
                button.classList.add('auth-button--loading');
                button.disabled = true;
            }
        });
    });
</script>

