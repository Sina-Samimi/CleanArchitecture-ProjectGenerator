@model FinancialSettingsViewModel
@{
    ViewData["Title"] ??= "تنظیمات مالی";
    ViewData["Subtitle"] ??= "تعریف سهم مدرس، مالیات و کارمزدهای فروش";

    var teacherPackageShare = Model.TeacherPackageSharePercentage;
    var liveEventShare = Model.TeacherLiveEventSharePercentage;
    var vatPercent = Model.ValueAddedTaxPercentage;
    var platformCommission = Model.PlatformCommissionPercentage;
    var affiliateCommission = Model.AffiliateCommissionPercentage;
    var totalPlatformFees = platformCommission + affiliateCommission;
    var platformFeeProgress = System.Math.Clamp((double)totalPlatformFees, 0d, 100d);
}

@section Breadcrumb {
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">داشبورد</a></li>
    <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
}

@await Html.PartialAsync("_StatusMessage")

<div class="row g-4 align-items-stretch">
    <div class="col-12 col-xl-8">
        <form asp-area="Admin" asp-controller="FinancialSettings" asp-action="Index" method="post" class="card h-100" novalidate>
            <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="card-title h4 mb-1">مدیریت مقادیر مالی</h2>
                    <p class="card-subtitle text-muted mb-0">درصدهای پیش‌فرض تسویه حساب با مدرسین و کارمزدهای پلتفرم را از این بخش کنترل کنید.</p>
                </div>
                <span class="badge bg-light text-primary">به‌روز رسانی سریع</span>
            </div>
            <div class="card-body">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="row g-4">
                    <div class="col-md-6">
                        <label asp-for="TeacherPackageSharePercentage" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="TeacherPackageSharePercentage" class="form-control text-start" type="number" inputmode="decimal" min="0" max="100" step="0.01" dir="ltr" />
                            <span class="input-group-text">%</span>
                        </div>
                        <span class="form-text text-muted">درصدی که از فروش پکیج‌های ضبط‌شده به مدرس پرداخت می‌شود.</span>
                        <span asp-validation-for="TeacherPackageSharePercentage" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="TeacherLiveEventSharePercentage" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="TeacherLiveEventSharePercentage" class="form-control text-start" type="number" inputmode="decimal" min="0" max="100" step="0.01" dir="ltr" />
                            <span class="input-group-text">%</span>
                        </div>
                        <span class="form-text text-muted">سهم مدرس از فروش رویدادهای زنده، وبینارها یا دوره‌های لایو.</span>
                        <span asp-validation-for="TeacherLiveEventSharePercentage" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ValueAddedTaxPercentage" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="ValueAddedTaxPercentage" class="form-control text-start" type="number" inputmode="decimal" min="0" max="100" step="0.01" dir="ltr" />
                            <span class="input-group-text">%</span>
                        </div>
                        <span class="form-text text-muted">درصد مالیات بر ارزش افزوده که روی مبلغ نهایی سفارش اضافه می‌شود.</span>
                        <span asp-validation-for="ValueAddedTaxPercentage" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="PlatformCommissionPercentage" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="PlatformCommissionPercentage" class="form-control text-start" type="number" inputmode="decimal" min="0" max="100" step="0.01" dir="ltr" />
                            <span class="input-group-text">%</span>
                        </div>
                        <span class="form-text text-muted">کارمزدی که پلتفرم به عنوان هزینه زیرساخت و پشتیبانی از هر فروش کسر می‌کند.</span>
                        <span asp-validation-for="PlatformCommissionPercentage" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="AffiliateCommissionPercentage" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="AffiliateCommissionPercentage" class="form-control text-start" type="number" inputmode="decimal" min="0" max="100" step="0.01" dir="ltr" />
                            <span class="input-group-text">%</span>
                        </div>
                        <span class="form-text text-muted">سهم همکاران فروش یا بازاریابان که از هر تراکنش پرداخت می‌شود.</span>
                        <span asp-validation-for="AffiliateCommissionPercentage" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="card-footer d-flex justify-content-between align-items-center">
                <div class="text-muted small">مقادیر ذخیره‌شده فوراً در محاسبات فروش اعمال خواهند شد.</div>
                <button type="submit" class="btn btn-primary px-4">
                    <i class="bi bi-save me-1"></i>
                    ذخیره تنظیمات
                </button>
            </div>
        </form>
    </div>
    <div class="col-12 col-xl-4">
        <div class="card h-100">
            <div class="card-header">
                <h2 class="card-title h5 mb-1">نمای کلی وضعیت</h2>
                <p class="card-subtitle text-muted mb-0">بررسی سریع نسبت سهم مدرس و کارمزدها.</p>
            </div>
            <div class="card-body d-flex flex-column gap-4">
                <div>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-muted small">مجموع کارمزدهای پلتفرم</span>
                        <span class="fw-semibold text-primary">@totalPlatformFees.ToString("0.##")%</span>
                    </div>
                    <div class="progress" role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow="@platformFeeProgress">
                        <div class="progress-bar bg-primary" style="width:@platformFeeProgress%"></div>
                    </div>
                    <div class="text-muted small mt-2">ترکیبی از کارمزد پلتفرم و کمیسیون همکاری در فروش.</div>
                </div>

                <div class="p-3 bg-light rounded-3">
                    <div class="d-flex justify-content-between">
                        <span class="text-muted small">سهم مدرس (پکیج‌ها)</span>
                        <span class="fw-semibold">@teacherPackageShare.ToString("0.##")%</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span class="text-muted small">سهم مدرس (رویدادهای زنده)</span>
                        <span class="fw-semibold">@liveEventShare.ToString("0.##")%</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span class="text-muted small">مالیات بر ارزش افزوده</span>
                        <span class="fw-semibold">@vatPercent.ToString("0.##")%</span>
                    </div>
                </div>

                <div>
                    <h3 class="h6 mb-3">پیشنهادهای اجرایی</h3>
                    <ul class="list-unstyled mb-0 small text-muted">
                        <li class="mb-2"><i class="bi bi-check-circle text-success me-2"></i>در صورت افزایش هزینه‌های عملیاتی، ابتدا کارمزد پلتفرم را تنظیم کنید.</li>
                        <li class="mb-2"><i class="bi bi-check-circle text-success me-2"></i>سهم مدرس رویدادهای زنده معمولاً بالاتر از دوره‌های ضبط‌شده در نظر گرفته می‌شود.</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>مالیات بر ارزش افزوده به صورت خودکار به قیمت نهایی سفارش اضافه می‌شود.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
