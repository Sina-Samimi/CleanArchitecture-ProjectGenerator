@model DeleteUserViewModel
@{
    Layout = null;
    var displayName = string.IsNullOrWhiteSpace(Model.FullName) ? Model.Email : Model.FullName;
}

<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content user-form-modal">
        <div class="modal-header">
            <div>
                <h5 class="modal-title">حذف کاربر</h5>
                <p class="modal-subtitle">با حذف کاربر، دسترسی او مسدود و اطلاعاتش به صورت نرم حذف می‌شود.</p>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="بستن"></button>
        </div>
        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="user-form" data-user-form>
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="FullName" />
            <div class="modal-body">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <p class="mb-0">آیا از حذف «@displayName» اطمینان دارید؟ این عملیات قابل بازگشت نیست.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-link" data-bs-dismiss="modal">انصراف</button>
                <button type="submit" class="btn btn-danger">تأیید حذف</button>
            </div>
        </form>
    </div>
</div>
