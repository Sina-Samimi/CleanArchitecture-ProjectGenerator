@model EditPageAccessViewModel
@{
    var permissions = Model.AvailablePermissions?.ToList() ?? new System.Collections.Generic.List<PageAccessPermissionOptionViewModel>();
    var selected = new System.Collections.Generic.HashSet<string>(Model.SelectedPermissions ?? new System.Collections.Generic.List<string>(), System.StringComparer.OrdinalIgnoreCase);
}

<div class="modal fade" id="pageAccessEditModal" tabindex="-1" aria-labelledby="pageAccessEditModalLabel" aria-hidden="true" data-page-access-modal>
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="pageAccessEditModalLabel">ویرایش دسترسی صفحه – @Model.DisplayName</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="بستن"></button>
            </div>
            <div class="modal-body">
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                <form asp-area="Admin"
                      asp-controller="PageAccess"
                      asp-action="Save"
                      method="post"
                      data-page-access-form>
                    @Html.AntiForgeryToken()

                    <input type="hidden" name="Area" value="@Model.Area" />
                    <input type="hidden" name="Controller" value="@Model.Controller" />
                    <input type="hidden" name="Action" value="@Model.Action" />

                    <div class="mb-3">
                        <label for="pagePermissions" class="form-label">مجوزهای مجاز برای این صفحه</label>
                        <select id="pagePermissions" name="Permissions" class="form-select" multiple size="10">
                            @foreach (var option in permissions)
                            {
                                var label = option.DisplayName + (option.IsCustom ? " (سفارشی)" : string.Empty);
                                <option value="@option.Key" selected="@(selected.Contains(option.Key) ? "selected" : null)">@label</option>
                            }
                        </select>
                        <div class="form-text">برای انتخاب چند مجوز از کلیدهای Ctrl یا Shift استفاده کنید.</div>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">انصراف</button>
                        <button type="submit" class="btn btn-primary">ذخیره تغییرات</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
