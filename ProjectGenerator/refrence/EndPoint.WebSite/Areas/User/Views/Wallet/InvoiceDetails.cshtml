@model UserInvoiceDetailViewModel
@{
    ViewData["Title"] ??= $"جزئیات فاکتور {Model.InvoiceNumber}";
    var currency = string.IsNullOrWhiteSpace(Model.Currency) ? "IRT" : Model.Currency;
    var outstanding = Model.OutstandingAmount;
    var paidAmount = Model.PaidAmount;
    var issueDate = Model.IssueDate.ToPersianDateTimeString();
    var dueDate = Model.DueDate?.ToPersianDateTimeString();
    var statusClass = outstanding switch
    {
        var amount when amount <= 0 => "bg-success-subtle text-success",
        _ => "bg-warning-subtle text-warning"
    };
}

<div class="wallet-invoice-detail" data-wallet-invoice>
    <div class="d-flex flex-column flex-lg-row justify-content-between align-items-start gap-3 mb-4">
        <div>
            <h1 class="h3 mb-2">فاکتور @Model.InvoiceNumber</h1>
            <p class="text-muted mb-1">@Model.Title</p>
            <span class="badge bg-primary-subtle text-primary">@Model.Status</span>
        </div>
        <div class="d-flex align-items-center gap-2 w-100 w-lg-auto">
            <div class="text-end flex-grow-1">
                <div class="text-muted small">مبلغ قابل پرداخت</div>
                <div class="fs-4 fw-bold @(outstanding > 0 ? "text-danger" : "text-success")">@outstanding.ToString("N0") @currency</div>
                <div class="text-muted small">مبلغ پرداخت‌شده: @paidAmount.ToString("N0") @currency</div>
            </div>
            <a class="btn btn-outline-secondary" asp-action="Index">
                <i class="bi bi-arrow-right ms-2"></i>
                بازگشت به کیف پول
            </a>
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.Description) || Model.ExternalReference is not null)
    {
        <div class="alert alert-info bg-opacity-25 border-0">
            <div class="fw-semibold mb-1">توضیحات فاکتور</div>
            @if (!string.IsNullOrWhiteSpace(Model.Description))
            {
                <p class="mb-1">@Model.Description</p>
            }
            @if (!string.IsNullOrWhiteSpace(Model.ExternalReference))
            {
                <p class="mb-0 text-muted small">شناسه پیگیری: @Model.ExternalReference</p>
            }
        </div>
    }

    <div class="row g-4 mb-4">
        <div class="col-12 col-xl-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h2 class="h5 mb-3">جزئیات زمانی</h2>
                    <dl class="row mb-0 small text-muted">
                        <dt class="col-sm-4">تاریخ صدور</dt>
                        <dd class="col-sm-8 text-dark fw-semibold">@issueDate</dd>
                        <dt class="col-sm-4">تاریخ سررسید</dt>
                        <dd class="col-sm-8 text-dark fw-semibold">@(dueDate ?? "-" )</dd>
                        <dt class="col-sm-4">وضعیت پرداخت</dt>
                        <dd class="col-sm-8">
                            <span class="badge @statusClass">@Model.Status</span>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-12 col-xl-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h2 class="h5 mb-3">خلاصه مالی</h2>
                    <ul class="list-unstyled mb-0 small text-muted">
                        <li class="d-flex justify-content-between mb-2">
                            <span>جمع کل آیتم‌ها</span>
                            <strong class="text-dark">@Model.Subtotal.ToString("N0") @currency</strong>
                        </li>
                        <li class="d-flex justify-content-between mb-2">
                            <span>تخفیف‌ها</span>
                            <strong class="text-dark">@Model.DiscountTotal.ToString("N0") @currency</strong>
                        </li>
                        <li class="d-flex justify-content-between mb-2">
                            <span>مالیات</span>
                            <strong class="text-dark">@Model.TaxAmount.ToString("N0") @currency</strong>
                        </li>
                        <li class="d-flex justify-content-between mb-2">
                            <span>تعدیلات</span>
                            <strong class="text-dark">@Model.AdjustmentAmount.ToString("N0") @currency</strong>
                        </li>
                        <li class="d-flex justify-content-between mb-2 border-top pt-2">
                            <span>مبلغ نهایی فاکتور</span>
                            <strong class="text-dark">@Model.GrandTotal.ToString("N0") @currency</strong>
                        </li>
                        <li class="d-flex justify-content-between mb-2">
                            <span>پرداخت‌شده</span>
                            <strong class="text-dark">@Model.PaidAmount.ToString("N0") @currency</strong>
                        </li>
                        <li class="d-flex justify-content-between">
                            <span>باقیمانده</span>
                            <strong class="@(outstanding > 0 ? "text-danger" : "text-success")">@outstanding.ToString("N0") @currency</strong>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="h5 mb-0">آیتم‌های فاکتور</h2>
            </div>
            @if (Model.Items.Count == 0)
            {
                <div class="alert alert-secondary mb-0" role="alert">
                    آیتمی برای این فاکتور ثبت نشده است.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead>
                            <tr>
                                <th>عنوان</th>
                                <th>نوع</th>
                                <th>تعداد</th>
                                <th>قیمت واحد</th>
                                <th>تخفیف</th>
                                <th>مبلغ کل</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>
                                        <div class="fw-semibold">@item.Name</div>
                                        @if (!string.IsNullOrWhiteSpace(item.Description))
                                        {
                                            <div class="text-muted small">@item.Description</div>
                                        }
                                        @if (item.Attributes.Count > 0)
                                        {
                                            <ul class="list-inline small text-muted mb-0">
                                                @foreach (var attr in item.Attributes)
                                                {
                                                    <li class="list-inline-item">@attr.Key: <strong>@attr.Value</strong></li>
                                                }
                                            </ul>
                                        }
                                    </td>
                                    <td>@item.ItemType</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.UnitPrice.ToString("N0") @currency</td>
                                    <td>@(item.DiscountAmount?.ToString("N0") ?? "0") @currency</td>
                                    <td class="fw-semibold">@item.Total.ToString("N0") @currency</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="h5 mb-0">تراکنش‌های مرتبط</h2>
            </div>
            @if (Model.Transactions.Count == 0)
            {
                <div class="alert alert-secondary mb-0" role="alert">
                    تراکنشی برای این فاکتور ثبت نشده است.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead>
                            <tr>
                                <th>مبلغ</th>
                                <th>روش پرداخت</th>
                                <th>وضعیت</th>
                                <th>شناسه مرجع</th>
                                <th>توضیحات</th>
                                <th>تاریخ</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var transaction in Model.Transactions)
                            {
                                <tr>
                                    <td class="fw-semibold">@transaction.Amount.ToString("N0") @currency</td>
                                    <td>@transaction.Method</td>
                                    <td><span class="badge bg-light text-dark">@transaction.Status</span></td>
                                    <td>
                                        <div class="fw-semibold">@transaction.Reference</div>
                                        @if (!string.IsNullOrWhiteSpace(transaction.GatewayName))
                                        {
                                            <div class="text-muted small">@transaction.GatewayName</div>
                                        }
                                    </td>
                                    <td class="text-muted small">@transaction.Description</td>
                                    <td>@transaction.OccurredAt.ToPersianDateTimeString()</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
