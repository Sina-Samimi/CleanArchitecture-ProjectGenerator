@using System.Globalization
@model SellerPaymentsViewModel
@{
    ViewData["Title"] = "درآمدها و پرداخت‌ها";
    ViewData["Sidebar:ActiveTab"] = "payments";

    var culture = new CultureInfo("fa-IR");

    string FormatMoney(decimal value) => string.Format(culture, "{0:N0} تومان", value);
    string FormatNumber(int value) => value.ToString("N0", culture);
    string FormatDate(DateTimeOffset? value) => value?.ToPersianDateString() ?? "-";
    string FormatDateTime(DateTimeOffset value) => value.ToPersianDateTimeString();
    
    string StatusBadgeClass(string status) => status switch
    {
        "Paid" => "badge bg-success-subtle text-success-emphasis",
        "Pending" => "badge bg-warning-subtle text-warning-emphasis",
        "PartiallyPaid" => "badge bg-info-subtle text-info-emphasis",
        "Overdue" => "badge bg-danger-subtle text-danger-emphasis",
        "Cancelled" => "badge bg-secondary-subtle text-secondary-emphasis",
        _ => "badge bg-secondary-subtle text-secondary-emphasis"
    };
    
    string StatusLabel(string status) => status switch
    {
        "Paid" => "پرداخت شده",
        "Pending" => "در انتظار پرداخت",
        "PartiallyPaid" => "نیمه پرداخت",
        "Overdue" => "پس‌افتاده",
        "Cancelled" => "لغو شده",
        _ => status
    };
}

@section Breadcrumb {
    <li class="breadcrumb-item"><a asp-area="Seller" asp-controller="Dashboard" asp-action="Index">داشبورد</a></li>
    <li class="breadcrumb-item active" aria-current="page">درآمدها و پرداخت‌ها</li>
}

@await Html.PartialAsync("_StatusMessage")

<div class="seller-payments">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-2">درآمدها و پرداخت‌ها</h1>
            <p class="text-muted mb-0">گزارش کامل از درآمدها و پرداخت‌های شما</p>
        </div>
        <div class="text-muted small">
            آخرین به‌روزرسانی: @Model.GeneratedAt.ToPersianDateTimeString()
        </div>
    </div>

    <!-- کارت‌های آمار کلی -->
    <div class="row g-4 mb-4">
        <!-- کل درآمد -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card border-0 shadow-sm h-100 seller-stat-card">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <div class="seller-stat-card__icon bg-primary-subtle text-primary-emphasis">
                            <i class="bi bi-currency-exchange"></i>
                        </div>
                        <div class="text-end">
                            <div class="seller-stat-card__value">@FormatMoney(Model.TotalRevenue)</div>
                            <div class="seller-stat-card__label">کل درآمد</div>
                        </div>
                    </div>
                    <div class="seller-stat-card__details">
                        <div class="d-flex justify-content-between">
                            <span class="text-success">
                                <i class="bi bi-check-circle"></i> پرداخت شده: @FormatMoney(Model.PaidRevenue)
                            </span>
                        </div>
                        <div class="d-flex justify-content-between mt-2">
                            <span class="text-warning">
                                <i class="bi bi-hourglass-split"></i> در انتظار: @FormatMoney(Model.PendingRevenue)
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- فاکتورهای پرداخت شده -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card border-0 shadow-sm h-100 seller-stat-card">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <div class="seller-stat-card__icon bg-success-subtle text-success-emphasis">
                            <i class="bi bi-check-circle"></i>
                        </div>
                        <div class="text-end">
                            <div class="seller-stat-card__value">@FormatNumber(Model.PaidInvoices)</div>
                            <div class="seller-stat-card__label">پرداخت شده</div>
                        </div>
                    </div>
                    <div class="seller-stat-card__details">
                        <div class="text-muted small">
                            <i class="bi bi-info-circle"></i> از @FormatNumber(Model.TotalInvoices) فاکتور
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- فاکتورهای در انتظار -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card border-0 shadow-sm h-100 seller-stat-card">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <div class="seller-stat-card__icon bg-warning-subtle text-warning-emphasis">
                            <i class="bi bi-hourglass-split"></i>
                        </div>
                        <div class="text-end">
                            <div class="seller-stat-card__value">@FormatNumber(Model.PendingInvoices)</div>
                            <div class="seller-stat-card__label">در انتظار پرداخت</div>
                        </div>
                    </div>
                    <div class="seller-stat-card__details">
                        <div class="text-muted small">
                            <i class="bi bi-info-circle"></i> مبلغ: @FormatMoney(Model.PendingRevenue)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- جدول فاکتورها -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom">
            <h5 class="mb-0">
                <i class="bi bi-receipt text-primary"></i>
                لیست فاکتورها
            </h5>
        </div>
        <div class="card-body">
            @if (Model.Invoices.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>شماره فاکتور</th>
                                <th>عنوان</th>
                                <th>تعداد محصول</th>
                                <th>مبلغ کل</th>
                                <th>پرداخت شده</th>
                                <th>باقیمانده</th>
                                <th>وضعیت</th>
                                <th>تاریخ</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var invoice in Model.Invoices)
                            {
                                <tr>
                                    <td>
                                        <a asp-area="Seller" asp-controller="Orders" asp-action="Index" class="text-decoration-none fw-semibold">
                                            @invoice.InvoiceNumber
                                        </a>
                                    </td>
                                    <td>@invoice.Title</td>
                                    <td>
                                        <span class="badge bg-info-subtle text-info-emphasis">
                                            <i class="bi bi-box"></i> @FormatNumber(invoice.ProductCount)
                                        </span>
                                    </td>
                                    <td class="fw-semibold">@FormatMoney(invoice.TotalAmount)</td>
                                    <td>
                                        @if (invoice.PaidAmount > 0)
                                        {
                                            <span class="text-success">
                                                <i class="bi bi-check-circle"></i> @FormatMoney(invoice.PaidAmount)
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (invoice.PendingAmount > 0)
                                        {
                                            <span class="text-warning">
                                                <i class="bi bi-hourglass-split"></i> @FormatMoney(invoice.PendingAmount)
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-success">-</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="@StatusBadgeClass(invoice.Status)">
                                            @StatusLabel(invoice.Status)
                                        </span>
                                    </td>
                                    <td>
                                        <div class="small">
                                            <div>@FormatDate(invoice.IssueDate)</div>
                                            @if (invoice.DueDate.HasValue)
                                            {
                                                <div class="text-muted">
                                                    <i class="bi bi-calendar-event"></i> سررسید: @FormatDate(invoice.DueDate)
                                                </div>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center text-muted py-5">
                    <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                    <p class="mt-3">فاکتوری برای نمایش وجود ندارد</p>
                </div>
            }
        </div>
    </div>
</div>

