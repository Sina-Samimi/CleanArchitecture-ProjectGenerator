@using Attar.WebSite.Areas.Seller.Models
@model SellerProductVariantsViewModel

@{
    var isEditing = Model.Form.Id.HasValue;
    var pageTitle = isEditing ? "ویرایش گزینه" : "افزودن گزینه";
}

@section Head {
    <link rel="stylesheet" href="~/css/seller/product-comments.css" asp-append-version="true" />
}

<div class="seller-product-comments">
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h4 mb-1">گزینه‌های محصول: @Model.ProductName</h1>
                <p class="text-muted mb-0">مدیریت گزینه‌های محصول (ترکیب ویژگی‌ها)</p>
            </div>
            <div>
                <a class="btn btn-outline-primary me-2" asp-area="Seller" asp-controller="ProductVariantAttributes" asp-action="Index" asp-route-productId="@Model.ProductId">
                    <i class="bi bi-tags"></i>
                    مدیریت ویژگی‌ها
                </a>
                <a class="btn btn-outline-secondary" asp-area="Seller" asp-controller="Products" asp-action="Index">
                    <i class="bi bi-arrow-right-short"></i>
                    بازگشت به لیست محصولات
                </a>
            </div>
        </div>
    </div>

    @await Html.PartialAsync("_StatusMessage")

    @if (Model.VariantAttributes.Count == 0)
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i>
            <strong>هشدار:</strong> قبل از ایجاد گزینه، باید ابتدا ویژگی‌های گزینه را تعریف کنید.
            <a asp-area="Seller" asp-controller="ProductVariantAttributes" asp-action="Index" asp-route-productId="@Model.ProductId" class="alert-link">
                افزودن ویژگی گزینه
            </a>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body">
                <h2 class="h5 mb-3">@pageTitle</h2>
                <form asp-area="Seller"
                      asp-controller="ProductVariants"
                      asp-action="@(isEditing ? "Update" : "Create")"
                      asp-route-productId="@Model.ProductId"
                      method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    <input type="hidden" asp-for="Form.Id" />

                    <div class="row g-3 mb-3">
                        @foreach (var variantAttr in Model.VariantAttributes)
                        {
                            <div class="col-12 col-md-6">
                                <label class="form-label">@variantAttr.Name <span class="text-danger">*</span></label>
                                <select class="form-select" name="Form.Options[@variantAttr.Id]" required>
                                    <option value="">-- انتخاب کنید --</option>
                                    @foreach (var option in variantAttr.Options)
                                    {
                                        var isSelected = Model.Form.Options.ContainsKey(variantAttr.Id) && Model.Form.Options[variantAttr.Id] == option;
                                        if (isSelected)
                                        {
                                            <option value="@option" selected="selected">@option</option>
                                        }
                                        else
                                        {
                                            <option value="@option">@option</option>
                                        }
                                    }
                                </select>
                                @if (Model.Form.Options.ContainsKey(variantAttr.Id) && !variantAttr.Options.Contains(Model.Form.Options[variantAttr.Id]))
                                {
                                    <small class="text-danger">گزینه انتخاب شده معتبر نیست.</small>
                                }
                            </div>
                        }
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-12 col-md-3">
                            <label class="form-label" asp-for="Form.Price"></label>
                            <input class="form-control" asp-for="Form.Price" type="number" step="0.01" min="0" placeholder="قیمت گزینه" />
                            <span class="text-danger" asp-validation-for="Form.Price"></span>
                            <small class="form-text text-muted">اگر خالی باشد، از قیمت محصول استفاده می‌شود</small>
                        </div>
                        <div class="col-12 col-md-3">
                            <label class="form-label" asp-for="Form.CompareAtPrice"></label>
                            <input class="form-control" asp-for="Form.CompareAtPrice" type="number" step="0.01" min="0" placeholder="قیمت قبل از تخفیف" />
                            <span class="text-danger" asp-validation-for="Form.CompareAtPrice"></span>
                        </div>
                        <div class="col-12 col-md-2">
                            <label class="form-label" asp-for="Form.StockQuantity"></label>
                            <input class="form-control" asp-for="Form.StockQuantity" type="number" min="0" />
                            <span class="text-danger" asp-validation-for="Form.StockQuantity"></span>
                            <small class="form-text text-muted">موجودی این گزینه</small>
                        </div>
                        <div class="col-12 col-md-2">
                            <label class="form-label" asp-for="Form.Sku"></label>
                            <input class="form-control" asp-for="Form.Sku" placeholder="SKU" />
                            <span class="text-danger" asp-validation-for="Form.Sku"></span>
                        </div>
                        <div class="col-12 col-md-2">
                            <label class="form-label" asp-for="Form.ImagePath"></label>
                            <input class="form-control" asp-for="Form.ImagePath" placeholder="آدرس تصویر" />
                            <span class="text-danger" asp-validation-for="Form.ImagePath"></span>
                        </div>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-12">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Form.IsActive" />
                                <label class="form-check-label" asp-for="Form.IsActive">
                                    فعال
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi @(isEditing ? "bi-arrow-repeat" : "bi-plus-lg")"></i>
                            @(isEditing ? "ذخیره تغییرات" : "افزودن گزینه")
                        </button>
                        @if (isEditing)
                        {
                            <a class="btn btn-secondary" asp-area="Seller" asp-controller="ProductVariants" asp-action="Index" asp-route-productId="@Model.ProductId">
                                انصراف
                            </a>
                        }
                    </div>
                </form>
            </div>
        </div>
    }

    @if (Model.Variants.Count == 0)
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <div class="display-5 text-muted mb-3"><i class="bi bi-list-ul"></i></div>
                <h2 class="h5">هنوز گزینه‌ای ثبت نشده است</h2>
                <p class="text-muted mb-0">برای افزودن گزینه جدید، فرم بالا را تکمیل کنید.</p>
            </div>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h2 class="h5 mb-0">لیست گزینه‌ها (@Model.Variants.Count گزینه)</h2>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>گزینه‌ها</th>
                                <th>قیمت</th>
                                <th>موجودی</th>
                                <th>SKU</th>
                                <th>وضعیت</th>
                                <th>عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var variant in Model.Variants)
                            {
                                var isHighlighted = Model.HighlightedVariantId == variant.Id;
                                <tr class="@(isHighlighted ? "table-warning" : "")" data-variant-id="@variant.Id">
                                    <td>
                                        @if (variant.Options.Any())
                                        {
                                            <div class="d-flex flex-wrap gap-1">
                                                @foreach (var option in variant.Options)
                                                {
                                                    var attrName = Model.VariantAttributes.FirstOrDefault(a => a.Id == option.VariantAttributeId)?.Name ?? "نامشخص";
                                                    <span class="badge bg-info">
                                                        <strong>@attrName:</strong> @option.Value
                                                    </span>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">بدون گزینه</span>
                                        }
                                    </td>
                                    <td>
                                        @if (variant.Price.HasValue)
                                        {
                                            <strong>@variant.Price.Value.ToString("N0") تومان</strong>
                                            @if (variant.CompareAtPrice.HasValue)
                                            {
                                                <br />
                                                <small class="text-muted text-decoration-line-through">@variant.CompareAtPrice.Value.ToString("N0") تومان</small>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">قیمت محصول</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge @(variant.StockQuantity > 0 ? "bg-success" : "bg-danger")">
                                            @variant.StockQuantity عدد
                                        </span>
                                    </td>
                                    <td>@(variant.Sku ?? "-")</td>
                                    <td>
                                        @if (variant.IsActive)
                                        {
                                            <span class="badge bg-success">فعال</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">غیرفعال</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a class="btn btn-outline-primary"
                                               asp-area="Seller"
                                               asp-controller="ProductVariants"
                                               asp-action="Index"
                                               asp-route-productId="@Model.ProductId"
                                               asp-route-variantId="@variant.Id">
                                                <i class="bi bi-pencil"></i>
                                                ویرایش
                                            </a>
                                            <form asp-area="Seller"
                                                  asp-controller="ProductVariants"
                                                  asp-action="Delete"
                                                  asp-route-productId="@Model.ProductId"
                                                  asp-route-variantId="@variant.Id"
                                                  method="post"
                                                  class="d-inline"
                                                  onsubmit="return confirm('آیا از حذف این گزینه اطمینان دارید؟');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-danger">
                                                    <i class="bi bi-trash"></i>
                                                    حذف
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
