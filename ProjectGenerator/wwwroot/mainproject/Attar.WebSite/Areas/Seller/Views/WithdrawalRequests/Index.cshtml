@using System.Globalization
@using Attar.Domain.Enums
@model WithdrawalRequestsViewModel
@{
    ViewData["Title"] = "درخواست‌های برداشت";
    ViewData["Sidebar:ActiveTab"] = "withdrawals";

    var culture = new CultureInfo("fa-IR");

    string FormatMoney(decimal value) => string.Format(culture, "{0:N0} تومان", value);
    string FormatDate(DateTimeOffset value) => value.ToPersianDateString();
    string FormatDateTime(DateTimeOffset value) => value.ToPersianDateTimeString();

    string StatusBadgeClass(WithdrawalRequestStatus status) => status switch
    {
        WithdrawalRequestStatus.Pending => "badge bg-warning-subtle text-warning-emphasis",
        WithdrawalRequestStatus.Approved => "badge bg-info-subtle text-info-emphasis",
        WithdrawalRequestStatus.Processed => "badge bg-success-subtle text-success-emphasis",
        WithdrawalRequestStatus.Rejected => "badge bg-danger-subtle text-danger-emphasis",
        WithdrawalRequestStatus.Cancelled => "badge bg-secondary-subtle text-secondary-emphasis",
        _ => "badge bg-secondary-subtle text-secondary-emphasis"
    };

    string StatusLabel(WithdrawalRequestStatus status) => status switch
    {
        WithdrawalRequestStatus.Pending => "در انتظار بررسی",
        WithdrawalRequestStatus.Approved => "تایید شده",
        WithdrawalRequestStatus.Processed => "پرداخت شده",
        WithdrawalRequestStatus.Rejected => "رد شده",
        WithdrawalRequestStatus.Cancelled => "لغو شده",
        _ => status.ToString()
    };
}

@section Breadcrumb {
    <li class="breadcrumb-item"><a asp-area="Seller" asp-controller="Dashboard" asp-action="Index">داشبورد</a></li>
    <li class="breadcrumb-item active" aria-current="page">درخواست‌های برداشت</li>
}

@await Html.PartialAsync("_StatusMessage")

<div class="withdrawal-requests">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-2">درخواست‌های برداشت</h1>
            <p class="text-muted mb-0">مدیریت درخواست‌های برداشت از کیف پول</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                ثبت درخواست جدید
            </a>
        </div>
    </div>

    <!-- کارت درآمد و برداشت -->
    <div class="row g-4 mb-4">
        <!-- درآمد کل -->
        <div class="col-12 col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <h6 class="mb-1">درآمد کل</h6>
                            <p class="text-muted mb-0 small">سهم فروشنده از محصولات</p>
                        </div>
                        <div class="text-end">
                            <div class="h5 mb-0 text-primary">@FormatMoney(Model.TotalRevenue)</div>
                            <div class="text-muted small">@Model.Currency</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- برداشت شده -->
        <div class="col-12 col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <h6 class="mb-1">برداشت شده</h6>
                            <p class="text-muted mb-0 small">مجموع برداشت‌های انجام شده</p>
                        </div>
                        <div class="text-end">
                            <div class="h5 mb-0 text-warning">@FormatMoney(Model.TotalWithdrawn)</div>
                            <div class="text-muted small">@Model.Currency</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- مانده قابل برداشت -->
        <div class="col-12 col-md-4">
            <div class="card border-0 shadow-sm h-100 border-primary">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <h6 class="mb-1">مانده قابل برداشت</h6>
                            <p class="text-muted mb-0 small">درآمد کل - برداشت شده</p>
                        </div>
                        <div class="text-end">
                            <div class="h4 mb-0 text-success fw-bold">@FormatMoney(Model.AvailableAmount)</div>
                            <div class="text-muted small">@Model.Currency</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- جدول درخواست‌ها -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom">
            <h5 class="mb-0">
                <i class="bi bi-list-ul text-primary"></i>
                لیست درخواست‌های برداشت
            </h5>
        </div>
        <div class="card-body">
            @if (Model.Requests.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>مبلغ</th>
                                <th>اطلاعات بانکی</th>
                                <th>توضیحات</th>
                                <th>وضعیت</th>
                                <th>تاریخ ثبت</th>
                                <th>عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var request in Model.Requests)
                            {
                                <tr>
                                    <td class="fw-semibold">@FormatMoney(request.Amount)</td>
                                    <td>
                                        @if (!string.IsNullOrWhiteSpace(request.BankName))
                                        {
                                            <div><strong>@request.BankName</strong></div>
                                        }
                                        @if (!string.IsNullOrWhiteSpace(request.AccountHolderName))
                                        {
                                            <div class="small text-muted">@request.AccountHolderName</div>
                                        }
                                        @if (!string.IsNullOrWhiteSpace(request.BankAccountNumber))
                                        {
                                            <div class="small text-muted font-monospace">
                                                <i class="bi bi-credit-card"></i> حساب: @request.BankAccountNumber
                                            </div>
                                        }
                                        @if (!string.IsNullOrWhiteSpace(request.CardNumber))
                                        {
                                            <div class="small text-muted font-monospace">
                                                <i class="bi bi-card-text"></i> کارت: @request.CardNumber
                                            </div>
                                        }
                                        @if (!string.IsNullOrWhiteSpace(request.Iban))
                                        {
                                            <div class="small text-muted font-monospace">
                                                <i class="bi bi-bank"></i> شبا: @request.Iban
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrWhiteSpace(request.Description))
                                        {
                                            <div>@request.Description</div>
                                        }
                                        @if (!string.IsNullOrWhiteSpace(request.AdminNotes))
                                        {
                                            <div class="small text-muted mt-1">
                                                <i class="bi bi-info-circle"></i> یادداشت ادمین: @request.AdminNotes
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <span class="@StatusBadgeClass(request.Status)">
                                            @StatusLabel(request.Status)
                                        </span>
                                        @if (request.ProcessedAt.HasValue)
                                        {
                                            <div class="small text-muted mt-1">
                                                <i class="bi bi-calendar-check"></i> @FormatDateTime(request.ProcessedAt.Value)
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <div class="small">@FormatDateTime(request.CreateDate)</div>
                                    </td>
                                    <td>
                                        @if (request.Status == WithdrawalRequestStatus.Pending || request.Status == WithdrawalRequestStatus.Approved)
                                        {
                                            <form asp-action="Cancel" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@request.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('آیا از لغو این درخواست اطمینان دارید؟')">
                                                    <i class="bi bi-x-circle"></i> لغو
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center text-muted py-5">
                    <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                    <p class="mt-3">درخواست برداشتی برای نمایش وجود ندارد</p>
                    <a asp-action="Create" class="btn btn-primary mt-3">
                        <i class="bi bi-plus-circle"></i>
                        ثبت اولین درخواست
                    </a>
                </div>
            }
        </div>
    </div>
</div>

