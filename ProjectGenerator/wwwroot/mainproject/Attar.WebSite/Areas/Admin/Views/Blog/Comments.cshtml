@using Attar.WebSite.Areas.Admin.Models
@model BlogCommentListViewModel
@{
    var comments = Model.Comments?.ToList() ?? new List<BlogCommentItemViewModel>();
    string FormatDate(DateTimeOffset value) => value.ToPersianDateTimeString();
    string StatusLabel(bool isApproved) => isApproved ? "تایید شده" : "در انتظار بررسی";
    string StatusBadge(bool isApproved) => isApproved
        ? "badge bg-success-subtle text-success-emphasis"
        : "badge bg-warning-subtle text-warning-emphasis";
}

@section Head {
    <link rel="stylesheet" href="~/css/admin/blog.css" asp-append-version="true" />
}

@section Breadcrumb {
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">داشبورد</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Blog" asp-action="Index">مدیریت وبلاگ</a></li>
    <li class="breadcrumb-item active" aria-current="page">نظرات</li>
}

@await Html.PartialAsync("_StatusMessage")

<div class="blog-comments-page">
    <div class="blog-comments-page__hero">
        <div>
            <h1 class="blog-comments-page__title">مدیریت نظرات</h1>
            <p class="blog-comments-page__subtitle">رسیدگی به دیدگاه‌های ثبت شده برای «@Model.BlogTitle»</p>
        </div>
        <div class="blog-comments-page__actions">
            <a class="blog-comments-page__button" asp-area="Admin" asp-controller="Blog" asp-action="Index">
                <i class="bi bi-arrow-right"></i>
                بازگشت به لیست
            </a>
            @if (!string.IsNullOrWhiteSpace(Model.BlogSlug))
            {
                <a class="blog-comments-page__button blog-comments-page__button--accent"
                   asp-area=""
                   asp-controller="Blog"
                   asp-action="Details"
                   asp-route-slug="@Model.BlogSlug"
                   target="_blank">
                    <i class="bi bi-box-arrow-up-right"></i>
                    مشاهده صفحه بلاگ
                </a>
            }
        </div>
    </div>

    <div class="metric-grid blog-comments-metrics">
        <article class="metric-card metric-card--primary">
            <div class="metric-card__top">
                <div class="metric-card__heading">
                    <span class="metric-card__title">کل دیدگاه‌ها</span>
                    <span class="metric-card__subtitle">تمامی دیدگاه‌های ثبت شده</span>
                </div>
                <div class="metric-card__meta">
                    <span class="metric-card__badge metric-card__badge--neutral">@Model.TotalCount</span>
                    <span class="metric-card__icon"><i class="bi bi-chat-dots"></i></span>
                </div>
            </div>
            <div class="metric-card__value">@Model.TotalCount</div>
            <div class="metric-card__hint">شامل تایید شده و در انتظار بررسی</div>
        </article>

        <article class="metric-card metric-card--success">
            <div class="metric-card__top">
                <div class="metric-card__heading">
                    <span class="metric-card__title">تایید شده</span>
                    <span class="metric-card__subtitle">دیدگاه‌های منتشر شده</span>
                </div>
                <div class="metric-card__meta">
                    <span class="metric-card__badge metric-card__badge--positive">@Model.ApprovedCount</span>
                    <span class="metric-card__icon"><i class="bi bi-check-circle"></i></span>
                </div>
            </div>
            <div class="metric-card__value">@Model.ApprovedCount</div>
            <div class="metric-card__hint">دیدگاه‌هایی که در سایت نمایش داده می‌شوند</div>
        </article>

        <article class="metric-card metric-card--warning">
            <div class="metric-card__top">
                <div class="metric-card__heading">
                    <span class="metric-card__title">در انتظار بررسی</span>
                    <span class="metric-card__subtitle">نیازمند تایید یا رد</span>
                </div>
                <div class="metric-card__meta">
                    <span class="metric-card__badge metric-card__badge--warning">@Model.PendingCount</span>
                    <span class="metric-card__icon"><i class="bi bi-hourglass-split"></i></span>
                </div>
            </div>
            <div class="metric-card__value">@Model.PendingCount</div>
            <div class="metric-card__hint">برای مدیریت سریع‌تر دیدگاه‌ها</div>
        </article>
    </div>

    <div class="card blog-comments-card">
        <div class="card-header blog-comments-card__header">
            <div>
                <h2 class="blog-comments-card__title">لیست دیدگاه‌ها</h2>
                <span class="blog-comments-card__subtitle">@comments.Count دیدگاه موجود است</span>
            </div>
        </div>
        <div class="card-body p-0">
            @if (comments.Count == 0)
            {
                <div class="blog-comments-card__empty">
                    <i class="bi bi-emoji-neutral"></i>
                    <p>هنوز دیدگاهی برای این بلاگ ثبت نشده است.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table align-middle mb-0 blog-comments-table">
                        <thead>
                            <tr>
                                <th scope="col">کاربر</th>
                                <th scope="col">متن دیدگاه</th>
                                <th scope="col">پاسخ به</th>
                                <th scope="col">وضعیت</th>
                                <th scope="col">تاریخ</th>
                                <th scope="col" class="text-end">عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var comment in comments)
                            {
                                <tr>
                                    <td data-label="کاربر">
                                        <div class="blog-comments-table__author">
                                            <span class="blog-comments-table__author-name">@comment.AuthorName</span>
                                            @if (!string.IsNullOrWhiteSpace(comment.AuthorEmail))
                                            {
                                                <span class="blog-comments-table__author-email">@comment.AuthorEmail</span>
                                            }
                                        </div>
                                    </td>
                                    <td data-label="متن دیدگاه">
                                        <div class="blog-comments-table__content">@comment.Content</div>
                                    </td>
                                    <td data-label="پاسخ به">
                                        @if (comment.ParentId.HasValue)
                                        {
                                            <div class="blog-comments-table__parent">
                                                <span class="blog-comments-table__parent-author">@comment.ParentAuthorName</span>
                                                @if (!string.IsNullOrWhiteSpace(comment.ParentExcerpt))
                                                {
                                                    <small class="blog-comments-table__parent-excerpt">@comment.ParentExcerpt</small>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">دیدگاه اصلی</span>
                                        }
                                    </td>
                                    <td data-label="وضعیت">
                                        <div class="d-flex flex-column gap-1">
                                            <span class="@StatusBadge(comment.IsApproved)">@StatusLabel(comment.IsApproved)</span>
                                            @if (comment.IsApproved && (!string.IsNullOrWhiteSpace(comment.ApprovedByName) || comment.ApprovedAt.HasValue))
                                            {
                                                <small class="text-muted">
                                                    @if (!string.IsNullOrWhiteSpace(comment.ApprovedByName))
                                                    {
                                                        <span>تایید توسط @comment.ApprovedByName</span>
                                                    }
                                                    @if (comment.ApprovedAt.HasValue)
                                                    {
                                                        <span> در تاریخ @FormatDate(comment.ApprovedAt.Value)</span>
                                                    }
                                                </small>
                                            }
                                        </div>
                                    </td>
                                    <td data-label="تاریخ">
                                        <div class="blog-comments-table__timestamps">
                                            <span><i class="bi bi-calendar-event"></i>@FormatDate(comment.CreatedAt)</span>
                                            @if (comment.UpdatedAt > comment.CreatedAt.AddMinutes(1))
                                            {
                                                <small class="text-muted">آخرین ویرایش: @FormatDate(comment.UpdatedAt)</small>
                                            }
                                        </div>
                                    </td>
                                    <td data-label="عملیات" class="text-end">
                                        <div class="blog-comments-table__actions">
                                            @if (!comment.IsApproved)
                                            {
                                                <form asp-area="Admin"
                                                      asp-controller="Blog"
                                                      asp-action="ModerateComment"
                                                      asp-route-id="@Model.BlogId"
                                                      method="post"
                                                      class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="commentId" value="@comment.Id" />
                                                    <input type="hidden" name="approve" value="true" />
                                                    <button type="submit" class="btn btn-sm btn-outline-success">
                                                        <i class="bi bi-check"></i>
                                                        تایید
                                                    </button>
                                                </form>
                                            }
                                            @if (comment.IsApproved)
                                            {
                                                <form asp-area="Admin"
                                                      asp-controller="Blog"
                                                      asp-action="ModerateComment"
                                                      asp-route-id="@Model.BlogId"
                                                      method="post"
                                                      class="d-inline ms-1">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="commentId" value="@comment.Id" />
                                                    <input type="hidden" name="approve" value="false" />
                                                    <button type="submit" class="btn btn-sm btn-outline-warning">
                                                        <i class="bi bi-x"></i>
                                                        رد
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
