@using System
@using System.Collections.Generic
@using System.Globalization
@using System.Linq
@using Attar.Domain.Enums
@using Attar.SharedKernel.Extensions
@using Attar.WebSite.Areas.Admin.Models
@model ProductIndexViewModel
@{
    var filters = Model.Filters ?? new ProductIndexFilterViewModel();
    var products = Model.Products?.ToList() ?? new List<ProductListItemViewModel>();
    var persianCulture = new CultureInfo("fa-IR");

    string FormatPrice(decimal? value) => value.HasValue ? string.Format(persianCulture, "{0:N0}", value.Value) : "قیمت بر اساس سفارش";
    string FormatPriceWithCurrency(decimal? value) => value.HasValue ? $"{FormatPrice(value)} تومان" : "قیمت بر اساس سفارش";
    string FormatDate(DateTimeOffset? value) => value is null ? "-" : value.Value.ToPersianDateTimeString();
    string FormatDateShort(DateTimeOffset? value) => value is null ? "-" : value.Value.ToPersianDateString();

    string StatusBadgeClass(bool isPublished) => isPublished
        ? "badge bg-success-subtle text-success-emphasis"
        : "badge bg-warning-subtle text-warning-emphasis";

    string StatusLabel(bool isPublished) => isPublished ? "منتشر شده" : "پیش‌نویس";

    string TypeBadgeClass(ProductType type) => type switch
    {
        ProductType.Physical => "badge bg-primary-subtle text-primary-emphasis",
        ProductType.Digital => "badge bg-info-subtle text-info-emphasis",
        _ => "badge bg-secondary-subtle text-secondary-emphasis"
    };

    string TypeLabel(ProductType type) => type switch
    {
        ProductType.Physical => "محصول فیزیکی",
        ProductType.Digital => "محصول دانلودی",
        _ => "نامشخص"
    };

    string? BuildPriceCompare(decimal? comparePrice)
        => comparePrice is null || comparePrice <= 0 ? null : FormatPriceWithCurrency(comparePrice.Value);

    string? MinPriceValue(ProductIndexFilterViewModel model) => model.MinPrice?.ToString(CultureInfo.InvariantCulture);
    string? MaxPriceValue(ProductIndexFilterViewModel model) => model.MaxPrice?.ToString(CultureInfo.InvariantCulture);

    var hasProducts = products.Count > 0;
    var minPriceRoute = MinPriceValue(filters);
    var maxPriceRoute = MaxPriceValue(filters);
    var isPublishedRoute = filters.IsPublished?.ToString();
    var typeRoute = filters.Type?.ToString();
    var categoryRoute = filters.CategoryId?.ToString();
    var sellerIdRoute = filters.SellerId;
}

@section Head {
    <link rel="stylesheet" href="~/css/admin/catalog.css" asp-append-version="true" />
}

@section Breadcrumb {
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">داشبورد</a></li>
    <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
}

@await Html.PartialAsync("_StatusMessage")

<div class="catalog-page" data-catalog-index>
    <div class="catalog-page__hero">
        <div>
            <h1 class="catalog-page__title">مدیریت محصولات</h1>
            <p class="catalog-page__subtitle">کنترل موجودی، قیمت‌گذاری و وضعیت انتشار محصولات فروشگاه</p>
        </div>
        <div class="catalog-page__actions">
            <a class="btn btn-primary" asp-area="Admin" asp-controller="Catalog" asp-action="Create" style="color:white">
                <i class="bi bi-plus-lg"></i>
                محصول جدید
            </a>
            <a class="btn btn-outline-primary" asp-area="Admin" asp-controller="Catalog" asp-action="Categories">
                <i class="bi bi-diagram-3"></i>
                مدیریت دسته‌بندی‌ها
            </a>
        </div>
    </div>

    <div class="catalog-metrics">
        <article class="catalog-metric-card catalog-metric-card--primary">
            <div class="catalog-metric-card__body">
                <div class="catalog-metric-card__header">
                    <div>
                        <span class="catalog-metric-card__label">کل محصولات</span>
                        <h2 class="catalog-metric-card__value">@Model.Statistics.TotalProducts</h2>
                    </div>
                    <span class="catalog-metric-card__icon">
                        <i class="bi bi-bag"></i>
                    </span>
                </div>
                <p class="catalog-metric-card__hint">@Model.Statistics.FilteredProducts نتیجه مطابق فیلتر فعلی</p>
                <div class="catalog-metric-card__footer">
                    <span class="catalog-metric-card__chip catalog-metric-card__chip--success">
                        <i class="bi bi-check-circle"></i>
                        @Model.Statistics.PublishedProducts منتشر شده
                    </span>
                    <span class="catalog-metric-card__chip catalog-metric-card__chip--muted">
                        <i class="bi bi-clock"></i>
                        @Model.Statistics.DraftProducts پیش‌نویس
                    </span>
                </div>
            </div>
        </article>
        <article class="catalog-metric-card catalog-metric-card--success">
            <div class="catalog-metric-card__body">
                <div class="catalog-metric-card__header">
                    <div>
                        <span class="catalog-metric-card__label">میانگین قیمت</span>
                        <h2 class="catalog-metric-card__value">@FormatPrice(Model.Statistics.AveragePrice)</h2>
                    </div>
                    <span class="catalog-metric-card__icon">
                        <i class="bi bi-cash-coin"></i>
                    </span>
                </div>
                <p class="catalog-metric-card__hint">بازه قیمت فعلی محصولات فعال</p>
                <div class="catalog-metric-card__footer">
                    <span class="catalog-metric-card__chip catalog-metric-card__chip--primary">
                        <i class="bi bi-arrow-up"></i>
                        بیشترین: @FormatPrice(Model.Statistics.HighestPrice)
                    </span>
                    <span class="catalog-metric-card__chip catalog-metric-card__chip--secondary">
                        <i class="bi bi-arrow-down"></i>
                        کمترین: @FormatPrice(Model.Statistics.LowestPrice)
                    </span>
                </div>
            </div>
        </article>
        <article class="catalog-metric-card catalog-metric-card--info">
            <div class="catalog-metric-card__body">
                <div class="catalog-metric-card__header">
                    <div>
                        <span class="catalog-metric-card__label">ترکیب نوع محصول</span>
                        <h2 class="catalog-metric-card__value">@Model.Statistics.PhysicalProducts فیزیکی</h2>
                    </div>
                    <span class="catalog-metric-card__icon">
                        <i class="bi bi-bar-chart"></i>
                    </span>
                </div>
                <p class="catalog-metric-card__hint">@Model.Statistics.DigitalProducts محصول دانلودی ثبت شده</p>
                <div class="catalog-metric-card__footer">
                    <span class="catalog-metric-card__chip catalog-metric-card__chip--info">
                        <i class="bi bi-box"></i>
                        فیزیکی: @Model.Statistics.PhysicalProducts
                    </span>
                    <span class="catalog-metric-card__chip catalog-metric-card__chip--accent">
                        <i class="bi bi-cloud-arrow-down"></i>
                        دانلودی: @Model.Statistics.DigitalProducts
                    </span>
                </div>
            </div>
        </article>
    </div>

    <section class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h2 class="h5 mb-1">لیست محصولات</h2>
                    <p class="text-muted mb-0">
                        @if (Model.FilteredCount == 0)
                        {
                            <span>نتیجه‌ای یافت نشد</span>
                        }
                        else
                        {
                            <span>نمایش @Model.FirstItemIndex تا @Model.LastItemIndex از @Model.FilteredCount مورد</span>
                        }
                    </p>
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#filtersModal">
                        <i class="bi bi-funnel"></i>
                        فیلتر
                    </button>
                    <a asp-action="Index" class="btn btn-link text-decoration-none">
                        پاک کردن فیلترها
                    </a>
                </div>
            </div>

            @if (!hasProducts)
            {
                <div class="alert alert-info-subtle border-0 text-center py-4 mb-0" role="alert">
                    <i class="bi bi-inbox fs-3 mb-2 d-block"></i>
                    <h2 class="h5 mb-1">هنوز محصولی در این بخش ثبت نشده است</h2>
                    <p class="mb-0">اولین محصول خود را اضافه کنید تا در فروشگاه نمایش داده شود.</p>
                    <a class="btn btn-primary mt-3" asp-area="Admin" asp-controller="Catalog" asp-action="Create" style="color:white">
                        <i class="bi bi-plus-lg"></i>
                        افزودن محصول جدید
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive" style="min-height:500px;">
                    <table class="table align-middle mb-0">
                        <thead>
                            <tr>
                                <th scope="col">نام محصول</th>
                                <th scope="col">دسته‌بندی</th>
                                <th scope="col">نوع</th>
                                <th scope="col">فروشنده</th>
                                <th scope="col">تعداد فروشنده</th>
                                <th scope="col">قیمت</th>
                                <th scope="col">وضعیت</th>
                                <th scope="col">تخلفات</th>
                                <th scope="col">تاریخ بروزرسانی</th>
                                <th scope="col" class="text-end">عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in products)
                            {
                                <tr>
                                    <td>
                                        <div class="fw-semibold">@product.Name</div>
                                    </td>
                                    <td>
                                        <span>@product.Category</span>
                                    </td>
                                    <td>
                                        <span class="@TypeBadgeClass(product.Type)">@TypeLabel(product.Type)</span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrWhiteSpace(product.SellerName))
                                        {
                                            <div>@product.SellerName</div>
                                            <small class="text-muted">@(string.IsNullOrWhiteSpace(product.SellerPhone) ? "-" : product.SellerPhone)</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (product.SellerCount > 0)
                                        {
                                            <button type="button" 
                                                    class="btn btn-sm btn-link p-0 text-primary text-decoration-none" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#sellersModal"
                                                    data-product-id="@product.Id"
                                                    data-product-name="@product.Name"
                                                    onclick="loadProductSellers('@product.Id', '@product.Name')">
                                                <i class="bi bi-people"></i>
                                                @product.SellerCount فروشنده
                                            </button>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <div>@FormatPriceWithCurrency(product.Price)</div>
                                        @{
                                            var compare = BuildPriceCompare(product.CompareAtPrice);
                                            if (!string.IsNullOrWhiteSpace(compare))
                                            {
                                                <small class="text-decoration-line-through text-muted">@compare</small>
                                            }
                                        }
                                    </td>
                                    <td>
                                        <span class="@StatusBadgeClass(product.IsPublished)">
                                            <i class="bi @(product.IsPublished ? "bi-check-circle" : "bi-hourglass-split")"></i>
                                            @StatusLabel(product.IsPublished)
                                        </span>
                                    </td>
                                    <td>
                                        @if (product.ViolationCount > 0)
                                        {
                                            <a asp-area="Admin" asp-controller="ProductViolationReports" asp-action="Index" asp-route-productId="@product.Id" 
                                               class="btn btn-sm btn-outline-danger text-decoration-none">
                                                <i class="bi bi-exclamation-triangle"></i>
                                                @product.ViolationCount
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <div>
                                            <i class="bi bi-calendar-event me-1"></i>
                                            <span>@FormatDateShort(product.UpdatedAt)</span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="productActionsDropdown-@product.Id" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="bi bi-three-dots"></i>
                                                مدیریت
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="productActionsDropdown-@product.Id">
                                                <li>
                                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Catalog" asp-action="Details" asp-route-id="@product.Id">
                                                        <i class="bi bi-eye"></i>
                                                        مشاهده جزئیات
                                                    </a>
                                                </li>
                                               
                                                <li>
                                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Catalog" asp-action="ExecutionSteps" asp-route-id="@product.Id">
                                                        <i class="bi bi-kanban"></i>
                                                        گام‌های اجرایی
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Catalog" asp-action="Faqs" asp-route-id="@product.Id">
                                                        <i class="bi bi-question-circle"></i>
                                                        سوالات متداول
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Catalog" asp-action="Attributes" asp-route-id="@product.Id">
                                                        <i class="bi bi-tags"></i>
                                                        ویژگی‌های محصول
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Catalog" asp-action="Comments" asp-route-id="@product.Id">
                                                        <i class="bi bi-chat-dots"></i>
                                                        مدیریت نظرات
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Catalog" asp-action="Edit" asp-route-id="@product.Id">
                                                        <i class="bi bi-pencil"></i>
                                                        ویرایش محصول
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (Model.TotalPages > 1)
                {
                    var prevPage = Math.Max(1, Model.PageNumber - 1);
                    var nextPage = Math.Min(Model.TotalPages, Model.PageNumber + 1);
                    <nav aria-label="صفحه‌بندی محصولات" class="mt-4">
                        <ul class="pagination justify-content-center mb-0">
                            <li class="page-item @(Model.PageNumber == 1 ? "disabled" : string.Empty)">
                                <a class="page-link"
                                   asp-area="Admin"
                                   asp-controller="Catalog"
                                   asp-action="Index"
                                   asp-route-search="@filters.Search"
                                   asp-route-categoryId="@categoryRoute"
                                   asp-route-type="@typeRoute"
                                   asp-route-isPublished="@isPublishedRoute"
                                   asp-route-minPrice="@minPriceRoute"
                                   asp-route-maxPrice="@maxPriceRoute"
                                   asp-route-sellerId="@sellerIdRoute"
                                   asp-route-page="@prevPage"
                                   asp-route-pageSize="@Model.PageSize"
                                   aria-label="قبلی">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            @for (var pageNumber = 1; pageNumber <= Model.TotalPages; pageNumber++)
                            {
                                <li class="page-item @(pageNumber == Model.PageNumber ? "active" : string.Empty)">
                                    <a class="page-link"
                                       asp-area="Admin"
                                       asp-controller="Catalog"
                                       asp-action="Index"
                                       asp-route-search="@filters.Search"
                                       asp-route-categoryId="@categoryRoute"
                                       asp-route-type="@typeRoute"
                                       asp-route-isPublished="@isPublishedRoute"
                                       asp-route-minPrice="@minPriceRoute"
                                       asp-route-maxPrice="@maxPriceRoute"
                                       asp-route-sellerId="@sellerIdRoute"
                                       asp-route-page="@pageNumber"
                                       asp-route-pageSize="@Model.PageSize">@pageNumber</a>
                                </li>
                            }
                            <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : string.Empty)">
                                <a class="page-link"
                                   asp-area="Admin"
                                   asp-controller="Catalog"
                                   asp-action="Index"
                                   asp-route-search="@filters.Search"
                                   asp-route-categoryId="@categoryRoute"
                                   asp-route-type="@typeRoute"
                                   asp-route-isPublished="@isPublishedRoute"
                                   asp-route-minPrice="@minPriceRoute"
                                   asp-route-maxPrice="@maxPriceRoute"
                                   asp-route-sellerId="@sellerIdRoute"
                                   asp-route-page="@nextPage"
                                   asp-route-pageSize="@Model.PageSize"
                                   aria-label="بعدی">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            }
        </div>
    </section>
</div>

<!-- Filters Modal -->
<div class="modal fade" id="filtersModal" tabindex="-1" aria-labelledby="filtersModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="filtersModalLabel">فیلتر پیشرفته</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="get" asp-area="Admin" asp-controller="Catalog" asp-action="Index" class="modal-body">
                <div class="row g-3">
                    <div class="col-12">
                        <label class="form-label" for="productFilterSearch">نام محصول</label>
                        <input id="productFilterSearch" name="Search" class="form-control" value="@filters.Search" placeholder="نام محصول، تگ یا دسته" />
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label" for="productFilterCategory">دسته‌بندی</label>
                        <select id="productFilterCategory" name="CategoryId" class="form-select" asp-items="Model.CategoryOptions"></select>
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label" for="productFilterType">نوع محصول</label>
                        <select id="productFilterType" name="Type" class="form-select" asp-items="Model.TypeOptions"></select>
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label" for="productFilterStatus">وضعیت انتشار</label>
                        <select id="productFilterStatus" name="IsPublished" class="form-select" asp-items="Model.StatusOptions"></select>
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label" for="sellerSelect">فروشنده</label>
                        <select class="form-select" id="sellerSelect" name="SellerId" data-seller-select>
                            @if (!string.IsNullOrWhiteSpace(filters.SellerId))
                            {
                                <option value="@filters.SellerId" selected>@filters.SellerId</option>
                            }
                        </select>
                        <small class="text-muted">جستجو بر اساس نام یا شماره تماس فروشنده</small>
                    </div>
                    <div class="col-6 col-md-3">
                        <label class="form-label" asp-for="Filters.MinPrice">حداقل قیمت</label>
                        <input type="number" class="form-control" name="MinPrice" value="@minPriceRoute" min="0" />
                    </div>
                    <div class="col-6 col-md-3">
                        <label class="form-label" asp-for="Filters.MaxPrice">حداکثر قیمت</label>
                        <input type="number" class="form-control" name="MaxPrice" value="@maxPriceRoute" min="0" />
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label" for="productFilterPageSize">تعداد در صفحه</label>
                        <select id="productFilterPageSize" name="PageSize" class="form-select">
                            @foreach (var size in Model.PageSizeOptions ?? Array.Empty<int>())
                            {
                                <option value="@size" selected="@(size == filters.PageSize ? "selected" : null)">@size</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="d-flex justify-content-end gap-2 mt-4">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">بستن</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-funnel"></i>
                        اعمال فیلتر
                    </button>
                </div>
                <input type="hidden" name="page" value="1" />
            </form>
        </div>
    </div>
</div>

<!-- Sellers Modal -->
<div class="modal fade" id="sellersModal" tabindex="-1" aria-labelledby="sellersModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="sellersModalLabel">لیست فروشنده‌های محصول</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="sellersLoading" class="text-center py-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">در حال بارگذاری...</span>
                    </div>
                </div>
                <div id="sellersContent" style="display: none;">
                    <div id="sellersList"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">بستن</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            const sellerSelect = document.querySelector('[data-seller-select]');
            const modal = document.getElementById('filtersModal');
            if (!sellerSelect || !modal) return;

            const fetchSellers = async (term) => {
                const url = new URL('@Url.Action("SearchSellers", "Catalog", new { area = "Admin" })', window.location.origin);
                if (term) url.searchParams.set('term', term);
                const response = await fetch(url);
                if (!response.ok) return [];
                return await response.json();
            };

            const renderOptions = (items) => {
                const current = '@filters.SellerId';
                sellerSelect.innerHTML = '<option value="">همه فروشندگان</option>';
                items.forEach(item => {
                    const option = document.createElement('option');
                    option.value = item.id;
                    option.textContent = item.phone ? `${item.name} - ${item.phone}` : item.name;
                    if (current && option.value === current) {
                        option.selected = true;
                    }
                    sellerSelect.appendChild(option);
                });
            };

            const debounce = (fn, delay = 300) => {
                let t;
                return (...args) => {
                    clearTimeout(t);
                    t = setTimeout(() => fn(...args), delay);
                };
            };

            const searchInput = document.createElement('input');
            searchInput.type = 'search';
            searchInput.className = 'form-control mt-2';
            searchInput.placeholder = 'جستجو فروشنده...';
            sellerSelect.parentElement.appendChild(searchInput);

            const performSearch = debounce(async (term) => {
                const sellers = await fetchSellers(term);
                renderOptions(sellers);
            }, 300);

            searchInput.addEventListener('input', (e) => performSearch(e.target.value));

            modal.addEventListener('shown.bs.modal', async () => {
                if (sellerSelect.options.length <= 1) {
                    const sellers = await fetchSellers(searchInput.value);
                    renderOptions(sellers);
                }
                searchInput.focus();
            });
        })();

        // Load product sellers
        window.loadProductSellers = async function(productId, productName) {
            const loadingEl = document.getElementById('sellersLoading');
            const contentEl = document.getElementById('sellersContent');
            const listEl = document.getElementById('sellersList');
            const modalTitle = document.getElementById('sellersModalLabel');
            
            if (modalTitle) {
                modalTitle.textContent = `لیست فروشنده‌های ${productName}`;
            }
            
            loadingEl.style.display = 'block';
            contentEl.style.display = 'none';
            listEl.innerHTML = '';
            
            try {
                const url = '@Url.Action("GetProductSellers", "Catalog", new { area = "Admin" })' + '?productId=' + encodeURIComponent(productId);
                const response = await fetch(url);
                
                if (!response.ok) {
                    throw new Error('خطا در دریافت اطلاعات');
                }
                
                const data = await response.json();
                
                if (!data || !data.sellers || data.sellers.length === 0) {
                    listEl.innerHTML = '<div class="alert alert-info">هیچ فروشنده‌ای برای این محصول یافت نشد.</div>';
                } else {
                    let html = '<div class="list-group">';
                    data.sellers.forEach((seller, index) => {
                        html += `
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h6 class="mb-1">${index + 1}. ${seller.name || 'نامشخص'}</h6>
                                        ${seller.phone ? `<p class="mb-1 text-muted"><i class="bi bi-telephone me-1"></i>${seller.phone}</p>` : ''}
                                        ${seller.email ? `<p class="mb-0 text-muted small"><i class="bi bi-envelope me-1"></i>${seller.email}</p>` : ''}
                                        ${seller.sellerId ? `<p class="mb-0 text-muted small"><i class="bi bi-person-badge me-1"></i><code>${seller.sellerId}</code></p>` : ''}
                                    </div>
                                    <div>
                                        ${seller.isSite ? '<span class="badge bg-info">سایت</span>' : seller.isMainSeller ? '<span class="badge bg-primary">فروشنده اصلی</span>' : '<span class="badge bg-secondary">پیشنهاد فروشنده</span>'}
                                    </div>
                                </div>
                            </div>
                        `;
                    });
                    html += '</div>';
                    listEl.innerHTML = html;
                }
                
                loadingEl.style.display = 'none';
                contentEl.style.display = 'block';
            } catch (error) {
                loadingEl.style.display = 'none';
                listEl.innerHTML = '<div class="alert alert-danger">خطا در بارگذاری اطلاعات: ' + error.message + '</div>';
                contentEl.style.display = 'block';
            }
        };
    </script>
}
