@using System.Globalization
@using Attar.WebSite.Areas.Admin.Models
@model ProductCommentListViewModel
@{
    var comments = Model.Comments?.ToList() ?? new List<ProductCommentItemViewModel>();
    var persianCulture = CultureInfo.GetCultureInfo("fa-IR");
    string FormatDate(DateTimeOffset value) => value.ToPersianDateTimeString();
    string StatusLabel(bool isApproved) => isApproved ? "تایید شده" : "در انتظار بررسی";
    string StatusBadge(bool isApproved) => isApproved
        ? "badge bg-success-subtle text-success-emphasis"
        : "badge bg-warning-subtle text-warning-emphasis";
    string FormatRating(double rating) => rating.ToString("0.0", CultureInfo.InvariantCulture);
}

@section Head {
    <link rel="stylesheet" href="~/css/admin/catalog.css" asp-append-version="true" />
}

@section Breadcrumb {
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">داشبورد</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Catalog" asp-action="Index">مدیریت محصولات</a></li>
    <li class="breadcrumb-item active" aria-current="page">نظرات</li>
}

@await Html.PartialAsync("_StatusMessage")

<div class="product-comments-page">
    <div class="product-comments-page__hero">
        <div>
            <h1 class="product-comments-page__title">مدیریت نظرات محصول</h1>
            <p class="product-comments-page__subtitle">رسیدگی به بازخوردهای ثبت شده برای «@Model.ProductName»</p>
        </div>
        <div class="product-comments-page__actions">
            <a class="product-comments-page__button" asp-area="Admin" asp-controller="Catalog" asp-action="Index">
                <i class="bi bi-arrow-right"></i>
                بازگشت به لیست
            </a>
            @if (!string.IsNullOrWhiteSpace(Model.ProductSlug))
            {
                <a class="product-comments-page__button product-comments-page__button--accent"
                   asp-area=""
                   asp-controller="Product"
                   asp-action="Details"
                   asp-route-slug="@Model.ProductSlug"
                   target="_blank" style="color:white">
                    <i class="bi bi-box-arrow-up-right"></i>
                    مشاهده صفحه محصول
                </a>
            }
        </div>
    </div>

    <div class="product-comments-page__metrics">
        <article class="product-comments-page__metric product-comments-page__metric--total">
            <div class="product-comments-page__metric-header">
                <span class="product-comments-page__metric-label">کل نظرات</span>
                <i class="bi bi-chat-dots"></i>
            </div>
            <div class="product-comments-page__metric-value">@Model.TotalCount.ToString("N0", persianCulture)</div>
            <p class="product-comments-page__metric-hint">تمامی نظرات ثبت شده کاربران</p>
        </article>
        <article class="product-comments-page__metric product-comments-page__metric--approved">
            <div class="product-comments-page__metric-header">
                <span class="product-comments-page__metric-label">تایید شده</span>
                <i class="bi bi-check-circle"></i>
            </div>
            <div class="product-comments-page__metric-value">@Model.ApprovedCount.ToString("N0", persianCulture)</div>
            <p class="product-comments-page__metric-hint">نظراتی که در سایت نمایش داده می‌شوند</p>
        </article>
        <article class="product-comments-page__metric product-comments-page__metric--pending">
            <div class="product-comments-page__metric-header">
                <span class="product-comments-page__metric-label">در انتظار بررسی</span>
                <i class="bi bi-hourglass-split"></i>
            </div>
            <div class="product-comments-page__metric-value">@Model.PendingCount.ToString("N0", persianCulture)</div>
            <p class="product-comments-page__metric-hint">نیازمند تایید یا رد نهایی</p>
        </article>
        <article class="product-comments-page__metric product-comments-page__metric--rating">
            <div class="product-comments-page__metric-header">
                <span class="product-comments-page__metric-label">میانگین امتیاز</span>
                <i class="bi bi-star"></i>
            </div>
            <div class="product-comments-page__metric-value">@Model.AverageRating.ToString("0.0", CultureInfo.InvariantCulture)</div>
            <p class="product-comments-page__metric-hint">بر اساس نظرات تایید شده</p>
        </article>
    </div>

    <div class="card product-comments-card">
        <div class="card-header product-comments-card__header">
            <div>
                <h2 class="product-comments-card__title">لیست نظرات</h2>
                <span class="product-comments-card__subtitle">@comments.Count.ToString("N0", persianCulture) نظر ثبت شده است</span>
            </div>
        </div>
        <div class="card-body p-0">
            @if (comments.Count == 0)
            {
                <div class="product-comments-card__empty">
                    <i class="bi bi-emoji-neutral"></i>
                    <p>هنوز نظری برای این محصول ثبت نشده است.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table align-middle mb-0 product-comments-table">
                        <thead>
                            <tr>
                                <th scope="col">کاربر</th>
                                <th scope="col">امتیاز</th>
                                <th scope="col">متن نظر</th>
                                <th scope="col">پاسخ به</th>
                                <th scope="col">وضعیت</th>
                                <th scope="col">تاریخ</th>
                                <th scope="col" class="text-end">عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var comment in comments)
                            {
                                <tr>
                                    <td data-label="کاربر">
                                        <div class="product-comments-table__author">
                                            <span class="product-comments-table__author-name">@comment.AuthorName</span>
                                        </div>
                                    </td>
                                    <td data-label="امتیاز">
                                        <span class="product-comments-table__rating" aria-label="امتیاز @FormatRating(comment.Rating)">
                                            <i class="bi bi-star-fill"></i>
                                            @FormatRating(comment.Rating)
                                        </span>
                                    </td>
                                    <td data-label="متن نظر">
                                        <div class="product-comments-table__content">@comment.Content</div>
                                    </td>
                                    <td data-label="پاسخ به">
                                        @if (comment.ParentId.HasValue)
                                        {
                                            <div class="product-comments-table__parent">
                                                <span class="product-comments-table__parent-author">@comment.ParentAuthorName</span>
                                                @if (!string.IsNullOrWhiteSpace(comment.ParentExcerpt))
                                                {
                                                    <small class="product-comments-table__parent-excerpt">@comment.ParentExcerpt</small>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">نظر اصلی</span>
                                        }
                                    </td>
                                    <td data-label="وضعیت">
                                        <div class="d-flex flex-column gap-1">
                                            <span class="@StatusBadge(comment.IsApproved)">@StatusLabel(comment.IsApproved)</span>
                                            @if (comment.IsApproved && (!string.IsNullOrWhiteSpace(comment.ApprovedByName) || comment.ApprovedAt.HasValue))
                                            {
                                                <small class="text-muted">
                                                    @if (!string.IsNullOrWhiteSpace(comment.ApprovedByName))
                                                    {
                                                        <span>تایید توسط @comment.ApprovedByName</span>
                                                    }
                                                    @if (comment.ApprovedAt.HasValue)
                                                    {
                                                        <span> در تاریخ @FormatDate(comment.ApprovedAt.Value)</span>
                                                    }
                                                </small>
                                            }
                                        </div>
                                    </td>
                                    <td data-label="تاریخ">
                                        <div class="product-comments-table__timestamps">
                                            <span><i class="bi bi-calendar-event"></i>@FormatDate(comment.CreatedAt)</span>
                                            @if (comment.UpdatedAt > comment.CreatedAt.AddMinutes(1))
                                            {
                                                <small class="text-muted">آخرین ویرایش: @FormatDate(comment.UpdatedAt)</small>
                                            }
                                        </div>
                                    </td>
                                    <td data-label="عملیات" class="text-end">
                                        <div class="product-comments-table__actions d-flex gap-1 flex-wrap justify-content-end">
                                            <button type="button"
                                                    class="btn btn-sm btn-outline-primary"
                                                    data-bs-toggle="collapse"
                                                    data-bs-target="#reply-form-@comment.Id"
                                                    aria-expanded="false"
                                                    aria-controls="reply-form-@comment.Id">
                                                <i class="bi bi-reply"></i>
                                                پاسخ
                                            </button>
                                            @if (!comment.IsApproved)
                                            {
                                                <form asp-area="Admin"
                                                      asp-controller="Catalog"
                                                      asp-action="ModerateComment"
                                                      asp-route-id="@Model.ProductId"
                                                      method="post"
                                                      class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="commentId" value="@comment.Id" />
                                                    <input type="hidden" name="approve" value="true" />
                                                    <button type="submit" class="btn btn-sm btn-outline-success">
                                                        <i class="bi bi-check"></i>
                                                        تایید
                                                    </button>
                                                </form>
                                            }
                                            @if (comment.IsApproved)
                                            {
                                                <form asp-area="Admin"
                                                      asp-controller="Catalog"
                                                      asp-action="ModerateComment"
                                                      asp-route-id="@Model.ProductId"
                                                      method="post"
                                                      class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="commentId" value="@comment.Id" />
                                                    <input type="hidden" name="approve" value="false" />
                                                    <button type="submit" class="btn btn-sm btn-outline-warning">
                                                        <i class="bi bi-x"></i>
                                                        رد
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="7" class="p-0 border-0">
                                        <div class="collapse" id="reply-form-@comment.Id">
                                            <div class="card card-body bg-light m-3">
                                                <h6 class="mb-3">
                                                    <i class="bi bi-reply"></i>
                                                    پاسخ به نظر @comment.AuthorName
                                                </h6>
                                                <form method="post"
                                                      asp-action="ReplyToComment"
                                                      asp-route-id="@Model.ProductId"
                                                      asp-route-parentCommentId="@comment.Id">
                                                    @Html.AntiForgeryToken()
                                                    <div class="mb-3">
                                                        <label class="form-label" for="AuthorName-@comment.Id">نام پاسخ‌دهنده</label>
                                                        <input type="text"
                                                               class="form-control"
                                                               id="AuthorName-@comment.Id"
                                                               name="AuthorName"
                                                               value="@Model.DefaultAuthorName"
                                                               placeholder="نام ادمین" />
                                                        <div class="form-text">در صورت خالی بودن، نام ادمین به صورت پیش‌فرض استفاده می‌شود.</div>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="form-label" for="Content-@comment.Id">متن پاسخ <span class="text-danger">*</span></label>
                                                        <textarea class="form-control"
                                                                  id="Content-@comment.Id"
                                                                  name="Content"
                                                                  rows="4"
                                                                  required
                                                                  placeholder="پاسخ خود را وارد کنید..."></textarea>
                                                    </div>
                                                    <div class="d-flex gap-2">
                                                        <button type="submit" class="btn btn-primary">
                                                            <i class="bi bi-send"></i>
                                                            ارسال پاسخ
                                                        </button>
                                                        <button type="button"
                                                                class="btn btn-outline-secondary"
                                                                data-bs-toggle="collapse"
                                                                data-bs-target="#reply-form-@comment.Id">
                                                            انصراف
                                                        </button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
