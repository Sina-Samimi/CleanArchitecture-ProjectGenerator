@model SiteSettingsViewModel
@{
    ViewData["Title"] ??= "تنظیمات سایت";
    ViewData["Subtitle"] ??= "مدیریت اطلاعات تماس و برند پلتفرم";
}

@section Breadcrumb {
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">داشبورد</a></li>
    <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
}

@await Html.PartialAsync("_StatusMessage")

<div class="row g-4 align-items-stretch">
    <div class="col-12 col-xl-8">
        <form asp-area="Admin" asp-controller="SiteSettings" asp-action="Index" method="post" enctype="multipart/form-data" class="card h-100" novalidate data-site-settings-form="true">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="card-title h4 mb-1">مشخصات عمومی سایت</h2>
                    <p class="card-subtitle text-muted mb-0">عنوان برند، کانال‌های ارتباطی و راه‌های تماس را در این بخش ثبت کنید.</p>
                </div>
                <span class="badge bg-light text-primary">به‌روز رسانی همیشگی</span>
            </div>
            <div class="card-body">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="row g-4">
                    <div class="col-md-6">
                        <label asp-for="SiteTitle" class="form-label"></label>
                        <input asp-for="SiteTitle" class="form-control" />
                        <span asp-validation-for="SiteTitle" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="SiteEmail" class="form-label"></label>
                        <input asp-for="SiteEmail" class="form-control text-start" dir="ltr" />
                        <span class="form-text text-muted">ایمیل اصلی که در فوتر یا بخش تماس نمایش داده می‌شود.</span>
                        <span asp-validation-for="SiteEmail" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="SupportEmail" class="form-label"></label>
                        <input asp-for="SupportEmail" class="form-control text-start" dir="ltr" />
                        <span class="form-text text-muted">ایمیل اختصاصی تیم پشتیبانی برای پیگیری درخواست‌ها.</span>
                        <span asp-validation-for="SupportEmail" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ContactPhone" class="form-label"></label>
                        <input asp-for="ContactPhone" class="form-control text-start" dir="ltr" />
                        <span class="form-text text-muted">شماره نمایشی در صفحه تماس با ما یا فوتر سایت.</span>
                        <span asp-validation-for="ContactPhone" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="SupportPhone" class="form-label"></label>
                        <input asp-for="SupportPhone" class="form-control text-start" dir="ltr" />
                        <span class="form-text text-muted">خط مستقیم پشتیبانی یا پاسخگویی خارج از ساعات اداری.</span>
                        <span asp-validation-for="SupportPhone" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Address" class="form-label"></label>
                        <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                        <span class="form-text text-muted">آدرس دفتر مرکزی یا محل فعالیت جهت نمایش در صفحات تماس.</span>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="ContactDescription" class="form-label"></label>
                        <textarea asp-for="ContactDescription" class="form-control" rows="4"></textarea>
                        <span class="form-text text-muted">توضیحات تکمیلی مانند ساعات پاسخگویی، شبکه‌های اجتماعی یا روش‌های جایگزین تماس.</span>
                        <span asp-validation-for="ContactDescription" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <hr class="my-4" />
                        <h5 class="mb-3">شبکه‌های اجتماعی (برای نمایش در فوتر)</h5>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="TelegramUrl" class="form-label"></label>
                        <input asp-for="TelegramUrl" class="form-control text-start" dir="ltr" placeholder="https://t.me/yourchannel" />
                        <span class="form-text text-muted">لینک کانال یا گروه تلگرام</span>
                        <span asp-validation-for="TelegramUrl" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="InstagramUrl" class="form-label"></label>
                        <input asp-for="InstagramUrl" class="form-control text-start" dir="ltr" placeholder="https://instagram.com/yourpage" />
                        <span class="form-text text-muted">لینک صفحه اینستاگرام</span>
                        <span asp-validation-for="InstagramUrl" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="WhatsAppUrl" class="form-label"></label>
                        <input asp-for="WhatsAppUrl" class="form-control text-start" dir="ltr" placeholder="https://wa.me/989123456789" />
                        <span class="form-text text-muted">لینک واتساپ (شماره با کد کشور)</span>
                        <span asp-validation-for="WhatsAppUrl" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="LinkedInUrl" class="form-label"></label>
                        <input asp-for="LinkedInUrl" class="form-control text-start" dir="ltr" placeholder="https://linkedin.com/company/yourcompany" />
                        <span class="form-text text-muted">لینک صفحه لینکدین</span>
                        <span asp-validation-for="LinkedInUrl" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <hr class="my-4" />
                        <h5 class="mb-3">تنظیمات بنرها</h5>
                    </div>

                    <div class="col-12">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="BannersAsSlider" />
                            <label class="form-check-label" asp-for="BannersAsSlider">
                                نمایش بنرهای صفحه اصلی به صورت اسلایدر
                            </label>
                            <div class="form-text">در صورت فعال بودن، تمام بنرهای فعال صفحه اصلی به صورت اسلایدر نمایش داده می‌شوند. در غیر این صورت، بنرها به صورت جداگانه نمایش داده می‌شوند.</div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">لوگوی سایت</label>
                        <div class="featured-upload" data-logo-uploader>
                            <div class="featured-upload__preview @(string.IsNullOrWhiteSpace(Model.LogoPath) ? "featured-upload__preview--empty" : string.Empty)"
                                 data-logo-preview
                                 style="@(string.IsNullOrWhiteSpace(Model.LogoPath) ? string.Empty : $"background-image: url('{Url.Content(Model.LogoPath)}')")">
                                <span class="featured-upload__placeholder" data-logo-placeholder>
                                    <i class="bi bi-image"></i>
                                    <span>لوگوی سایت را انتخاب کنید</span>
                                </span>
                            </div>
                            <div class="featured-upload__controls">
                                <label class="btn btn-outline-secondary featured-upload__button">
                                    <i class="bi bi-upload"></i>
                                    انتخاب لوگو
                                    <input asp-for="Logo" class="d-none" accept="image/*" data-logo-input />
                                </label>
                                <div class="featured-upload__meta">
                                    <span data-logo-filename>
                                        @(string.IsNullOrWhiteSpace(Model.LogoPath) ? "لوگو انتخاب نشده است" : "لوگوی فعلی انتخاب شده")
                                    </span>
                                    <div class="form-check form-switch mt-2">
                                        <input asp-for="RemoveLogo" class="form-check-input" data-logo-remove />
                                        <label class="form-check-label" asp-for="RemoveLogo">حذف لوگو</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <input type="hidden" asp-for="LogoPath" />
                        <span asp-validation-for="Logo" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Favicon</label>
                        <div class="featured-upload" data-favicon-uploader>
                            <div class="featured-upload__preview @(string.IsNullOrWhiteSpace(Model.FaviconPath) ? "featured-upload__preview--empty" : string.Empty)"
                                 data-favicon-preview
                                 style="@(string.IsNullOrWhiteSpace(Model.FaviconPath) ? string.Empty : $"background-image: url('{Url.Content(Model.FaviconPath)}')")">
                                <span class="featured-upload__placeholder" data-favicon-placeholder>
                                    <i class="bi bi-image"></i>
                                    <span>Favicon را انتخاب کنید</span>
                                </span>
                            </div>
                            <div class="featured-upload__controls">
                                <label class="btn btn-outline-secondary featured-upload__button">
                                    <i class="bi bi-upload"></i>
                                    انتخاب Favicon
                                    <input asp-for="Favicon" class="d-none" accept="image/*,.ico" data-favicon-input />
                                </label>
                                <div class="featured-upload__meta">
                                    <span data-favicon-filename>
                                        @(string.IsNullOrWhiteSpace(Model.FaviconPath) ? "Favicon انتخاب نشده است" : "Favicon فعلی انتخاب شده")
                                    </span>
                                    <div class="form-check form-switch mt-2">
                                        <input asp-for="RemoveFavicon" class="form-check-input" data-favicon-remove />
                                        <label class="form-check-label" asp-for="RemoveFavicon">حذف Favicon</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <input type="hidden" asp-for="FaviconPath" />
                        <span asp-validation-for="Favicon" class="text-danger"></span>
                    </div>

                    <div class="col-12" data-editor-field>
                        <label class="form-label">توضیح مختصر</label>
                        <div id="shortDescriptionEditor"
                             class="blog-editor"
                             data-editor-wrapper="true"
                             data-upload-url="@Url.Action("UploadContentImage")"></div>
                        <textarea asp-for="ShortDescription"
                                  class="form-control d-none"
                                  rows="6"
                                  placeholder="توضیح مختصری درباره سایت..."
                                  data-content-input="true"
                                  data-editor-textarea="true"></textarea>
                        <div class="form-text d-none text-warning" data-editor-fallback="true">
                            در صورت بروز مشکل در بارگذاری ویرایشگر پیشرفته، متن را در این بخش وارد کنید.
                        </div>
                        <span asp-validation-for="ShortDescription" class="text-danger"></span>
                    </div>

                    <div class="col-12" data-editor-field>
                        <label class="form-label">شرایط و قوانین</label>
                        <div id="termsEditor"
                             class="blog-editor"
                             data-editor-wrapper="true"
                             data-upload-url="@Url.Action("UploadContentImage")"></div>
                        <textarea asp-for="TermsAndConditions"
                                  class="form-control d-none"
                                  rows="10"
                                  placeholder="شرایط و قوانین استفاده از سایت..."
                                  data-content-input="true"
                                  data-editor-textarea="true"></textarea>
                        <div class="form-text d-none text-warning" data-editor-fallback="true">
                            در صورت بروز مشکل در بارگذاری ویرایشگر پیشرفته، متن را در این بخش وارد کنید.
                        </div>
                        <span asp-validation-for="TermsAndConditions" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="card-footer d-flex justify-content-between align-items-center">
                <div class="text-muted small">اطلاعات ذخیره‌شده در تمام صفحات عمومی که به تنظیمات سایت متکی هستند نمایش داده می‌شود.</div>
                <button type="submit" class="btn btn-primary px-4">
                    <i class="bi bi-save me-1"></i>
                    ذخیره تنظیمات
                </button>
            </div>
        </form>
    </div>
    <div class="col-12 col-xl-4">
        <div class="card h-100">
            <div class="card-header">
                <h2 class="card-title h5 mb-1">پیشنمایش اطلاعات</h2>
                <p class="card-subtitle text-muted mb-0">مرور سریع آنچه کاربران خواهند دید.</p>
            </div>
            <div class="card-body d-flex flex-column gap-4">
                <div class="p-3 bg-light rounded-3">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted small">عنوان سایت</span>
                        <span class="fw-semibold">@Model.SiteTitle</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted small">ایمیل اصلی</span>
                        <span class="fw-semibold text-primary" dir="ltr">@Model.SiteEmail</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span class="text-muted small">ایمیل پشتیبانی</span>
                        <span class="fw-semibold text-primary" dir="ltr">@Model.SupportEmail</span>
                    </div>
                </div>

                <div>
                    <h3 class="h6 mb-3">راه‌های ارتباطی</h3>
                    <ul class="list-unstyled mb-0 small text-muted">
                        <li class="mb-2"><i class="bi bi-telephone text-primary me-2"></i>@Model.ContactPhone</li>
                        <li class="mb-2"><i class="bi bi-headset text-success me-2"></i>@Model.SupportPhone</li>
                        <li><i class="bi bi-geo-alt text-danger me-2"></i>@Model.Address</li>
                    </ul>
                </div>

                <div>
                    <h3 class="h6 mb-2">پیام به کاربران</h3>
                    <p class="small text-muted mb-0">@Model.ContactDescription</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Head {
    <link rel="stylesheet" href="~/css/admin/blog-form.css" asp-append-version="true" />
}

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="~/js/admin/rich-editor.js" asp-append-version="true"></script>
    <script src="~/js/admin/site-settings-form.js" asp-append-version="true"></script>
}
