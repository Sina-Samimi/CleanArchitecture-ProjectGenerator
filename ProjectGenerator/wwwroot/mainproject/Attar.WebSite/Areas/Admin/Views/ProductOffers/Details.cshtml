@using System.Globalization
@using Attar.SharedKernel.Extensions
@using Attar.WebSite.Areas.Admin.Models
@model ProductOfferDetailViewModel
@{
    ViewData["Title"] = "جزئیات پیشنهاد محصول";
    var culture = CultureInfo.GetCultureInfo("fa-IR");
    string FormatDateTime(DateTimeOffset value) => value.ToPersianDateTimeString();
    string FormatPrice(decimal price) => price.ToString("N0");
}

@section Head {
    <link rel="stylesheet" href="~/css/admin/catalog.css" asp-append-version="true" />
}

@section Breadcrumb {
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">داشبورد</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="ProductOffers" asp-action="Index">پیشنهادات محصولات</a></li>
    <li class="breadcrumb-item active" aria-current="page">جزئیات</li>
}

@await Html.PartialAsync("_StatusMessage")

<div class="product-offer-details-page">
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h4 mb-1">پیشنهاد محصول: @Model.ProductName</h1>
                    <p class="text-muted mb-0">جزئیات پیشنهاد فروشنده</p>
                </div>
                <div>
                    @if (Model.IsPublished)
                    {
                        <span class="badge bg-success-subtle text-success-emphasis fs-6">
                            <i class="bi bi-check-circle"></i> منتشر شده
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-warning-subtle text-warning-emphasis fs-6">
                            <i class="bi bi-hourglass-split"></i> منتشر نشده
                        </span>
                    }
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-primary-subtle text-primary-emphasis fs-6 ms-2">فعال</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary-subtle text-secondary-emphasis fs-6 ms-2">غیرفعال</span>
                    }
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row g-4">
                <div class="col-lg-8">
                    <div class="card border-0 bg-light mb-4">
                        <div class="card-body">
                            <h5 class="card-title mb-3">اطلاعات پیشنهاد</h5>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">محصول</label>
                                    <div>
                                        @if (!string.IsNullOrWhiteSpace(Model.ProductSlug))
                                        {
                                            <a asp-area="" asp-controller="Product" asp-action="Details" asp-route-slug="@Model.ProductSlug" target="_blank" class="text-decoration-none">
                                                @Model.ProductName
                                            </a>
                                        }
                                        else
                                        {
                                            @Model.ProductName
                                        }
                                        <br />
                                        <small class="text-muted font-monospace">@Model.ProductId</small>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">فروشنده</label>
                                    <div>
                                        @if (!string.IsNullOrWhiteSpace(Model.SellerName))
                                        {
                                            <div>@Model.SellerName</div>
                                        }
                                        <small class="text-muted font-monospace">@Model.SellerId</small>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">قیمت</label>
                                    <div>
                                        @if (Model.Price.HasValue)
                                        {
                                            <span class="fs-5 fw-bold">@FormatPrice(Model.Price.Value) تومان</span>
                                            @if (Model.CompareAtPrice.HasValue && Model.CompareAtPrice.Value > Model.Price.Value)
                                            {
                                                <br />
                                                <small class="text-decoration-line-through text-muted">@FormatPrice(Model.CompareAtPrice.Value) تومان</small>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">تعیین نشده</span>
                                        }
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">وضعیت موجودی</label>
                                    <div>
                                        @if (Model.TrackInventory)
                                        {
                                            <span class="@(Model.StockQuantity > 0 ? "text-success fw-bold" : "text-danger")">
                                                @Model.StockQuantity عدد
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">نامحدود</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card border-0 bg-light mb-4">
                        <div class="card-body">
                            <h5 class="card-title mb-3">اطلاعات زمانی</h5>
                            <div class="mb-3">
                                <label class="form-label fw-semibold small">تاریخ ثبت</label>
                                <div>@FormatDateTime(Model.CreatedAt)</div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-semibold small">آخرین بروزرسانی</label>
                                <div>@FormatDateTime(Model.UpdatedAt)</div>
                            </div>
                            @if (Model.PublishedAt.HasValue)
                            {
                                <div class="mb-3">
                                    <label class="form-label fw-semibold small">تاریخ انتشار</label>
                                    <div>@FormatDateTime(Model.PublishedAt.Value)</div>
                                </div>
                            }
                            @if (Model.ApprovedFromRequestId.HasValue)
                            {
                                <div class="mb-3">
                                    <label class="form-label fw-semibold small">شناسه درخواست</label>
                                    <div>
                                        <a asp-area="Admin" asp-controller="ProductRequests" asp-action="Details" asp-route-id="@Model.ApprovedFromRequestId.Value" class="text-decoration-none">
                                            @Model.ApprovedFromRequestId.Value
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="bi bi-pencil"></i>
                            ویرایش پیشنهاد
                        </a>
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('آیا از حذف این پیشنهاد اطمینان دارید؟');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="bi bi-trash"></i>
                                حذف پیشنهاد
                            </button>
                        </form>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-right"></i>
                            بازگشت به لیست
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

