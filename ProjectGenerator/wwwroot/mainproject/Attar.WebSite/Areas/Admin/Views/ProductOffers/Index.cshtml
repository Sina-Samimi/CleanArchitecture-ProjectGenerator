@using System.Globalization
@using Attar.SharedKernel.Extensions
@using Attar.WebSite.Areas.Admin.Models
@model ProductOfferListViewModel
@{
    ViewData["Title"] = "پیشنهادات محصولات";
    ViewData["Subtitle"] = "مدیریت پیشنهادات فروشندگان برای محصولات";
    var culture = CultureInfo.GetCultureInfo("fa-IR");
    string FormatDateTime(DateTimeOffset value) => value.ToPersianDateTimeString();
    string FormatPrice(decimal price) => price.ToString("N0");
}

@section Head {
    <link rel="stylesheet" href="~/css/admin/catalog.css" asp-append-version="true" />
}

@section Breadcrumb {
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">داشبورد</a></li>
    <li class="breadcrumb-item active" aria-current="page">پیشنهادات محصولات</li>
}

@await Html.PartialAsync("_StatusMessage")

<div class="product-offers-page">
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h4 mb-1">پیشنهادات محصولات فروشندگان</h1>
                    <p class="text-muted mb-0">مدیریت پیشنهادات فروشندگان برای محصولات موجود</p>
                </div>
            </div>
        </div>
        <div class="card-body">
            <!-- Filters -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#filtersModal">
                    <i class="bi bi-funnel"></i>
                    فیلتر
                </button>
                <a asp-action="Index" class="btn btn-link text-decoration-none">
                    پاک کردن فیلترها
                </a>
            </div>

            @if (!Model.Offers.Any())
            {
                <div class="alert alert-info-subtle border-0 text-center py-4 mb-0" role="alert">
                    <i class="bi bi-inbox fs-3 mb-2 d-block"></i>
                    <h2 class="h5 mb-1">هنوز پیشنهادی ثبت نشده است.</h2>
                    <p class="mb-0">پیشنهادات فروشندگان برای محصولات موجود در این بخش نمایش داده می‌شود.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table align-middle mb-0">
                        <thead>
                            <tr>
                                <th scope="col">محصول</th>
                                <th scope="col">فروشنده</th>
                                <th scope="col">قیمت</th>
                                <th scope="col">موجودی</th>
                                <th scope="col">وضعیت</th>
                                <th scope="col">تاریخ ثبت</th>
                                <th scope="col" class="text-end">عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var offer in Model.Offers)
                            {
                                <tr>
                                    <td>
                                        <div>
                                            <div class="fw-semibold">
                                                @if (!string.IsNullOrWhiteSpace(offer.ProductSlug))
                                                {
                                                    <a asp-area="" asp-controller="Product" asp-action="Details" asp-route-slug="@offer.ProductSlug" target="_blank" class="text-decoration-none">
                                                        @offer.ProductName
                                                    </a>
                                                }
                                                else
                                                {
                                                    @offer.ProductName
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div>@(offer.SellerName ?? "نامشخص")</div>
                                        <small class="text-muted">@(string.IsNullOrWhiteSpace(offer.SellerPhone) ? "-" : offer.SellerPhone)</small>
                                    </td>
                                    <td>
                                        @if (offer.Price.HasValue)
                                        {
                                            <span>@FormatPrice(offer.Price.Value) تومان</span>
                                            @if (offer.CompareAtPrice.HasValue && offer.CompareAtPrice.Value > offer.Price.Value)
                                            {
                                                <br />
                                                <small class="text-decoration-line-through text-muted">@FormatPrice(offer.CompareAtPrice.Value) تومان</small>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (offer.TrackInventory)
                                        {
                                            <span class="@(offer.StockQuantity > 0 ? "text-success" : "text-danger")">
                                                @offer.StockQuantity عدد
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">نامحدود</span>
                                        }
                                    </td>
                                    <td>
                                        @if (offer.IsPublished)
                                        {
                                            <span class="badge bg-success-subtle text-success-emphasis">
                                                <i class="bi bi-check-circle"></i> منتشر شده
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning-subtle text-warning-emphasis">
                                                <i class="bi bi-hourglass-split"></i> منتشر نشده
                                            </span>
                                        }
                                        <br />
                                        @if (offer.IsActive)
                                        {
                                            <span class="badge bg-primary-subtle text-primary-emphasis mt-1">فعال</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary-subtle text-secondary-emphasis mt-1">غیرفعال</span>
                                        }
                                    </td>
                                    <td>
                                        <div>
                                            <i class="bi bi-calendar-event me-1"></i>
                                            <span>@FormatDateTime(offer.CreatedAt)</span>
                                        </div>
                                        @if (offer.PublishedAt.HasValue)
                                        {
                                            <small class="text-muted">
                                                انتشار: @FormatDateTime(offer.PublishedAt.Value)
                                            </small>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@offer.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i>
                                                جزئیات
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@offer.Id" class="btn btn-sm btn-outline-secondary">
                                                <i class="bi bi-pencil"></i>
                                                ویرایش
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                @if (Model.TotalCount > Model.PageSize)
                {
                    <nav aria-label="صفحه‌بندی پیشنهادات" class="mt-4">
                        <ul class="pagination justify-content-center">
                            @{
                                var totalPages = (int)Math.Ceiling((double)Model.TotalCount / Model.PageSize);
                                var currentPage = Model.PageNumber;
                            }
                            @if (currentPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(currentPage - 1)" asp-route-productId="@Model.SelectedProductId" asp-route-productName="@Context.Request.Query["productName"]" asp-route-sellerId="@Model.SelectedSellerId" asp-route-includeInactive="@(Context.Request.Query["includeInactive"])">قبلی</a>
                                </li>
                            }
                            @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                            {
                                <li class="page-item @(i == currentPage ? "active" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-productId="@Model.SelectedProductId" asp-route-productName="@Context.Request.Query["productName"]" asp-route-sellerId="@Model.SelectedSellerId" asp-route-includeInactive="@(Context.Request.Query["includeInactive"])">@i</a>
                                </li>
                            }
                            @if (currentPage < totalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(currentPage + 1)" asp-route-productId="@Model.SelectedProductId" asp-route-productName="@Context.Request.Query["productName"]" asp-route-sellerId="@Model.SelectedSellerId" asp-route-includeInactive="@(Context.Request.Query["includeInactive"])">بعدی</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
        </div>
    </div>
</div>

<!-- Filters Modal -->
<div class="modal fade" id="filtersModal" tabindex="-1" aria-labelledby="filtersModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="filtersModalLabel">فیلتر پیشنهادات</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="get" asp-action="Index" class="modal-body">
                <div class="mb-3">
                    <label class="form-label" for="productName">نام محصول</label>
                    <input type="text" class="form-control" id="productName" name="productName" value="@Context.Request.Query["productName"]" placeholder="مانند: موبایل">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="sellerSelect">فروشنده</label>
                    <select class="form-select" id="sellerSelect" name="sellerId" data-seller-select>
                        @if (!string.IsNullOrWhiteSpace(Model.SelectedSellerId))
                        {
                            <option value="@Model.SelectedSellerId" selected>@Model.SelectedSellerId</option>
                        }
                    </select>
                    <small class="text-muted">جستجو بر اساس نام یا شماره تماس فروشنده</small>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" value="true" id="includeInactive" name="includeInactive" @(Context.Request.Query["includeInactive"] == "true" ? "checked" : "")>
                    <label class="form-check-label" for="includeInactive">
                        نمایش پیشنهادات غیرفعال
                    </label>
                </div>
                <div class="d-flex justify-content-end gap-2">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">بستن</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-funnel"></i>
                        اعمال فیلتر
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            const sellerSelect = document.querySelector('[data-seller-select]');
            const modal = document.getElementById('filtersModal');
            if (!sellerSelect || !modal) return;

            const fetchSellers = async (term) => {
                const url = new URL('@Url.Action("SearchSellers", "ProductOffers", new { area = "Admin" })', window.location.origin);
                if (term) url.searchParams.set('term', term);
                const response = await fetch(url);
                if (!response.ok) return [];
                return await response.json();
            };

            const renderOptions = (items) => {
                const current = '@Model.SelectedSellerId';
                sellerSelect.innerHTML = '<option value=\"\">همه فروشندگان</option>';
                items.forEach(item => {
                    const option = document.createElement('option');
                    option.value = item.id;
                    option.textContent = item.phone ? `${item.name} - ${item.phone}` : item.name;
                    if (current && option.value === current) {
                        option.selected = true;
                    }
                    sellerSelect.appendChild(option);
                });
            };

            const debounce = (fn, delay = 300) => {
                let t;
                return (...args) => {
                    clearTimeout(t);
                    t = setTimeout(() => fn(...args), delay);
                };
            };

            const searchInput = document.createElement('input');
            searchInput.type = 'search';
            searchInput.className = 'form-control mt-2';
            searchInput.placeholder = 'جستجو فروشنده...';
            sellerSelect.parentElement.appendChild(searchInput);

            const performSearch = debounce(async (term) => {
                const sellers = await fetchSellers(term);
                renderOptions(sellers);
            }, 300);

            searchInput.addEventListener('input', (e) => performSearch(e.target.value));

            modal.addEventListener('shown.bs.modal', async () => {
                if (sellerSelect.options.length <= 1) {
                    const sellers = await fetchSellers(searchInput.value);
                    renderOptions(sellers);
                }
                searchInput.focus();
            });
        })();
    </script>
}

