@model PhoneLoginViewModel
@{
    ViewData["Title"] = "تایید کد ورود";
    Layout = "_HomeTemplateLayout";
    var expiresAt = Model.CodeExpiresAt?.ToUniversalTime().ToString("o");
    var debugCode = ViewData["DebugVerificationCode"] as string;
}

@section Styles {
    <style>
        .verification-section {
            min-height: calc(100vh - 200px);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 4rem 2rem;
            background: linear-gradient(135deg, rgba(45, 80, 22, 0.05), rgba(74, 124, 42, 0.05));
        }

        .verification-container {
            max-width: 500px;
            width: 100%;
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            padding: 3rem 2.5rem;
            animation: fadeInUp 0.6s ease-out;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .verification-header {
            text-align: center;
            margin-bottom: 2.5rem;
        }

        .verification-logo {
            width: 80px;
            height: 80px;
            margin: 0 auto 1.5rem;
            background: linear-gradient(135deg, #2d5016 0%, #4a7c2a 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            color: white;
            box-shadow: 0 5px 20px rgba(45, 80, 22, 0.3);
        }

        .verification-title {
            font-size: 2rem;
            color: #2d5016;
            margin-bottom: 0.5rem;
            font-weight: bold;
        }

        .verification-subtitle {
            color: #666;
            font-size: 1rem;
            margin-top: 0.5rem;
        }

        .verification-subtitle strong {
            color: #2d5016;
            font-weight: 600;
        }

        .verification-form {
            margin-top: 2rem;
        }

        .verification-meta {
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .verification-meta a {
            color: #4a7c2a;
            text-decoration: none;
            font-size: 0.9rem;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: color 0.3s;
        }

        .verification-meta a:hover {
            color: #2d5016;
            text-decoration: underline;
        }

        .otp-container {
            margin: 2rem 0;
        }

        .otp-intro {
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .otp-intro p {
            color: #666;
            font-size: 0.95rem;
            margin-bottom: 1rem;
        }

        .otp-timer {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            color: #4a7c2a;
            font-weight: 600;
            font-size: 0.9rem;
            padding: 0.5rem 1rem;
            background: rgba(74, 124, 42, 0.1);
            border-radius: 8px;
        }

        .otp-timer--expired {
            color: #d32f2f;
            background: rgba(211, 47, 47, 0.1);
        }

        .otp-inputs {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 1rem;
            direction: ltr;
            flex-wrap: nowrap;
            width: 100%;
            max-width: 100%;
            overflow: hidden;
        }

        .otp-input {
            width: 50px;
            height: 60px;
            text-align: center;
            font-size: 1.5rem;
            font-weight: bold;
            border: 2px solid #e0e0e0;
            border-radius: 12px;
            background: #f9f9f9;
            transition: all 0.3s;
            font-family: monospace;
            direction: ltr;
            box-sizing: border-box;
            flex-shrink: 0;
        }

        .otp-input:focus {
            outline: none;
            border-color: #4a7c2a;
            background: white;
            box-shadow: 0 0 0 3px rgba(74, 124, 42, 0.1);
            transform: scale(1.05);
        }

        .otp-input.input-validation-error {
            border-color: #ef5350;
            background: #ffebee;
        }

        .form-error {
            color: #d32f2f;
            font-size: 0.85rem;
            margin-top: 0.5rem;
            display: block;
            text-align: center;
        }

        .validation-summary-errors {
            background: #ffebee;
            border: 1px solid #ef5350;
            border-radius: 10px;
            padding: 1rem;
            margin-bottom: 1.5rem;
            color: #c62828;
            font-size: 0.9rem;
        }

        .validation-summary-errors:empty,
        .validation-summary-errors ul:empty {
            display: none;
        }

        .validation-summary-errors ul {
            list-style: none;
            margin: 0;
            padding: 0;
        }

        .validation-summary-errors li {
            margin-bottom: 0.5rem;
        }

        .validation-summary-errors li:last-child {
            margin-bottom: 0;
        }

        .auth-message {
            padding: 1rem;
            border-radius: 10px;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .auth-message--info {
            background: #e3f2fd;
            color: #1976d2;
            border: 1px solid #90caf9;
        }

        .auth-message--error {
            background: #ffebee;
            color: #c62828;
            border: 1px solid #ef5350;
        }

        .auth-debug-code {
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
            border: 2px solid rgba(102, 126, 234, 0.3);
            border-radius: 1rem;
            padding: 1.25rem 1.5rem;
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .auth-debug-code__header {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            font-size: 0.85rem;
            font-weight: 600;
            color: #667eea;
            margin-bottom: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .auth-debug-code__header i {
            font-size: 1rem;
        }

        .auth-debug-code__value {
            font-size: 2rem;
            font-weight: 700;
            color: #667eea;
            letter-spacing: 0.5rem;
            font-family: 'Courier New', monospace;
            padding: 0.75rem 1rem;
            background: rgba(255, 255, 255, 0.7);
            border-radius: 0.75rem;
            border: 2px dashed rgba(102, 126, 234, 0.4);
            margin-bottom: 0.5rem;
            text-shadow: 2px 2px 4px rgba(102, 126, 234, 0.2);
            cursor: pointer;
            transition: all 0.3s ease;
            user-select: all;
        }

        .auth-debug-code__value:hover {
            background: rgba(255, 255, 255, 0.9);
            border-color: rgba(102, 126, 234, 0.6);
            transform: scale(1.02);
        }

        .auth-debug-code__hint {
            font-size: 0.8rem;
            color: #64748b;
            font-style: italic;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.25rem;
        }

        .auth-debug-code__hint i {
            font-size: 0.9rem;
        }

        .verification-button {
            width: 100%;
            padding: 1rem 2rem;
            background: linear-gradient(135deg, #2d5016 0%, #4a7c2a 100%);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 1.1rem;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s;
            box-shadow: 0 4px 15px rgba(45, 80, 22, 0.3);
            margin-top: 1rem;
        }

        .verification-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(45, 80, 22, 0.4);
        }

        .verification-button:active {
            transform: translateY(0);
        }

        .verification-button:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }

        .verification-button--ghost {
            background: transparent;
            border: 2px solid #4a7c2a;
            color: #4a7c2a;
            box-shadow: none;
        }

        .verification-button--ghost:hover {
            background: rgba(74, 124, 42, 0.1);
            transform: translateY(-2px);
        }

        .verification-button--ghost:disabled {
            opacity: 0.4;
            cursor: not-allowed;
        }

        @@media (max-width: 768px) {
            body {
                margin: 0;
                padding: 0;
                overflow-x: hidden;
            }

            .verification-section {
                min-height: 100vh;
                min-height: 100dvh; /* Dynamic viewport height for mobile */
                padding: 1rem;
                padding-bottom: calc(1rem + 80px); /* Space for footer */
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .verification-container {
                padding: 2rem 1.5rem;
                margin: 0;
                max-width: 100%;
                width: 100%;
                border-radius: 20px 20px 0 0;
                box-shadow: 0 -5px 20px rgba(0, 0, 0, 0.1);
            }

            .verification-title {
                font-size: 1.5rem;
            }

            .verification-logo {
                width: 60px;
                height: 60px;
                font-size: 2rem;
            }

            .verification-subtitle {
                font-size: 0.9rem;
            }

            .otp-inputs {
                gap: 0.5rem;
                padding: 0 0.5rem;
            }

            .otp-input {
                width: 45px;
                height: 55px;
                font-size: 1.25rem;
                border-width: 2px;
            }

            .verification-button {
                padding: 0.875rem 1.5rem;
                font-size: 1rem;
            }
        }

        @@media (max-width: 480px) {
            .verification-section {
                padding: 0.5rem;
                padding-bottom: calc(0.5rem + 80px);
            }

            .verification-container {
                padding: 1.5rem 1rem;
                border-radius: 15px 15px 0 0;
            }

            .verification-title {
                font-size: 1.25rem;
            }

            .verification-subtitle {
                font-size: 0.85rem;
            }

            .verification-logo {
                width: 50px;
                height: 50px;
                font-size: 1.75rem;
                margin-bottom: 1rem;
            }

            .verification-header {
                margin-bottom: 1.5rem;
            }

            .otp-inputs {
                gap: 0.4rem;
                padding: 0 0.25rem;
            }

            .otp-input {
                width: 40px;
                height: 50px;
                font-size: 1.1rem;
                border-radius: 10px;
            }

            .auth-debug-code {
                padding: 1rem;
            }

            .auth-debug-code__value {
                font-size: 1.5rem;
                padding: 0.5rem 0.75rem;
                letter-spacing: 0.3rem;
            }
        }
    </style>
}

<section class="verification-section">
    <div class="verification-container">
        <div class="verification-header">
            <div class="verification-logo">آ</div>
            <h1 class="verification-title">تایید کد ورود</h1>
            <p class="verification-subtitle">
                کد ارسال شده به شماره 
                <strong>@Model.PhoneNumber</strong> 
                را وارد کنید
            </p>
        </div>

        @if (ViewData.ModelState.ErrorCount > 0)
        {
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>
        }

        @if (!string.IsNullOrWhiteSpace(Model.InfoMessage))
        {
            <div class="auth-message auth-message--info">
                <span style="font-size: 1.2rem;">ℹ️</span>
                <span>@Model.InfoMessage</span>
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
        {
            <div class="auth-message auth-message--error">
                <span style="font-size: 1.2rem;">⚠️</span>
                <span>@Model.ErrorMessage</span>
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(debugCode))
        {
            <div class="auth-debug-code">
                <div class="auth-debug-code__header">
                    <i class="bi bi-shield-check ms-2"></i>
                    <span>کد تایید برای تست (Development Only)</span>
                </div>
                <div class="auth-debug-code__value" data-debug-code="@debugCode">
                    @debugCode
                </div>
                <div class="auth-debug-code__hint">
                    <i class="bi bi-info-circle ms-1"></i>
                    این کد را در فیلدهای OTP وارد کنید
                </div>
            </div>
        }

        <div class="verification-meta">
            <a asp-action="PhoneLogin" asp-route-returnUrl="@Model.ReturnUrl" asp-route-phone="@Model.NormalizedPhoneNumber">
                ✏️ ویرایش شماره موبایل
            </a>
        </div>

        <form asp-action="VerifyCode" method="post" class="verification-form" data-otp-form>
            <input type="hidden" asp-for="ReturnUrl" />
            <input type="hidden" asp-for="NormalizedPhoneNumber" />
            <input type="hidden" asp-for="VerificationCode" id="VerificationCode" />

            <div class="otp-container">
                <div class="otp-intro">
                    <p>کد ۶ رقمی ارسال شده را وارد کنید</p>
                    <div class="otp-timer" data-expiration="@expiresAt">
                        <span>⏱️</span>
                        <span id="timerValue">120</span>
                        <span>ثانیه مانده</span>
                    </div>
                </div>

                <div class="otp-inputs" data-otp-container>
                    @for (var i = 0; i < 6; i++)
                    {
                        <input 
                            type="tel"
                            class="otp-input"
                            inputmode="numeric"
                            maxlength="1"
                            pattern="[0-9]"
                            dir="ltr"
                            autocomplete="off"
                            aria-label="رقم @(i + 1) کد تایید"
                            data-otp-input
                            data-index="@i"
                            id="otp-@i" />
                    }
                </div>
                <span asp-validation-for="VerificationCode" class="form-error"></span>
            </div>

            <button type="submit" class="verification-button">
                تایید و ورود
            </button>
        </form>

        <form asp-action="ResendCode" method="post" class="verification-form" style="margin-top: 1rem;">
            <input type="hidden" asp-for="ReturnUrl" />
            <input type="hidden" asp-for="NormalizedPhoneNumber" />
            <button 
                type="submit" 
                id="resendButton" 
                class="verification-button verification-button--ghost"
                @(Model.AllowResend ? null : "disabled")>
                ارسال مجدد کد
            </button>
        </form>
    </div>
</section>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <script>
        // Debug Code Display - Copy to clipboard on click
        @if (!string.IsNullOrWhiteSpace(debugCode))
        {
            var debugCodeJson = System.Text.Json.JsonSerializer.Serialize(debugCode);
            <text>
        (function() {
            var debugCode = @Html.Raw(debugCodeJson);
            var debugCodeElement = document.querySelector('[data-debug-code]');
            
            if (debugCodeElement) {
                debugCodeElement.addEventListener('click', function() {
                    navigator.clipboard.writeText(debugCode).then(function() {
                        var originalText = debugCodeElement.textContent;
                        debugCodeElement.textContent = 'کپی شد!';
                        debugCodeElement.style.color = '#10b981';
                        setTimeout(function() {
                            debugCodeElement.textContent = originalText;
                            debugCodeElement.style.color = '#667eea';
                        }, 1500);
                    }).catch(function(err) {
                        console.error('Failed to copy:', err);
                    });
                });
            }
            
            // Also log to console for developers
            console.log('%c═══════════════════════════════════════', 'color: #667eea; font-weight: bold;');
            console.log('%c🔐 کد تایید برای تست (Development Only)', 'background: linear-gradient(135deg, #667eea, #764ba2); color: white; font-weight: bold; padding: 10px 15px; border-radius: 8px; font-size: 14px;');
            console.log('%c' + debugCode, 'color: #667eea; font-weight: bold; font-size: 32px; letter-spacing: 8px; text-shadow: 2px 2px 4px rgba(102, 126, 234, 0.3);');
            console.log('%c═══════════════════════════════════════', 'color: #764ba2; font-weight: bold;');
        })();
            </text>
        }

        document.addEventListener('DOMContentLoaded', function() {
            // OTP Input Management
            const form = document.querySelector('[data-otp-form]');
            const container = document.querySelector('[data-otp-container]');
            const inputs = container ? Array.from(container.querySelectorAll('[data-otp-input]')) : [];
            const hiddenInput = document.getElementById('VerificationCode');
            const resendButton = document.getElementById('resendButton');
            const timerElement = document.querySelector('.otp-timer');
            const timerValue = document.getElementById('timerValue');
            let isSubmitting = false;

            if (!form || !inputs.length || !hiddenInput) {
                console.error('OTP form elements not found');
                return;
            }

            const updateHidden = () => {
                hiddenInput.value = inputs.map(input => input.value).join('');
            };

            const focusNext = (index) => {
                if (index < inputs.length - 1) {
                    setTimeout(() => {
                        inputs[index + 1].focus();
                        inputs[index + 1].select();
                    }, 10);
                }
            };

            const focusPrev = (index) => {
                if (index > 0) {
                    setTimeout(() => {
                        inputs[index - 1].focus();
                        inputs[index - 1].select();
                    }, 10);
                }
            };

            const submitForm = () => {
                if (isSubmitting) {
                    return;
                }
                updateHidden();
                // Check if code is complete before submitting
                if (hiddenInput.value.length === 6) {
                    // Use requestSubmit to trigger submit event (which will set isSubmitting and disable button)
                    if (form.requestSubmit) {
                        form.requestSubmit();
                    } else {
                        // Fallback for older browsers
                        isSubmitting = true;
                        const button = form.querySelector('.verification-button[type="submit"]');
                        if (button) {
                            button.disabled = true;
                            button.textContent = 'در حال تایید...';
                        }
                        form.submit();
                    }
                }
            };

            const handlePaste = (e, index) => {
                e.preventDefault();
                const paste = (e.clipboardData || window.clipboardData).getData('text');
                const digits = paste.replace(/\D/g, '').split('');
                
                digits.forEach((digit, i) => {
                    const targetIndex = index + i;
                    if (targetIndex < inputs.length) {
                        inputs[targetIndex].value = digit;
                    }
                });
                
                updateHidden();
                const lastIndex = Math.min(index + digits.length - 1, inputs.length - 1);
                setTimeout(() => {
                    inputs[lastIndex].focus();
                }, 10);

                // Check if all inputs are filled
                if (inputs.every(inp => inp.value) && hiddenInput.value.length === 6) {
                    setTimeout(() => submitForm(), 500);
                }
            };

            inputs.forEach((input, index) => {
                // Clear previous value
                input.value = '';

                // Input event - handles typing
                input.addEventListener('input', (e) => {
                    let value = e.target.value.replace(/\D/g, '');
                    
                    if (value.length > 1) {
                        value = value.charAt(0);
                    }
                    
                    e.target.value = value;
                    
                    // Move to next input if digit entered
                    if (value.length === 1) {
                        updateHidden();
                        focusNext(index);
                        
                        // Check if all inputs are filled for auto-submit
                        if (inputs.every(inp => inp.value) && hiddenInput.value.length === 6) {
                            setTimeout(() => {
                                submitForm();
                            }, 300);
                        }
                    } else {
                        updateHidden();
                    }
                });

                // Keydown event - handles backspace and arrows
                input.addEventListener('keydown', (e) => {
                    if (e.key === 'Backspace') {
                        if (!input.value) {
                            e.preventDefault();
                            focusPrev(index);
                        }
                    }
                    else if (e.key === 'ArrowLeft') {
                        e.preventDefault();
                        focusPrev(index);
                    }
                    else if (e.key === 'ArrowRight') {
                        e.preventDefault();
                        focusNext(index);
                    }
                    else if (e.key.length === 1 && !/[0-9]/.test(e.key)) {
                        e.preventDefault();
                    }
                });

                // Paste event
                input.addEventListener('paste', (e) => handlePaste(e, index));

                // Focus event - select all
                input.addEventListener('focus', (e) => {
                    e.target.select();
                });

                // Click event - select all
                input.addEventListener('click', (e) => {
                    e.target.select();
                });
            });

            // Auto-focus first input
            setTimeout(() => {
                inputs[0].focus();
                inputs[0].select();
            }, 300);

            // Timer Management
            if (timerElement && resendButton && timerValue) {
                const expirationAttr = timerElement.getAttribute('data-expiration');
                
                if (!expirationAttr) {
                    markExpired();
                } else {
                    const expiration = new Date(expirationAttr).getTime();
                    
                    if (isNaN(expiration)) {
                        markExpired();
                    } else {
                        const updateTimer = () => {
                            const now = Date.now();
                            const remaining = Math.max(0, Math.floor((expiration - now) / 1000));
                            timerValue.textContent = remaining;
                            
                            if (remaining <= 0) {
                                clearInterval(interval);
                                markExpired();
                            }
                        };

                        updateTimer();
                        const interval = setInterval(updateTimer, 1000);
                    }
                }
            }

            function markExpired() {
                if (resendButton) resendButton.removeAttribute('disabled');
                if (timerElement) timerElement.classList.add('otp-timer--expired');
                if (timerValue) timerValue.textContent = '0';
            }

            // Form submission - prevent double submission
            form.addEventListener('submit', function(e) {
                if (isSubmitting) {
                    e.preventDefault();
                    return false;
                }
                updateHidden();
                // Only proceed if code is complete
                if (hiddenInput.value.length !== 6) {
                    e.preventDefault();
                    return false;
                }
                isSubmitting = true;
                const button = form.querySelector('.verification-button[type="submit"]');
                if (button) {
                    button.disabled = true;
                    button.textContent = 'در حال تایید...';
                }
            });
        });
    </script>
}
