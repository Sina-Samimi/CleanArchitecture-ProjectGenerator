@model Attar.WebSite.Models.Cart.CartViewModel
@{
    Layout = "_HomeTemplateLayout";
    ViewData["Title"] = "سبد خرید";
    var successMessage = ViewBag.SuccessMessage as string;
    var errorMessage = ViewBag.ErrorMessage as string;
    var discountForm = ViewBag.ApplyDiscount as Attar.WebSite.Models.Cart.ApplyDiscountInputModel ?? new Attar.WebSite.Models.Cart.ApplyDiscountInputModel();
}

<div class="cart-page">
    <div class="cart-header">
        <h1 class="cart-title">سبد خرید</h1>
        <p class="cart-subtitle">مروری بر محصولات انتخاب شده و مدیریت تخفیف‌ها</p>
    </div>

    @if (!string.IsNullOrWhiteSpace(successMessage))
    {
        <div class="alert alert-success cart-alert" role="status">@successMessage</div>
    }
    @if (!string.IsNullOrWhiteSpace(errorMessage))
    {
        <div class="alert alert-danger cart-alert" role="alert">@errorMessage</div>
    }

    @if (Model.IsEmpty)
    {
        <div class="cart-empty" role="status">
            <h2 class="cart-empty__title">سبد خرید شما خالی است</h2>
            <p class="cart-empty__text">برای شروع می‌توانید به صفحه محصولات بروید و موارد مورد نظر خود را انتخاب کنید.</p>
            <a class="cart-empty__cta" asp-controller="Product" asp-action="Index">مشاهده محصولات</a>
        </div>
    }
    else
    {
        @Html.AntiForgeryToken()
        <div class="cart-content">
            <section class="cart-items" aria-label="لیست محصولات">
                <table class="cart-table">
                    <thead>
                        <tr>
                            <th scope="col">محصول</th>
                            <th scope="col">قیمت واحد</th>
                            <th scope="col">تعداد</th>
                            <th scope="col">جمع جزء</th>
                            <th scope="col">عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr class="cart-item">
                                <td data-label="محصول">
                                    <div class="cart-item__product">
                                        <img class="cart-item__thumbnail" src="@(!string.IsNullOrWhiteSpace(item.ThumbnailUrl) ? item.ThumbnailUrl : "https://placehold.co/160x160?text=Arsis")" alt="@item.Name" loading="lazy" />
                                        <div class="cart-item__info">
                                            <a class="cart-item__name" asp-controller="Product" asp-action="Details" asp-route-slug="@item.Slug">@item.Name</a>
                                            <span class="cart-item__type">@((item.ProductType == Attar.Domain.Enums.ProductType.Digital) ? "محصول دیجیتال" : "محصول حضوری")</span>
                                        </div>
                                    </div>
                                </td>
                                <td data-label="قیمت واحد">
                                    <div class="cart-item__price">
                                        <span>@item.UnitPrice.ToString("N0", new System.Globalization.CultureInfo("fa-IR")) تومان</span>
                                        @if (item.CompareAtPrice.HasValue)
                                        {
                                            <span class="cart-item__price-original">@item.CompareAtPrice.Value.ToString("N0", new System.Globalization.CultureInfo("fa-IR")) تومان</span>
                                        }
                                    </div>
                                </td>
                                <td data-label="تعداد">
                            <div class="cart-item__quantity-controls" data-product-id="@item.ProductId" data-offer-id="@item.OfferId">
                                        <button type="button" class="cart-item__quantity-btn cart-item__quantity-btn--decrease" aria-label="کاهش تعداد">−</button>
                                        <span class="cart-item__quantity-display" data-quantity="@item.Quantity">@item.Quantity</span>
                                        <button type="button" class="cart-item__quantity-btn cart-item__quantity-btn--increase" @(item.CanIncreaseQuantity ? null : "disabled") aria-label="افزایش تعداد">+</button>
                                    </div>
                                </td>
                                <td data-label="جمع جزء">
                                    <span class="cart-item__total" data-line-total="@($"{item.ProductId}-{item.OfferId}")">@item.LineTotal.ToString("N0", new System.Globalization.CultureInfo("fa-IR")) تومان</span>
                                </td>
                                <td data-label="عملیات">
                                    <form asp-action="RemoveItem" method="post" class="cart-item__remove-form">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                        <input type="hidden" name="offerId" value="@item.OfferId" />
                                        <button type="submit" class="cart-item__remove" aria-label="حذف @item.Name از سبد">
                                            حذف
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </section>

            <aside class="cart-summary" aria-label="خلاصه سفارش">
                <div class="cart-summary__card">
                    <h2 class="cart-summary__title">خلاصه سفارش</h2>
                    <dl class="cart-summary__details">
                        <div class="cart-summary__row">
                            <dt>جمع جزء</dt>
                            <dd id="cart-subtotal">@Model.Subtotal.ToString("N0", new System.Globalization.CultureInfo("fa-IR")) تومان</dd>
                        </div>
                        <div class="cart-summary__row">
                            <dt>تخفیف</dt>
                            <dd id="cart-discount">@Model.DiscountTotal.ToString("N0", new System.Globalization.CultureInfo("fa-IR")) تومان</dd>
                        </div>
                        <div class="cart-summary__divider" aria-hidden="true"></div>
                        <div class="cart-summary__row cart-summary__row--total">
                            <dt>مبلغ قابل پرداخت</dt>
                            <dd id="cart-grandtotal">@Model.GrandTotal.ToString("N0", new System.Globalization.CultureInfo("fa-IR")) تومان</dd>
                        </div>
                    </dl>

                    @if (Model.Discount is not null)
                    {
                        <div class="cart-summary__discount-info">
                            <strong>کد تخفیف فعال:</strong> <span>@Model.Discount.Code</span>
                            <form asp-action="ClearDiscount" method="post" class="cart-summary__discount-remove">
                                @Html.AntiForgeryToken()
                                <button type="submit">حذف تخفیف</button>
                            </form>
                        </div>
                    }
                    else
                    {
                        <form asp-action="ApplyDiscount" method="post" class="cart-summary__discount-form">
                            @Html.AntiForgeryToken()
                            <label for="discountCode" class="form-label">کد تخفیف دارید؟</label>
                            <input id="discountCode" name="Code" value="@discountForm.Code" class="form-control" autocomplete="off" placeholder="کد تخفیف را وارد کنید" />
                            <button type="submit" class="cart-summary__discount-button">اعمال کد</button>
                        </form>
                    }

                    <div class="cart-summary__cta">
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <a class="cart-summary__checkout" asp-controller="Checkout" asp-action="Index">
                                تسویه حساب
                            </a>
                        }
                        else
                        {
                            <a class="cart-summary__checkout" asp-controller="Account" asp-action="PhoneLogin" asp-route-returnUrl="@Url.Action("Index", "Checkout")">
                                ورود و تسویه حساب
                            </a>
                        }
                        <a class="cart-summary__continue" asp-controller="Product" asp-action="Index">ادامه خرید</a>
                    </div>
                </div>
            </aside>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const quantityControls = document.querySelectorAll('.cart-item__quantity-controls');
            
            quantityControls.forEach(control => {
                const productId = control.getAttribute('data-product-id');
                const offerId = control.getAttribute('data-offer-id');
                const decreaseBtn = control.querySelector('.cart-item__quantity-btn--decrease');
                const increaseBtn = control.querySelector('.cart-item__quantity-btn--increase');
                const quantityDisplay = control.querySelector('.cart-item__quantity-display');
                const lineTotalElement = document.querySelector(`[data-line-total="${productId}-${offerId}"]`);
                
                if (!decreaseBtn || !increaseBtn || !quantityDisplay) return;
                
                async function updateQuantity(change) {
                    const currentQuantity = parseInt(quantityDisplay.getAttribute('data-quantity')) || 0;
                    const newQuantity = currentQuantity + change;
                    
                    if (newQuantity < 1) return;
                    
                    // Disable buttons during request
                    decreaseBtn.disabled = true;
                    increaseBtn.disabled = true;
                    
                    try {
                        const formData = new FormData();
                        formData.append('productId', productId);
                        formData.append('quantity', newQuantity);
                        if (offerId) {
                            formData.append('offerId', offerId);
                        }
                        
                        // Get anti-forgery token
                        const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                        if (tokenInput) {
                            formData.append('__RequestVerificationToken', tokenInput.value);
                        }
                        
                        const response = await fetch('@Url.Action("UpdateQuantityAjax", "Cart")', {
                            method: 'POST',
                            body: formData,
                            headers: {
                                'X-Requested-With': 'XMLHttpRequest'
                            }
                        });
                        
                        const result = await response.json();
                        
                        if (result.success) {
                            // Update quantity display
                            quantityDisplay.textContent = result.quantity;
                            quantityDisplay.setAttribute('data-quantity', result.quantity);
                            
                            // Update line total
                            if (lineTotalElement) {
                                const lineTotalFormatted = new Intl.NumberFormat('fa-IR').format(result.lineTotal);
                                lineTotalElement.textContent = lineTotalFormatted + ' تومان';
                            }
                            
                            // Update summary
                            const subtotalFormatted = new Intl.NumberFormat('fa-IR').format(result.subtotal);
                            const discountFormatted = new Intl.NumberFormat('fa-IR').format(result.discountTotal);
                            const grandTotalFormatted = new Intl.NumberFormat('fa-IR').format(result.grandTotal);
                            
                            const subtotalElement = document.getElementById('cart-subtotal');
                            const discountElement = document.getElementById('cart-discount');
                            const grandTotalElement = document.getElementById('cart-grandtotal');
                            
                            if (subtotalElement) subtotalElement.textContent = subtotalFormatted + ' تومان';
                            if (discountElement) discountElement.textContent = discountFormatted + ' تومان';
                            if (grandTotalElement) grandTotalElement.textContent = grandTotalFormatted + ' تومان';
                            
                            // Update increase button state
                            increaseBtn.disabled = !result.canIncreaseQuantity;
                        } else {
                            alert(result.error || 'خطا در به‌روزرسانی تعداد');
                        }
                    } catch (error) {
                        console.error('Error updating quantity:', error);
                        alert('خطا در ارتباط با سرور');
                    } finally {
                        // Re-enable buttons
                        decreaseBtn.disabled = false;
                        const currentQty = parseInt(quantityDisplay.getAttribute('data-quantity')) || 0;
                        if (currentQty <= 0) {
                            decreaseBtn.disabled = true;
                        }
                    }
                }
                
                decreaseBtn.addEventListener('click', () => updateQuantity(-1));
                increaseBtn.addEventListener('click', () => updateQuantity(1));
            });
        });
    </script>
}
