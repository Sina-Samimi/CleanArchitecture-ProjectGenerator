@model InvoicePaymentOptionsViewModel
@{
    ViewData["Title"] ??= $"انتخاب روش پرداخت برای فاکتور {Model.InvoiceNumber}";
    var outstanding = Model.OutstandingAmount;
    var currency = string.IsNullOrWhiteSpace(Model.Currency) ? "IRT" : Model.Currency;
}

<div class="wallet-payment-options" data-wallet-payment-options>
    @await Html.PartialAsync("_StatusMessage")

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body p-4">
            <div class="d-flex flex-column flex-lg-row justify-content-between align-items-start gap-3">
                <div>
                    <div class="text-uppercase text-muted fw-semibold mb-2">شماره فاکتور</div>
                    <h1 class="display-6 fw-bold mb-2">@Model.InvoiceNumber</h1>
                    <div class="text-muted">@Model.Title</div>
                </div>
                <div class="text-end">
                    <div class="text-muted small mb-1">وضعیت فعلی</div>
                    <span class="badge bg-primary-subtle text-primary">@Model.Status</span>
                    <div class="mt-3">
                        <div class="text-muted small">مبلغ قابل پرداخت</div>
                        <div class="fs-4 fw-bold @(outstanding > 0 ? "text-danger" : "text-success")">
                            @outstanding.ToString("N0") @currency
                        </div>
                    </div>
                    <div class="text-muted small mt-2">
                        تاریخ صدور: @Model.IssueDate.ToPersianDateString()
                        @if (Model.DueDate is not null)
                        {
                            <span class="d-block">تاریخ سررسید: @Model.DueDate.Value.ToPersianDateString()</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
    }

    <div class="row g-4">
        @if (!Model.IsWalletChargeInvoice)
        {
            <div class="col-12 col-lg-6">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body d-flex flex-column">
                        <div class="mb-3">
                            <div class="text-muted small mb-1">موجودی کیف پول</div>
                            <div class="fs-4 fw-bold">@Model.WalletBalance.ToString("N0") @currency</div>
                        </div>
                        @if (Model.IsWalletLocked)
                        {
                            <div class="alert alert-warning" role="alert">
                                کیف پول شما در حال حاضر قفل است و امکان برداشت وجود ندارد.
                            </div>
                        }
                        else if (!Model.WalletCanCover)
                        {
                            <div class="alert alert-info" role="alert">
                                موجودی کیف پول برای تسویه کامل این فاکتور کافی نیست.
                            </div>
                        }
                        else if (outstanding <= 0)
                        {
                            <div class="alert alert-success" role="alert">
                                این فاکتور قبلاً تسویه شده است.
                            </div>
                        }
                        <p class="text-muted small flex-grow-1">
                            با انتخاب این گزینه، مبلغ فاکتور به صورت فوری از کیف پول شما کسر می‌شود و دسترسی به خدمات خریداری‌شده فعال خواهد شد.
                        </p>
                        <form asp-action="PayInvoice" method="post" class="mt-3">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="invoiceId" value="@Model.InvoiceId" />
                            <input type="hidden" name="method" value="Wallet" />
                            <button type="submit" class="btn btn-primary w-100" @(Model.IsWalletLocked || !Model.WalletCanCover || outstanding <= 0 ? "disabled" : null)>
                                <i class="bi bi-wallet2 ms-1"></i>
                                پرداخت با کیف پول
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
        <div class="col-12 @(Model.IsWalletChargeInvoice ? "col-lg-12" : "col-lg-6")">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body d-flex flex-column">
                    <div class="mb-3">
                        <div class="text-muted small mb-1">درگاه بانکی</div>
                        <div class="fs-5 fw-semibold">پرداخت اینترنتی امن</div>
                    </div>
                    <p class="text-muted small flex-grow-1">
                        با انتخاب این گزینه به درگاه بانکی شبیه‌سازی‌شده هدایت می‌شوید. پس از تکمیل پرداخت، با وارد کردن کد پیگیری می‌توانید وضعیت فاکتور را نهایی کنید.
                    </p>
                    <form asp-action="PayInvoice" method="post" class="mt-3">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="invoiceId" value="@Model.InvoiceId" />
                        <input type="hidden" name="method" value="OnlineGateway" />
                        <button type="submit" class="btn btn-outline-primary w-100" @(outstanding <= 0 ? "disabled" : null)>
                            <i class="bi bi-bank ms-1"></i>
                            اتصال به درگاه بانکی
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-link">
            بازگشت به کیف پول
        </a>
        <a asp-action="InvoiceDetails" asp-route-id="@Model.InvoiceId" class="btn btn-link">
            مشاهده جزئیات فاکتور
        </a>
    </div>
</div>
