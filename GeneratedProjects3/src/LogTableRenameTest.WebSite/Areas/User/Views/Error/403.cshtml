@{
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
    ViewData["Title"] = "دسترسی غیرمجاز";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <div class="card border-0 shadow-sm text-center p-4 p-md-5">
                <div class="mb-4">
                    <span class="display-4 text-warning d-inline-flex align-items-center justify-content-center rounded-circle bg-warning-subtle shadow-sm" style="width: 96px; height: 96px;">
                        <i class="bi bi-shield-lock"></i>
                    </span>
                </div>
                <h1 class="h3 mb-3">دسترسی به این صفحه محدود است</h1>
                <p class="text-muted mb-4">
                    متاسفانه شما مجوز کافی برای مشاهده این بخش را ندارید. اگر فکر می‌کنید این پیام اشتباهی است، لطفاً با تیم پشتیبانی تماس بگیرید تا دسترسی شما بررسی شود.
                </p>
                <div class="d-flex flex-column flex-md-row gap-2 justify-content-center">
                    <a asp-area="User" asp-controller="Dashboard" asp-action="Index" class="btn btn-primary px-4">
                        <i class="bi bi-house-door me-1"></i>
                        بازگشت به داشبورد
                    </a>
                    <a href="tel:02100000000" class="btn btn-outline-primary px-4">
                        <i class="bi bi-headset me-1"></i>
                        تماس با پشتیبانی
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

