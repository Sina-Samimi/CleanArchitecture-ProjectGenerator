@using LogTableRenameTest.Domain.Enums
@using LogTableRenameTest.WebSite.Areas.User.Models
@model TicketListViewModel
@{
    ViewData["Title"] ??= "تیکت‌های من";
    ViewData["Subtitle"] ??= "مدیریت تیکت‌های پشتیبانی";

    string StatusBadge(TicketStatus status) => status switch
    {
        TicketStatus.Pending => "badge bg-primary",
        TicketStatus.InProgress => "badge bg-warning",
        TicketStatus.Answered => "badge bg-success",
        TicketStatus.Closed => "badge bg-secondary",
        _ => "badge bg-secondary"
    };

    string StatusText(TicketStatus status) => status switch
    {
        TicketStatus.Pending => "باز",
        TicketStatus.InProgress => "در حال بررسی",
        TicketStatus.Answered => "پاسخ داده شده",
        TicketStatus.Closed => "بسته شده",
        _ => "نامشخص"
    };
}

@await Html.PartialAsync("_StatusMessage")

<div class="d-flex justify-content-between align-items-center mb-4">
    <a asp-action="Create" class="btn btn-primary rounded-pill px-4">
        <i class="bi bi-plus-circle-fill me-2"></i> تیکت جدید
    </a>
    <a href="javascript:history.back()" class="btn btn-outline-secondary rounded-pill px-4">
        <i class="bi bi-arrow-left me-2"></i> بازگشت
    </a>
</div>

<div class="card shadow-sm border-0 mb-4">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="h4 mb-0 text-center w-100">تیکت های من</h2>
            <div class="d-flex gap-2">
                <button type="button" class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#searchModal">
                    <i class="bi bi-search"></i>
                </button>
                <button type="button" class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#filterModal">
                    <i class="bi bi-funnel"></i>
                </button>
            </div>
        </div>

        <!-- Status Cards -->
        <div class="row g-3 mb-4">
            <div class="col-6 col-md-3">
                <div class="card border-0 shadow-sm h-100 @(Model.StatusCounts.OpenCount > 0 ? "bg-primary text-white" : "bg-light")">
                    <div class="card-body text-center">
                        <div class="mb-2">
                            <i class="bi bi-envelope fs-1"></i>
                        </div>
                        <div class="fw-bold fs-5">@Model.StatusCounts.OpenCount</div>
                        <div class="small">تیکت های باز</div>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="card border-0 shadow-sm h-100 @(Model.StatusCounts.InProgressCount > 0 ? "bg-warning text-white" : "bg-light")">
                    <div class="card-body text-center position-relative">
                        <div class="mb-2">
                            <i class="bi bi-envelope fs-1"></i>
                            <i class="bi bi-clock text-warning position-absolute" style="top: 10px; right: 10px; font-size: 0.8rem;"></i>
                        </div>
                        <div class="fw-bold fs-5">@Model.StatusCounts.InProgressCount</div>
                        <div class="small">در حال بررسی</div>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="card border-0 shadow-sm h-100 @(Model.StatusCounts.AnsweredCount > 0 ? "bg-success text-white" : "bg-light")">
                    <div class="card-body text-center position-relative">
                        <div class="mb-2">
                            <i class="bi bi-envelope fs-1"></i>
                            <i class="bi bi-check-circle text-success position-absolute" style="top: 10px; right: 10px; font-size: 0.8rem;"></i>
                        </div>
                        <div class="fw-bold fs-5">@Model.StatusCounts.AnsweredCount</div>
                        <div class="small">پاسخ داده شده</div>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="card border-0 shadow-sm h-100 bg-light">
                    <div class="card-body text-center">
                        <div class="mb-2">
                            <i class="bi bi-envelope-closed fs-1"></i>
                        </div>
                        <div class="fw-bold fs-5">@Model.StatusCounts.ClosedCount</div>
                        <div class="small">بسته شده</div>
                    </div>
                </div>
            </div>
        </div>

        @if (!Model.Tickets.Any())
        {
            <div class="alert alert-info text-center py-5">
                <i class="bi bi-inbox fs-1 mb-3 d-block"></i>
                <p class="mb-0">هنوز تیکتی ثبت نکرده‌اید.</p>
            </div>
        }
        else
        {
            <!-- Tickets Table -->
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th>عنوان</th>
                            <th>شناسه</th>
                            <th>وضعیت</th>
                            <th class="text-end">عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ticket in Model.Tickets)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="flex-grow-1">
                                            <div class="fw-semibold">@ticket.Subject</div>
                                            @if (ticket.HasUnreadReplies)
                                            {
                                                <span class="badge bg-danger">پاسخ جدید</span>
                                            }
                                        </div>
                                        <i class="bi bi-chevron-down text-muted"></i>
                                    </div>
                                </td>
                                <td>
                                    <span class="text-muted">@ticket.TicketNumber</span>
                                </td>
                                <td>
                                    <span class="@StatusBadge(ticket.Status)">@StatusText(ticket.Status)</span>
                                </td>
                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@ticket.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-arrow-left"></i> مشاهده
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <div class="d-flex justify-content-between align-items-center mt-4">
                    <div class="d-flex align-items-center gap-2">
                        <label class="mb-0">مورد در صفحه:</label>
                        <select class="form-select form-select-sm" style="width: auto;">
                            <option value="7" selected>7</option>
                            <option value="10">10</option>
                            <option value="20">20</option>
                            <option value="50">50</option>
                        </select>
                    </div>
                    <nav aria-label="صفحه‌بندی">
                        <ul class="pagination mb-0">
                            @if (Model.PageNumber > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber - 1)">
                                        <i class="bi bi-chevron-right"></i>
                                    </a>
                                </li>
                            }
                            <li class="page-item active">
                                <span class="page-link">@Model.PageNumber</span>
                            </li>
                            @if (Model.PageNumber < Model.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber + 1)">
                                        <i class="bi bi-chevron-left"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            }
        }
    </div>
</div>
