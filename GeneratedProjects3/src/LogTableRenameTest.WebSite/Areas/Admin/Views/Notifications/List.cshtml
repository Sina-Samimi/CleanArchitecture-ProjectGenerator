@model AdminNotificationListViewModel
@using LogTableRenameTest.Domain.Enums
@using LogTableRenameTest.SharedKernel.Extensions

@{
    ViewData["Title"] = "اعلان‌های ارسالی";
    ViewData["Subtitle"] = "مدیریت اعلان‌های ارسال شده توسط شما";
}

@await Html.PartialAsync("_StatusMessage")

<div class="admin-notifications-page">
    <!-- Stats Box -->
    <div class="row mb-4 g-3">
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card shadow-sm border-0 notification-stat-card">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="text-muted small mb-1">کل اعلانات</p>
                            <h3 class="h4 mb-0 fw-bold text-primary">@Model.Stats.Total</h3>
                        </div>
                        <i class="bi bi-bell-fill text-primary" style="font-size: 2rem; opacity: 0.3;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card shadow-sm border-0 notification-stat-card">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="text-muted small mb-1">فعال</p>
                            <h3 class="h4 mb-0 fw-bold text-success">@Model.Stats.Active</h3>
                        </div>
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 2rem; opacity: 0.3;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card shadow-sm border-0 notification-stat-card">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="text-muted small mb-1">غیرفعال</p>
                            <h3 class="h4 mb-0 fw-bold text-danger">@Model.Stats.Inactive</h3>
                        </div>
                        <i class="bi bi-x-circle-fill text-danger" style="font-size: 2rem; opacity: 0.3;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card shadow-sm border-0 notification-stat-card">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="text-muted small mb-1">منقضی‌شده</p>
                            <h3 class="h4 mb-0 fw-bold text-warning">@Model.Stats.Expired</h3>
                        </div>
                        <i class="bi bi-calendar-x-fill text-warning" style="font-size: 2rem; opacity: 0.3;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter & Actions Bar -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-3">
                <h5 class="card-title mb-0">فیلتر‌های جستجو</h5>
                <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="collapse" data-bs-target="#filterPanel" aria-expanded="false">
                    <i class="bi bi-funnel"></i>
                    نمایش فیلتر‌ها
                </button>
            </div>
            
            <div class="collapse @(Model.SearchTitle != null || Model.SearchMessage != null || Model.TypeFilter.HasValue || Model.PriorityFilter.HasValue || Model.DateFromFilterPersian != null || Model.DateToFilterPersian != null || Model.IsActiveFilter.HasValue ? "show" : "")" id="filterPanel">
                <form method="get" asp-action="List" class="row g-3">
                    <div class="col-12 col-md-6">
                        <label for="searchTitle" class="form-label">جستجو در عنوان</label>
                        <input type="text" name="searchTitle" id="searchTitle" class="form-control form-control-sm" placeholder="عنوان اعلان را وارد کنید" value="@Model.SearchTitle" />
                    </div>
                    <div class="col-12 col-md-6">
                        <label for="searchMessage" class="form-label">جستجو در متن</label>
                        <input type="text" name="searchMessage" id="searchMessage" class="form-control form-control-sm" placeholder="متن اعلان را وارد کنید" value="@Model.SearchMessage" />
                    </div>
                    <div class="col-12 col-md-6">
                        <label for="typeFilter" class="form-label">نوع اعلان</label>
                        <select name="typeFilter" id="typeFilter" class="form-select form-select-sm">
                            <option value="">-- همه --</option>
                            @foreach (var type in Enum.GetValues<NotificationType>())
                            {
                                <option value="@((int)type)" selected="@(Model.TypeFilter == (int)type)">@type.GetDisplayName()</option>
                            }
                        </select>
                    </div>
                    <div class="col-12 col-md-6">
                        <label for="priorityFilter" class="form-label">اولویت</label>
                        <select name="priorityFilter" id="priorityFilter" class="form-select form-select-sm">
                            <option value="">-- همه --</option>
                            @foreach (var priority in Enum.GetValues<NotificationPriority>())
                            {
                                <option value="@((int)priority)" selected="@(Model.PriorityFilter == (int)priority)">@priority.GetDisplayName()</option>
                            }
                        </select>
                    </div>
                    <div class="col-12 col-md-6">
                        <label for="dateFromFilter" class="form-label">از تاریخ (شمسی)</label>
                        <input type="text" name="dateFromFilter" id="dateFromFilter" class="form-control form-control-sm persian-date-input" placeholder="1402/01/01" value="@Model.DateFromFilterPersian" />
                    </div>
                    <div class="col-12 col-md-6">
                        <label for="dateToFilter" class="form-label">تا تاریخ (شمسی)</label>
                        <input type="text" name="dateToFilter" id="dateToFilter" class="form-control form-control-sm persian-date-input" placeholder="1402/12/29" value="@Model.DateToFilterPersian" />
                    </div>
                    <div class="col-12 col-md-6">
                        <label for="isActiveFilter" class="form-label">وضعیت</label>
                        <select name="isActiveFilter" id="isActiveFilter" class="form-select form-select-sm">
                            <option value="">-- همه --</option>
                            <option value="true" selected="@(Model.IsActiveFilter == true)">فعال</option>
                            <option value="false" selected="@(Model.IsActiveFilter == false)">غیرفعال</option>
                        </select>
                    </div>
                    <div class="col-12 d-flex gap-2">
                        <button type="submit" class="btn btn-sm btn-primary">
                            <i class="bi bi-search"></i>
                            جستجو
                        </button>
                        <a href="@Url.Action("List")" class="btn btn-sm btn-outline-secondary">
                            <i class="bi bi-arrow-clockwise"></i>
                            پاک کردن فیلتر‌ها
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Notifications List -->
    @if (Model.Items.Count == 0)
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <div class="fs-1 mb-3">📭</div>
                <h3 class="h5 mb-2">هیچ اعلانی یافت نشد</h3>
                <p class="text-muted mb-0">شما هنوز اعلانی ارسال نکرده‌اید.</p>
                <a href="@Url.Action("Create")" class="btn btn-sm btn-primary mt-3">
                    <i class="bi bi-plus-lg"></i>
                    ایجاد اعلان جدید
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="notifications-list">
            @foreach (var notification in Model.Items)
            {
                var priorityClass = notification.Priority switch
                {
                    NotificationPriority.Low => "bg-secondary",
                    NotificationPriority.Normal => "bg-info",
                    NotificationPriority.High => "bg-warning",
                    NotificationPriority.Urgent => "bg-danger",
                    _ => "bg-secondary"
                };

                var typeIcon = notification.Type switch
                {
                    NotificationType.General => "bi-info-circle",
                    NotificationType.Important => "bi-exclamation-triangle",
                    NotificationType.Warning => "bi-exclamation-circle",
                    NotificationType.Promotion => "bi-tag",
                    NotificationType.System => "bi-gear",
                    _ => "bi-bell"
                };

                <div class="card mb-3 border-0 shadow-sm">
                    <div class="card-body">
                        <div class="row align-items-start">
                            <div class="col-12 col-lg-8">
                                <div class="d-flex align-items-start gap-2 mb-2">
                                    <i class="bi @typeIcon text-primary flex-shrink-0 mt-1"></i>
                                    <div class="flex-grow-1 min-w-0">
                                        <h5 class="card-title mb-1 @(notification.IsActive ? "" : "text-muted")">@notification.Title</h5>
                                        <p class="card-text text-muted small mb-2" style="word-wrap: break-word; overflow-wrap: break-word;">@notification.Message</p>
                                        <div class="d-flex gap-2 flex-wrap">
                                            <span class="badge @priorityClass">@notification.Priority.GetDisplayName()</span>
                                            @if (!notification.IsActive)
                                            {
                                                <span class="badge bg-danger">غیرفعال</span>
                                            }
                                            @if (notification.IsExpired)
                                            {
                                                <span class="badge bg-secondary">منقضی شده</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-4">
                                <div class="d-flex flex-column gap-1 mb-3 small text-muted">
                                    <div>
                                        <i class="bi bi-clock"></i>
                                        <span>@notification.SentAt.ToPersianDateTimeString()</span>
                                    </div>
                                    @if (notification.ExpiresAt.HasValue)
                                    {
                                        <div>
                                            <i class="bi bi-calendar-x"></i>
                                            <span>انقضا: @notification.ExpiresAt.Value.ToPersianDateString()</span>
                                        </div>
                                    }
                                    <div>
                                        <i class="bi bi-people"></i>
                                        <span>@notification.RecipientCount مرسول‌شونده</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex gap-2 justify-content-end flex-wrap">
                            <button type="button" class="btn btn-sm btn-outline-primary edit-notification-btn" data-notification-id="@notification.Id" data-title="@notification.Title" data-message="@notification.Message" data-expires="@(notification.ExpiresAt.HasValue ? notification.ExpiresAt.Value.ToPersianDateString() : String.Empty)" data-bs-toggle="modal" data-bs-target="#editNotificationModal">
                                <i class="bi bi-pencil"></i>
                                ویرایش
                            </button>
                            <button type="button" class="btn btn-sm btn-outline-danger delete-notification-btn" data-notification-id="@notification.Id" data-notification-title="@notification.Title">
                                <i class="bi bi-trash"></i>
                                حذف
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Edit Notification Modal -->
<div class="modal fade" id="editNotificationModal" tabindex="-1" aria-labelledby="editNotificationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="editNotificationModalLabel">ویرایش اعلان</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="editNotificationForm" method="post" asp-action="Edit">
                @Html.AntiForgeryToken()
                <input type="hidden" id="editNotificationId" name="id" value="" />
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="editTitle" class="form-label">عنوان</label>
                        <input type="text" id="editTitle" name="Title" class="form-control" required maxlength="500" />
                        <small class="text-muted">حداکثر ۵۰۰ کاراکتر</small>
                    </div>
                    <div class="mb-3">
                        <label for="editMessage" class="form-label">متن اعلان</label>
                        <textarea id="editMessage" name="Message" class="form-control" rows="5" required maxlength="5000"></textarea>
                        <small class="text-muted">حداکثر ۵۰۰۰ کاراکتر</small>
                    </div>
                    <div class="mb-3">
                        <label for="editExpiresAt" class="form-label">تاریخ انقضا (شمسی)</label>
                        <input type="text" id="editExpiresAt" name="ExpiresAtPersian" class="form-control persian-date-input" placeholder="1402/01/01" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">انصراف</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check"></i>
                        ذخیره تغییرات
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Show Bootstrap toast for success messages
        function showSuccessToast(message) {
            var toastHtml = `
                <div class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="d-flex">
                        <div class="toast-body">
                            <i class="bi bi-check-circle me-2"></i>
                            ${message}
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>
            `;
            
            var container = document.getElementById('toastContainer');
            if (!container) {
                container = document.createElement('div');
                container.id = 'toastContainer';
                container.className = 'toast-container position-fixed top-0 start-50 translate-middle-x p-3';
                document.body.appendChild(container);
            }
            
            var toastDiv = document.createElement('div');
            toastDiv.innerHTML = toastHtml;
            var toast = toastDiv.querySelector('.toast');
            container.appendChild(toast);
            
            var bsToast = new bootstrap.Toast(toast, { delay: 3500 });
            bsToast.show();
            
            // Remove the element after it's hidden
            toast.addEventListener('hidden.bs.toast', function () {
                toast.remove();
            });
        }

        document.addEventListener('DOMContentLoaded', function () {
            // Get the anti-forgery token from the page
            var antiForgeryToken = document.querySelector('input[name="__RequestVerificationToken"]')?.value || '';

            // Load notification data when edit button is clicked
            document.querySelectorAll('.edit-notification-btn').forEach(function (btn) {
                btn.addEventListener('click', function () {
                    var notificationId = this.dataset.notificationId;
                    var title = this.dataset.title || '';
                    var message = this.dataset.message || '';
                    var expires = this.dataset.expires || '';

                    // Fallback: try to locate card-based values if attributes are not present
                    if (!title || !message) {
                        var card = this.closest('.card');
                        if (card) {
                            title = title || (card.querySelector('.card-title') ? card.querySelector('.card-title').textContent.trim() : '');
                            message = message || (card.querySelector('.card-text') ? card.querySelector('.card-text').textContent.trim() : '');
                        }
                    }

                    document.getElementById('editNotificationId').value = notificationId;
                    document.getElementById('editTitle').value = title;
                    document.getElementById('editMessage').value = message;
                    document.getElementById('editExpiresAt').value = expires;
                });
            });

            // Handle edit form submission
            document.getElementById('editNotificationForm').addEventListener('submit', function (e) {
                e.preventDefault();
                var form = this;
                var formData = new FormData(form);

                fetch(form.action, {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'RequestVerificationToken': antiForgeryToken
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        var modal = bootstrap.Modal.getInstance(document.getElementById('editNotificationModal'));
                        modal.hide();
                        showSuccessToast('اعلان با موفقیت به‌روزرسانی شد.');
                        setTimeout(function () {
                            location.reload();
                        }, 1500);
                    } else {
                        alert('خطا: ' + (data.error || 'خطای نامشخص'));
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('خطا در ارتباط با سرور');
                });
            });

            // Handle delete button click
            document.querySelectorAll('.delete-notification-btn').forEach(function (btn) {
                btn.addEventListener('click', function () {
                    var notificationId = this.dataset.notificationId;
                    var notificationTitle = this.dataset.notificationTitle;
                    
                    if (!confirm('آیا از حذف اعلان "' + notificationTitle + '" اطمینان دارید؟')) {
                        return;
                    }

                    fetch('@Url.Action("Delete")', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': antiForgeryToken
                        },
                        body: JSON.stringify({ id: notificationId })
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            showSuccessToast('اعلان با موفقیت حذف شد.');
                            setTimeout(function () {
                                location.reload();
                            }, 1500);
                        } else {
                            alert('خطا: ' + (data.error || 'خطای نامشخص'));
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('خطا در ارتباط با سرور');
                    });
                });
            });
        });
    </script>
}

@section Styles {
    <style>
        .notification-stat-card {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }
        
        .notification-stat-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12) !important;
        }

        .notifications-list .card {
            transition: all 0.2s ease;
        }

        .notifications-list .card:hover {
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15) !important;
        }

        .persian-date-input {
            font-family: 'Tahoma', 'Arial', sans-serif;
            direction: ltr;
            text-align: right;
        }
    </style>
}
