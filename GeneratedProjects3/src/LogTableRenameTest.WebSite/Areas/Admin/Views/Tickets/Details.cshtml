@using LogTableRenameTest.Domain.Enums
@using LogTableRenameTest.WebSite.Areas.Admin.Models
@using System.Security.Claims
@model TicketDetailViewModel
@{
    ViewData["Title"] ??= "جزئیات تیکت";
    ViewData["Subtitle"] ??= "مشاهده و پاسخ به تیکت";

    string StatusBadge(TicketStatus status) => status switch
    {
        TicketStatus.Pending => "badge bg-warning-subtle text-warning-emphasis",
        TicketStatus.InProgress => "badge bg-info-subtle text-info-emphasis",
        TicketStatus.Answered => "badge bg-success-subtle text-success-emphasis",
        TicketStatus.Closed => "badge bg-secondary-subtle text-secondary-emphasis",
        _ => "badge bg-secondary-subtle text-secondary-emphasis"
    };

    string StatusText(TicketStatus status) => status.GetDisplayName();
}

@await Html.PartialAsync("_StatusMessage")

<div class="row">
    <div class="col-12">
        <!-- Ticket Header Card -->
        <div class="card shadow-sm mb-4 border-0" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <div class="card-body text-white">
                <div class="d-flex justify-content-between align-items-start">
                    <div class="flex-grow-1">
                        <h4 class="card-title mb-3 fw-bold">@Model.Subject</h4>
                        <div class="small">
                            <div class="mb-2">
                                <i class="bi bi-person-circle me-2"></i>
                                <strong>کاربر:</strong> @Model.UserFullName
                                @if (!string.IsNullOrWhiteSpace(Model.UserPhoneNumber))
                                {
                                    <span class="ms-2">
                                        <i class="bi bi-telephone"></i> @Model.UserPhoneNumber
                                    </span>
                                }
                            </div>
                            @if (!string.IsNullOrWhiteSpace(Model.Department))
                            {
                                <div class="mb-2">
                                    <i class="bi bi-diagram-3 me-2"></i>
                                    <strong>بخش:</strong> @Model.Department
                                </div>
                            }
                            <div class="mb-2">
                                <i class="bi bi-calendar3 me-2"></i>
                                <strong>تاریخ ثبت:</strong> @Model.CreateDate.ToPersianDateTimeString()
                            </div>
                            @if (Model.LastReplyDate.HasValue)
                            {
                                <div>
                                    <i class="bi bi-chat-left me-2"></i>
                                    <strong>آخرین پاسخ:</strong> @Model.LastReplyDate.Value.ToPersianDateTimeString()
                                </div>
                            }
                        </div>
                    </div>
                    <div class="text-end">
                        <span class="@StatusBadge(Model.Status) d-block mb-2">@StatusText(Model.Status)</span>
                        <span class="badge bg-light text-dark">#@Model.Id.ToString().Substring(0, 8).ToUpper()</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Ticket Message Card -->
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h5 class="card-title mb-3">
                    <i class="bi bi-chat-dots me-2"></i>پیام اولیه
                </h5>
                <div class="p-3 bg-light rounded border-start border-4 border-info">
                    @Html.Raw(Model.Message.Replace("\n", "<br />"))
                </div>
                @if (!string.IsNullOrWhiteSpace(Model.AttachmentPath))
                {
                    <div class="mt-3">
                        <i class="bi bi-paperclip me-2"></i>
                        <a href="@Model.AttachmentPath" target="_blank" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-download me-1"></i> دانلود فایل پیوست
                        </a>
                    </div>
                }
            </div>
        </div>

        <!-- Change Status Card -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white border-0">
                <h5 class="mb-0">
                    <i class="bi bi-sliders me-2"></i>تغییر وضعیت و تخصیص
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="UpdateStatus" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold">وضعیت جدید</label>
                            <select name="status" class="form-select" required>
                                <option value="@TicketStatus.Pending" selected="@(Model.Status == TicketStatus.Pending)">@StatusText(TicketStatus.Pending)</option>
                                <option value="@TicketStatus.InProgress" selected="@(Model.Status == TicketStatus.InProgress)">@StatusText(TicketStatus.InProgress)</option>
                                <option value="@TicketStatus.Answered" selected="@(Model.Status == TicketStatus.Answered)">@StatusText(TicketStatus.Answered)</option>
                                <option value="@TicketStatus.Closed" selected="@(Model.Status == TicketStatus.Closed)">@StatusText(TicketStatus.Closed)</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold">کارشناس مسئول</label>
                            <select name="assignedToId" 
                                    id="assignedToId" 
                                    class="form-select" 
                                    data-control="select2"
                                    data-placeholder="انتخاب کارشناس (اختیاری)"
                                    data-allow-clear="true">
                                @foreach (var option in Model.AdminUserOptions)
                                {
                                    <option value="@option.Value" selected="@option.Selected">@option.Text</option>
                                }
                            </select>
                            @if (!string.IsNullOrWhiteSpace(Model.AssignedToName))
                            {
                                <small class="text-muted d-block mt-2">
                                    <i class="bi bi-info-circle me-1"></i>کارشناس فعلی: <strong>@Model.AssignedToName</strong>
                                </small>
                            }
                            <small class="text-muted d-block mt-1">
                                <i class="bi bi-info-circle me-1"></i>می‌توانید وضعیت را بدون وارد کردن پیام تغییر دهید.
                            </small>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i> ثبت تغییرات وضعیت
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Replies Card -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white border-0">
                <h5 class="mb-0">
                    <i class="bi bi-chat-left-quote me-2"></i>پاسخ‌ها (@Model.Replies.Count)
                </h5>
            </div>
            <div class="card-body">
                @if (!Model.Replies.Any())
                {
                    <div class="text-center py-4 text-muted">
                        <i class="bi bi-chat-dots" style="font-size: 2rem; opacity: 0.3;"></i>
                        <p class="mt-2">هنوز پاسخی ثبت نشده است.</p>
                    </div>
                }
                else
                {
                    <div class="d-flex flex-column gap-3">
                        @foreach (var reply in Model.Replies)
                        {
                            <div class="p-3 rounded border @(reply.IsFromAdmin ? "bg-primary-subtle border-primary" : "bg-light border-secondary")">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div>
                                        @if (reply.IsFromAdmin)
                                        {
                                            <span class="badge bg-primary">
                                                <i class="bi bi-shield-check me-1"></i>پاسخ کارشناس
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-person me-1"></i>کاربر
                                            </span>
                                        }
                                        @if (!string.IsNullOrWhiteSpace(reply.RepliedByName))
                                        {
                                            <small class="text-muted ms-2">
                                                <strong>@reply.RepliedByName</strong>
                                            </small>
                                        }
                                    </div>
                                    <small class="text-muted">
                                        <i class="bi bi-calendar3 me-1"></i>@reply.CreateDate.ToPersianDateTimeString()
                                    </small>
                                </div>
                                <div class="ps-2">
                                    @Html.Raw(reply.Message.Replace("\n", "<br />"))
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>

        <!-- Reply Form Card -->
        <div class="card shadow-sm">
            <div class="card-header bg-white border-0">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-pencil-square me-2"></i>ارسال پاسخ
                    </h5>
                    @if (!string.IsNullOrWhiteSpace(Model.CurrentUserName))
                    {
                        <span class="badge bg-light text-dark">
                            <i class="bi bi-person-fill me-1"></i>@Model.CurrentUserName
                        </span>
                    }
                </div>
            </div>
            <div class="card-body">
                <form asp-action="Reply" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="ticketId" value="@Model.Id" />
                    <div class="mb-3">
                        <label class="form-label fw-semibold">متن پاسخ</label>
                        <textarea name="message" class="form-control" rows="5" placeholder="پاسخ خود را وارد کنید..." required></textarea>
                        <small class="text-muted d-block mt-2">می‌توانید از enter برای خط‌جدید استفاده کنید.</small>
                    </div>
                    <div class="d-flex gap-2 align-items-center">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-send me-2"></i>ارسال پاسخ
                    </button>
                        @if (Model.Status != TicketStatus.Closed)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="closeTicket" value="true" id="closeTicketCheckbox">
                                <label class="form-check-label" for="closeTicketCheckbox">
                                    بستن تیکت پس از ارسال پاسخ
                                </label>
                            </div>
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/admin/tickets-details.js" asp-append-version="true"></script>
}
