@model EditAccessLevelViewModel
@{
    Layout = null;
    var permissionGroups = Model.PermissionGroups?.ToList() ?? new System.Collections.Generic.List<PermissionSelectionGroupViewModel>();
}

<div class="modal-dialog modal-dialog-centered modal-xl">
    <div class="modal-content access-modal">
        <div class="modal-header">
            <div>
                <h5 class="modal-title">@((string.IsNullOrWhiteSpace(Model.Id) ? "ایجاد نقش جدید" : "به‌روزرسانی سطح دسترسی"))</h5>
                <p class="modal-subtitle">نام نقش را مشخص کنید و دسترسی‌های مورد نظر را فعال نمایید.</p>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="بستن"></button>
        </div>
        <form asp-action="Save" method="post" class="access-form" data-access-level-form>
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div class="modal-body">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <div class="row g-3 mb-4">
                    <div class="col-12 col-md-6">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="مثلاً: مدیریت" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-12 col-md-6">
                        <label asp-for="DisplayName" class="form-label"></label>
                        <input asp-for="DisplayName" class="form-control" placeholder="مثلاً: مدیر سیستم" />
                        <span asp-validation-for="DisplayName" class="text-danger"></span>
                    </div>
                </div>
                <div class="access-form__permissions">
                    @if (permissionGroups.Count == 0)
                    {
                        <div class="text-muted">هیچ سطح دسترسی قابل انتخابی تعریف نشده است.</div>
                    }
                    else
                    {
                        <div class="row g-4">
                            @for (var index = 0; index < permissionGroups.Count; index++)
                            {
                                var group = permissionGroups[index];
                                <div class="col-12 col-lg-6">
                                    <div class="permission-card" data-permission-group>
                                        <div class="permission-card__header">
                                            <div>
                                                <div class="permission-card__title">@group.DisplayName</div>
                                                <div class="permission-card__count">@group.Permissions.Count دسترسی</div>
                                            </div>
                                            <button type="button" class="btn btn-sm btn-soft-primary" data-permission-select-all>
                                                انتخاب همه
                                            </button>
                                        </div>
                                        <div class="permission-card__body">
                                            @foreach (var permission in group.Permissions)
                                            {
                                                var inputId = $"perm-{index}-{permission.Key}";
                                                <label class="permission-option @(permission.IsSelected ? "is-selected" : string.Empty)" for="@inputId">
                                                    <input type="checkbox"
                                                           id="@inputId"
                                                           name="SelectedPermissions"
                                                           value="@permission.Key"
                                                           class="form-check-input"
                                                           @(permission.IsSelected ? "checked" : null)
                                                           data-permission-option>
                                                    <span class="permission-option__name">@permission.DisplayName</span>
                                                    @if (permission.IsCustom)
                                                    {
                                                        <span class="permission-option__badge permission-option__badge--custom">سفارشی</span>
                                                    }
                                                    @if (permission.IsCore)
                                                    {
                                                        <span class="permission-option__badge permission-option__badge--core">Core</span>
                                                    }
                                                    @if (!string.IsNullOrWhiteSpace(permission.Description))
                                                    {
                                                        <span class="permission-option__hint">@permission.Description</span>
                                                    }
                                                </label>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    <span asp-validation-for="SelectedPermissions" class="text-danger"></span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-link" data-bs-dismiss="modal">انصراف</button>
                <button type="submit" class="btn btn-primary">ذخیره تغییرات</button>
            </div>
        </form>
    </div>
</div>
