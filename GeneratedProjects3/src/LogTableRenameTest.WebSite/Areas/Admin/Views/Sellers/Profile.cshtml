@using System.Globalization
@using LogTableRenameTest.SharedKernel.Extensions
@model SellerProfileViewModel
@{
    ViewData["Title"] ??= "پروفایل فروشنده";
    ViewData["Subtitle"] ??= "اطلاعات کامل فروشنده";

    var culture = CultureInfo.GetCultureInfo("fa-IR");
    string FormatDate(DateTimeOffset? value) => value is null ? "—" : value.Value.ToPersianDateTimeString();
    string FormatDateOnly(DateOnly? value)
    {
        if (value is null) return "—";
        var dateTime = value.Value.ToDateTime(TimeOnly.MinValue, DateTimeKind.Local);
        return dateTime.ToPersianDateString();
    }
    string FormatCurrency(decimal value) => string.Format(culture, "{0:N0} تومان", value);
    string FormatPercentage(decimal? value) => value.HasValue ? $"{value.Value:F1}%" : "—";
    
    string StatusBadgeClass(bool isActive) 
    {
        return isActive ? "badge bg-success-subtle text-success-emphasis" : "badge bg-warning-subtle text-warning-emphasis";
    }
    
    string StatusText(bool isActive) 
    {
        return isActive ? "فعال" : "غیرفعال";
    }
}

@section Breadcrumb {
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Sellers" asp-action="Index">فروشندگان</a></li>
    <li class="breadcrumb-item active" aria-current="page">پروفایل فروشنده</li>
}

@await Html.PartialAsync("_StatusMessage")

<div class="seller-profile-page">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1 class="h4 mb-1">پروفایل فروشنده</h1>
                            <p class="text-muted mb-0">@ViewData["Subtitle"]</p>
                        </div>
                        <div>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-right"></i>
                                بازگشت به لیست
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Seller Avatar and Basic Info -->
                        <div class="col-md-4 mb-4">
                            <div class="text-center">
                                @if (!string.IsNullOrWhiteSpace(Model.AvatarUrl))
                                {
                                    <img src="@Model.AvatarUrl" alt="@Model.DisplayName" class="img-thumbnail rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="bg-secondary rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 150px; height: 150px;">
                                        <span class="text-white" style="font-size: 4rem;">@(Model.DisplayName.Length > 0 ? Model.DisplayName[0].ToString().ToUpperInvariant() : "?")</span>
                                    </div>
                                }
                                <h3 class="mb-2">@Model.DisplayName</h3>
                                <span class="@StatusBadgeClass(Model.IsActive)">@StatusText(Model.IsActive)</span>
                            </div>
                        </div>

                        <!-- Seller Details -->
                        <div class="col-md-8">
                            <div class="row">
                                <div class="col-12 mb-4">
                                    <h4 class="mb-3">اطلاعات فروشنده</h4>
                                    <dl class="row mb-0">
                                        <dt class="col-sm-4">نام فروشنده:</dt>
                                        <dd class="col-sm-8">@Model.DisplayName</dd>

                                        @if (!string.IsNullOrWhiteSpace(Model.LicenseNumber))
                                        {
                                            <dt class="col-sm-4">شماره مجوز:</dt>
                                            <dd class="col-sm-8">@Model.LicenseNumber</dd>
                                        }

                                        @if (Model.LicenseIssueDate.HasValue)
                                        {
                                            <dt class="col-sm-4">تاریخ صدور مجوز:</dt>
                                            <dd class="col-sm-8">@FormatDateOnly(Model.LicenseIssueDate)</dd>
                                        }

                                        @if (Model.LicenseExpiryDate.HasValue)
                                        {
                                            <dt class="col-sm-4">تاریخ انقضای مجوز:</dt>
                                            <dd class="col-sm-8">@FormatDateOnly(Model.LicenseExpiryDate)</dd>
                                        }

                                        @if (Model.ExperienceYears.HasValue)
                                        {
                                            <dt class="col-sm-4">تجربه کاری:</dt>
                                            <dd class="col-sm-8">@Model.ExperienceYears سال</dd>
                                        }

                                        @if (!string.IsNullOrWhiteSpace(Model.ShopAddress))
                                        {
                                            <dt class="col-sm-4">آدرس فروشگاه:</dt>
                                            <dd class="col-sm-8">@Model.ShopAddress</dd>
                                        }

                                        @if (!string.IsNullOrWhiteSpace(Model.WorkingHours))
                                        {
                                            <dt class="col-sm-4">ساعات کاری:</dt>
                                            <dd class="col-sm-8">@Model.WorkingHours</dd>
                                        }

                                        @if (!string.IsNullOrWhiteSpace(Model.Bio))
                                        {
                                            <dt class="col-sm-4">بیوگرافی:</dt>
                                            <dd class="col-sm-8">@Html.Raw(Model.Bio)</dd>
                                        }

                                        @if (Model.SellerSharePercentage.HasValue)
                                        {
                                            <dt class="col-sm-4">درصد سهم فروشنده:</dt>
                                            <dd class="col-sm-8">@FormatPercentage(Model.SellerSharePercentage)</dd>
                                        }
                                    </dl>
                                </div>

                                <div class="col-12 mb-4">
                                    <h4 class="mb-3">اطلاعات تماس</h4>
                                    <dl class="row mb-0">
                                        @if (!string.IsNullOrWhiteSpace(Model.ContactEmail))
                                        {
                                            <dt class="col-sm-4">ایمیل ارتباطی:</dt>
                                            <dd class="col-sm-8">
                                                <a href="mailto:@Model.ContactEmail">@Model.ContactEmail</a>
                                            </dd>
                                        }

                                        @if (!string.IsNullOrWhiteSpace(Model.ContactPhone))
                                        {
                                            <dt class="col-sm-4">شماره تماس:</dt>
                                            <dd class="col-sm-8">
                                                <a href="tel:@Model.ContactPhone">@Model.ContactPhone</a>
                                            </dd>
                                        }
                                    </dl>
                                </div>

                                @if (!string.IsNullOrWhiteSpace(Model.UserId))
                                {
                                    <div class="col-12 mb-4">
                                        <h4 class="mb-3">اطلاعات کاربر متصل</h4>
                                        <dl class="row mb-0">
                                            <dt class="col-sm-4">شناسه کاربری:</dt>
                                            <dd class="col-sm-8"><code>@Model.UserId</code></dd>

                                            @if (!string.IsNullOrWhiteSpace(Model.UserFullName))
                                            {
                                                <dt class="col-sm-4">نام کاربر:</dt>
                                                <dd class="col-sm-8">@Model.UserFullName</dd>
                                            }

                                            @if (!string.IsNullOrWhiteSpace(Model.UserEmail))
                                            {
                                                <dt class="col-sm-4">ایمیل کاربر:</dt>
                                                <dd class="col-sm-8">@Model.UserEmail</dd>
                                            }

                                            @if (!string.IsNullOrWhiteSpace(Model.UserPhoneNumber))
                                            {
                                                <dt class="col-sm-4">شماره تماس کاربر:</dt>
                                                <dd class="col-sm-8">@Model.UserPhoneNumber</dd>
                                            }
                                        </dl>
                                    </div>
                                }

                                <div class="col-12 mb-4">
                                    <h4 class="mb-3">وضعیت حساب</h4>
                                    <dl class="row mb-0">
                                        <dt class="col-sm-4">وضعیت:</dt>
                                        <dd class="col-sm-8">
                                            <span class="@StatusBadgeClass(Model.IsActive)">@StatusText(Model.IsActive)</span>
                                        </dd>

                                        <dt class="col-sm-4">تاریخ ایجاد:</dt>
                                        <dd class="col-sm-8">@FormatDate(Model.CreatedAt)</dd>

                                        <dt class="col-sm-4">آخرین تغییرات:</dt>
                                        <dd class="col-sm-8">@FormatDate(Model.UpdatedAt)</dd>
                                    </dl>
                                </div>

                                <div class="col-12">
                                    <h4 class="mb-3">آمار و اطلاعات</h4>
                                    <div class="row">
                                        <div class="col-md-4 mb-3">
                                            <div class="card bg-light">
                                                <div class="card-body text-center">
                                                    <h5 class="card-title text-muted mb-2">تعداد محصولات</h5>
                                                    <h2 class="mb-0">@Model.TotalProducts</h2>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <div class="card bg-light">
                                                <div class="card-body text-center">
                                                    <h5 class="card-title text-muted mb-2">تعداد پیشنهادات</h5>
                                                    <h2 class="mb-0">@Model.TotalOffers</h2>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <div class="card bg-light">
                                                <div class="card-body text-center">
                                                    <h5 class="card-title text-muted mb-2">مجموع فروش</h5>
                                                    <h2 class="mb-0">@FormatCurrency(Model.TotalSales)</h2>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

