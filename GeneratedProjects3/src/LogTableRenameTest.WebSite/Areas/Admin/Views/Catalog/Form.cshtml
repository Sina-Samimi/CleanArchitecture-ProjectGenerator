@model ProductFormViewModel
@using LogTableRenameTest.Domain.Enums
@using LogTableRenameTest.SharedKernel.Extensions
@using Microsoft.AspNetCore.Mvc.Rendering
@using System
@using System.Globalization
@using System.Linq
@{
    var isEdit = Model.Id.HasValue;
    var formAction = isEdit ? "Edit" : "Create";
    var categoryOptions = Model.Selections?.CategoryOptions?.ToList() ?? new List<SelectListItem>();
    var typeOptions = Model.Selections?.TypeOptions?.ToList() ?? new List<SelectListItem>();
    var statusOptions = Model.Selections?.PublishStatusOptions?.ToList() ?? new List<SelectListItem>();
    var robotsOptions = Model.Selections?.RobotsOptions?.ToList() ?? new List<SelectListItem>();
    var sellerOptions = Model.Selections?.SellerOptions?.ToList() ?? new List<SelectListItem>();
    var galleryItems = Model.Gallery?.ToList() ?? new List<ProductGalleryItemFormModel>();
    var tagItems = Model.TagItems?.ToList() ?? new List<string>();
    var publishedPersian = Model.PublishedAtPersian ?? string.Empty;
    var jalaliInit = string.IsNullOrWhiteSpace(publishedPersian) ? string.Empty : publishedPersian.Replace('-', '/');
    var publishedDisplay = Model.PublishedAt?.ToLocalTime().DateTime.ToPersianDateString() ?? publishedPersian.Replace('-', '/');
    var hasDigitalDownload = !string.IsNullOrWhiteSpace(Model.DigitalDownloadPath);
    var digitalDownloadHref = string.Empty;
    var digitalDownloadName = string.Empty;

    if (hasDigitalDownload)
    {
        var trimmedDownload = Model.DigitalDownloadPath!.Trim();
        if (Uri.TryCreate(trimmedDownload, UriKind.Absolute, out var absoluteUri)
            && (string.Equals(absoluteUri.Scheme, Uri.UriSchemeHttp, StringComparison.OrdinalIgnoreCase)
                || string.Equals(absoluteUri.Scheme, Uri.UriSchemeHttps, StringComparison.OrdinalIgnoreCase)))
        {
            digitalDownloadHref = absoluteUri.ToString();
            digitalDownloadName = absoluteUri.Segments.LastOrDefault()?.Trim('/') ?? absoluteUri.Host;
        }
        else
        {
            digitalDownloadHref = Url.Content(trimmedDownload);
            var sanitizedPath = trimmedDownload.TrimEnd('/', '\\');
            var pathSegments = sanitizedPath.Split(new[] { '/', '\\' }, StringSplitOptions.RemoveEmptyEntries);
            digitalDownloadName = pathSegments.LastOrDefault() ?? sanitizedPath;
        }

        if (string.IsNullOrWhiteSpace(digitalDownloadName))
        {
            digitalDownloadName = "دانلود فعلی";
        }
    }
}

@section Head {
    <link rel="stylesheet" href="~/css/admin/blog-form.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin/catalog-form.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/plugins/jalalidatepicker/css/jalalidatepicker.min.css" />
}

@await Html.PartialAsync("_StatusMessage")

<form asp-action="@formAction"
      asp-route-id="@(isEdit ? Model.Id : null)"
      method="post"
      enctype="multipart/form-data"
      class="card product-form"
      data-product-form>
    @Html.AntiForgeryToken()
    <div class="card-header product-form__header">
        <div>
            <h1 class="product-form__title">@(isEdit ? "ویرایش محصول" : "افزودن محصول جدید")</h1>
            <p class="product-form__subtitle">تمام جزئیات محصول، وضعیت انتشار و سئو را در این صفحه مدیریت کنید.</p>
        </div>
        <a class="btn btn-outline-secondary" asp-area="Admin" asp-controller="Catalog" asp-action="Index">
            <i class="bi bi-arrow-right"></i>
            بازگشت به لیست محصولات
        </a>
    </div>

    <div class="card-body product-form__body">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <section class="product-form-section">
            <h2 class="product-form-section__title">اطلاعات پایه</h2>
            <p class="product-form-section__subtitle">نام، خلاصه و توضیحات محصول را وارد کنید.</p>
            <div class="row g-4">
                <div class="col-12 col-lg-6">
                    <label class="form-label" asp-for="Name"></label>
                    <input class="form-control" asp-for="Name" />
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="col-12 col-lg-6">
                    <label class="form-label" asp-for="CategoryId"></label>
                    <select class="form-select" asp-for="CategoryId" asp-items="categoryOptions">
                        <option value="">یک دسته‌بندی انتخاب کنید</option>
                    </select>
                    <span class="text-danger" asp-validation-for="CategoryId"></span>
                </div>
                <div class="col-12 col-lg-6">
                    <label class="form-label" asp-for="SellerId"></label>
                    <select class="form-select" asp-for="SellerId" asp-items="sellerOptions"></select>
                    <span class="text-danger" asp-validation-for="SellerId"></span>
                    <div class="form-text">در صورت انتخاب «ثبت به نام سایت»، محصول بدون فروشنده در سایت نمایش داده می‌شود.</div>
                </div>
                <div class="col-12 col-lg-6">
                    <label class="form-label" asp-for="Type"></label>
                    <select class="form-select" asp-for="Type" asp-items="typeOptions" data-product-type></select>
                    <span class="text-danger" asp-validation-for="Type"></span>
                </div>
                <div class="col-12 col-lg-6">
                    <label class="form-label" asp-for="Brand"></label>
                    <input class="form-control" asp-for="Brand" placeholder="نام برند محصول" />
                    <span class="text-danger" asp-validation-for="Brand"></span>
                    <div class="form-text">برای محصولات رایگان نیز می‌توانید برند را وارد کنید.</div>
                </div>
                <div class="col-12">
                    <label class="form-label" asp-for="Summary"></label>
                    <textarea class="form-control" asp-for="Summary" rows="3"></textarea>
                    <span class="text-danger" asp-validation-for="Summary"></span>
                </div>
                <div class="col-12">
                    <label class="form-label" asp-for="Description"></label>
                    <div class="product-editor" data-editor-field>
                        <div id="productDescriptionEditor"
                             class="blog-editor d-none"
                             data-editor-wrapper
                             data-upload-url="@Url.Action("UploadContentImage")"></div>
                        <textarea asp-for="Description"
                                  class="form-control d-none"
                                  rows="6"
                                  placeholder="توضیحات کامل محصول را اینجا بنویسید"
                                  data-content-input
                                  data-editor-textarea></textarea>
                        <div class="form-text d-none text-warning" data-editor-fallback>
                            در صورت بروز مشکل در بارگذاری ویرایشگر پیشرفته، متن را در این بخش وارد کنید.
                        </div>
                    </div>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
            </div>
        </section>

        <section class="product-form-section">
            <h2 class="product-form-section__title">قیمت و موجودی</h2>
            <p class="product-form-section__subtitle">قیمت‌گذاری و سیاست موجودی را برای محصول مشخص کنید.</p>
            <div class="row g-4">
                <div class="col-12">
                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" asp-for="IsCustomOrder" type="checkbox" data-custom-order-toggle />
                        <label class="form-check-label" asp-for="IsCustomOrder">
                            محصول سفارشی (بدون قیمت ثابت)
                        </label>
                        <div class="form-text">در صورت فعال بودن، محصول بدون قیمت نمایش داده می‌شود و کاربران می‌توانند درخواست سفارشی ثبت کنند.</div>
                    </div>
                </div>
                <div class="col-12 col-md-4" data-price-field>
                    <label class="form-label" asp-for="Price"></label>
                    <div class="input-group">
                        <input class="form-control" asp-for="Price" type="number" min="0" />
                        <span class="input-group-text">تومان</span>
                    </div>
                    <span class="text-danger" asp-validation-for="Price"></span>
                </div>
                <div class="col-12 col-md-4" data-price-field>
                    <label class="form-label" asp-for="CompareAtPrice"></label>
                    <div class="input-group">
                        <input class="form-control" asp-for="CompareAtPrice" type="number" min="0" />
                        <span class="input-group-text">تومان</span>
                    </div>
                    <span class="text-danger" asp-validation-for="CompareAtPrice"></span>
                </div>
                <div class="col-12 col-md-4">
                    <div class="form-check form-switch mt-4">
                        <input class="form-check-input" asp-for="TrackInventory" data-inventory-toggle />
                        <label class="form-check-label" asp-for="TrackInventory"></label>
                    </div>
                </div>
                <div class="col-12 col-md-4" data-inventory-field>
                    <label class="form-label" asp-for="StockQuantity"></label>
                    <input class="form-control" asp-for="StockQuantity" type="number" min="0" />
                    <span class="text-danger" asp-validation-for="StockQuantity"></span>
                </div>
                <div class="col-12" data-digital-section>
                    <div class="digital-download">
                        <div class="digital-download__column">
                            <label class="form-label" asp-for="DigitalDownloadPath"></label>
                            <input class="form-control"
                                   asp-for="DigitalDownloadPath"
                                   placeholder="https://example.com/download-file"
                                   data-digital-link />
                            <span class="text-danger" asp-validation-for="DigitalDownloadPath"></span>
                            <div class="form-text">در صورت وارد کردن لینک مستقیم، آپلود فایل الزامی نیست.</div>
                        </div>
                        <div class="digital-download__divider">
                            <span>یا</span>
                        </div>
                        <div class="digital-download__column digital-download__column--file">
                            <label class="form-label" asp-for="DigitalDownloadFile"></label>
                            <div class="digital-file-upload" data-digital-file-wrapper>
                                <input asp-for="DigitalDownloadFile"
                                       type="file"
                                       class="d-none"
                                       data-digital-file />
                                <label class="btn btn-outline-primary digital-file-upload__button"
                                       for="@Html.IdFor(m => m.DigitalDownloadFile)">
                                    <i class="bi bi-upload"></i>
                                    انتخاب فایل
                                </label>
                                <div class="digital-file-upload__meta">
                                    <span class="digital-file-upload__name"
                                          data-digital-file-name
                                          data-default-text="@(hasDigitalDownload ? "فایل فعلی ثبت شده" : "فایلی انتخاب نشده است")">
                                        @(hasDigitalDownload ? "فایل فعلی ثبت شده" : "فایلی انتخاب نشده است")
                                    </span>
                                    @if (hasDigitalDownload && !string.IsNullOrWhiteSpace(digitalDownloadHref))
                                    {
                                        <div class="digital-file-upload__current" data-digital-existing>
                                            <i class="bi bi-link-45deg"></i>
                                            <a href="@digitalDownloadHref" target="_blank" rel="noopener">@digitalDownloadName</a>
                                        </div>
                                    }
                                </div>
                            </div>
                            <span class="text-danger" asp-validation-for="DigitalDownloadFile"></span>
                            <div class="form-text">حداکثر حجم فایل ۲۰۰ مگابایت است. فرمت‌های ZIP، RAR، PDF، MP3، MP4 و مشابه پشتیبانی می‌شوند.</div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="product-form-section">
            <h2 class="product-form-section__title">انتشار و برچسب‌ها</h2>
            <p class="product-form-section__subtitle">زمان‌بندی انتشار و برچسب‌های محصول را مدیریت کنید.</p>
            <div class="row g-4">
                <div class="col-12 col-lg-4">
                    <label class="form-label" asp-for="PublishStatus"></label>
                    <select class="form-select" asp-for="PublishStatus" asp-items="statusOptions" data-publish-status></select>
                </div>
                <div class="col-12 col-lg-4" data-publish-schedule>
                    <label class="form-label" for="publishDateInput">تاریخ انتشار (شمسی)</label>
                    <div class="jalali-picker" data-jalali-picker>
                        <div class="jalali-picker__controls">
                            <input type="text"
                                   id="publishDateInput"
                                   class="form-control"
                                   placeholder="انتخاب تاریخ"
                                   value="@publishedDisplay"
                                   data-jalali-input
                                   data-jdp
                                   data-jdp-only-date
                                   data-jdp-init-date="@jalaliInit"
                                   autocomplete="off"
                                   dir="ltr" />
                        </div>
                        <input type="hidden" asp-for="PublishedAtPersian" data-jalali-storage />
                    </div>
                    <span class="text-danger" asp-validation-for="PublishedAtPersian"></span>
                </div>
                <div class="col-12 col-lg-4" data-publish-schedule>
                    <label class="form-label" asp-for="PublishedAtTime"></label>
                    <div class="input-group">
                        <span class="input-group-text">ساعت</span>
                        <input class="form-control" asp-for="PublishedAtTime" placeholder="HH:mm" data-publish-time />
                    </div>
                    <span class="text-danger" asp-validation-for="PublishedAtTime"></span>
                </div>
                <div class="col-12">
                    <label class="form-label" for="productTagInput">برچسب‌ها</label>
                    <div class="tag-input" data-tag-input>
                        <div class="tag-input__chips" data-tag-chips>
                            @foreach (var tag in tagItems)
                            {
                                <span class="tag-chip" data-tag-chip>
                                    <span class="tag-chip__text">@tag</span>
                                    <button type="button" class="tag-chip__remove" data-tag-remove aria-label="حذف @tag">
                                        <i class="bi bi-x"></i>
                                    </button>
                                </span>
                            }
                        </div>
                        <input type="text" id="productTagInput" class="form-control tag-input__entry" placeholder="برچسب جدید را تایپ و با اینتر اضافه کنید" data-tag-entry />
                        <input type="hidden" asp-for="Tags" data-tag-storage />
                    </div>
                    <span class="text-danger" asp-validation-for="Tags"></span>
                </div>
            </div>
        </section>

        <section class="product-form-section">
            <h2 class="product-form-section__title">تنظیمات سئو</h2>
            <p class="product-form-section__subtitle">عنوان، توضیحات و مسیر سئو را برای نمایش در نتایج جستجو تنظیم کنید.</p>
            <div class="row g-4">
                <div class="col-12 col-lg-6">
                    <label class="form-label" asp-for="SeoTitle"></label>
                    <input class="form-control" asp-for="SeoTitle" />
                    <span class="text-danger" asp-validation-for="SeoTitle"></span>
                </div>
                <div class="col-12 col-lg-6">
                    <label class="form-label" asp-for="SeoSlug"></label>
                    <input class="form-control" asp-for="SeoSlug" />
                    <span class="text-danger" asp-validation-for="SeoSlug"></span>
                </div>
                <div class="col-12 col-lg-6">
                    <label class="form-label" asp-for="SeoDescription"></label>
                    <textarea class="form-control" asp-for="SeoDescription" rows="3"></textarea>
                    <span class="text-danger" asp-validation-for="SeoDescription"></span>
                </div>
                <div class="col-12 col-lg-6">
                    <label class="form-label" asp-for="SeoKeywords"></label>
                    <textarea class="form-control" asp-for="SeoKeywords" rows="2"></textarea>
                    <span class="text-danger" asp-validation-for="SeoKeywords"></span>
                </div>
                <div class="col-12 col-lg-6">
                    <label class="form-label" asp-for="Robots"></label>
                    <input class="form-control" asp-for="Robots" list="productRobotsOptions" data-robots-input />
                    <span class="text-danger" asp-validation-for="Robots"></span>
                </div>
            </div>
            <datalist id="productRobotsOptions">
                @foreach (var option in robotsOptions)
                {
                    <option value="@option.Value"></option>
                }
            </datalist>
        </section>

        <section class="product-form-section">
            <h2 class="product-form-section__title">گزینه‌ها (سایز، رنگ و ...)</h2>
            <p class="product-form-section__subtitle">برای محصولاتی که گزینه دارند (مثل پوشاک با سایز و رنگ)، ابتدا ویژگی‌ها را تعریف کنید و سپس گزینه‌ها را ایجاد کنید.</p>
            
            <div class="mb-4">
                <h3 class="h6 mb-3">ویژگی‌های گزینه</h3>
                <div id="variantAttributesContainer" data-variant-attributes>
                    @for (var i = 0; i < (Model.VariantAttributes?.Count ?? 0); i++)
                    {
                        var attr = Model.VariantAttributes[i];
                        <div class="card mb-3" data-variant-attribute-row data-index="@i">
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-md-3">
                                        <label class="form-label">نام ویژگی</label>
                                        <input type="hidden" asp-for="VariantAttributes[i].Id" />
                                        <input class="form-control" asp-for="VariantAttributes[i].Name" placeholder="مثل: سایز" />
                                        <span class="text-danger" asp-validation-for="VariantAttributes[i].Name"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">گزینه‌ها (جدا شده با کاما)</label>
                                        <input class="form-control" asp-for="VariantAttributes[i].OptionsText" placeholder="مثل: M, L, XL" />
                                        <small class="form-text text-muted">گزینه‌ها را با کاما از هم جدا کنید</small>
                                    </div>
                                    <div class="col-md-2">
                                        <label class="form-label">ترتیب</label>
                                        <input class="form-control" asp-for="VariantAttributes[i].DisplayOrder" type="number" min="0" />
                                    </div>
                                    <div class="col-md-1 d-flex align-items-end">
                                        <button type="button" class="btn btn-outline-danger btn-sm" data-variant-attribute-remove>
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <button type="button" class="btn btn-outline-primary btn-sm" data-variant-attribute-add>
                    <i class="bi bi-plus"></i>
                    افزودن ویژگی جدید
                </button>
            </div>

            <div class="mb-4">
                <h3 class="h6 mb-3">گزینه‌ها</h3>
                <div id="variantsContainer" data-variants>
                    @for (var i = 0; i < (Model.Variants?.Count ?? 0); i++)
                    {
                        var variant = Model.Variants[i];
                        <div class="card mb-3" data-variant-row data-index="@i">
                            <div class="card-body">
                                <div class="row g-3">
                                    @foreach (var attr in Model.VariantAttributes ?? new List<ProductVariantAttributeFormModel>())
                                    {
                                        <div class="col-md-3">
                                            <label class="form-label">@attr.Name</label>
                                            <select class="form-select" name="Variants[@i].Options[@attr.Id]" data-variant-option>
                                                <option value="">انتخاب کنید</option>
                                                @foreach (var option in attr.Options)
                                                {
                                                    var selected = variant.Options.ContainsKey(attr.Id ?? Guid.Empty) && 
                                                                   variant.Options[attr.Id ?? Guid.Empty] == option;
                                                    <option value="@option" selected="@selected">@option</option>
                                                }
                                            </select>
                                        </div>
                                    }
                                    <div class="col-md-2">
                                        <label class="form-label">قیمت</label>
                                        <input type="hidden" asp-for="Variants[i].Id" />
                                        <input class="form-control" asp-for="Variants[i].Price" type="number" step="0.01" min="0" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="form-label">موجودی</label>
                                        <input class="form-control" asp-for="Variants[i].StockQuantity" type="number" min="0" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="form-label">SKU (کد محصول)</label>
                                        <input class="form-control" asp-for="Variants[i].Sku" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="form-label">فعال</label>
                                        <div class="form-check form-switch mt-2">
                                            <input class="form-check-input" asp-for="Variants[i].IsActive" />
                                        </div>
                                    </div>
                                    <div class="col-md-1 d-flex align-items-end">
                                        <button type="button" class="btn btn-outline-danger btn-sm" data-variant-remove>
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <button type="button" class="btn btn-outline-primary btn-sm" data-variant-add>
                    <i class="bi bi-plus"></i>
                    افزودن گزینه جدید
                </button>
            </div>
        </section>

        <section class="product-form-section">
            <h2 class="product-form-section__title">تصویر شاخص</h2>
            <p class="product-form-section__subtitle">تصویر اصلی محصول را بارگذاری یا جایگزین کنید.</p>
            <div class="product-featured" data-featured-uploader>
                <div class="product-featured__preview @(string.IsNullOrWhiteSpace(Model.FeaturedImagePath) ? "product-featured__preview--empty" : string.Empty)"
                     data-featured-preview
                     style="@(string.IsNullOrWhiteSpace(Model.FeaturedImagePath) ? string.Empty : $"background-image: url('{Url.Content(Model.FeaturedImagePath)}')")">
                    <span class="product-featured__placeholder" data-featured-placeholder>
                        <i class="bi bi-image"></i>
                        <span>تصویر شاخص را انتخاب کنید</span>
                    </span>
                </div>
                <div class="product-featured__controls">
                    <label class="btn btn-outline-primary product-featured__button">
                        <i class="bi bi-upload"></i>
                        انتخاب تصویر
                        <input asp-for="FeaturedImage" type="file" class="d-none" accept="image/*" data-featured-input />
                    </label>
                    @if (isEdit && !string.IsNullOrWhiteSpace(Model.FeaturedImagePath))
                    {
                        <div class="form-check mt-3">
                            <input class="form-check-input" asp-for="RemoveFeaturedImage" data-featured-remove />
                            <label class="form-check-label" asp-for="RemoveFeaturedImage"></label>
                        </div>
                    }
                    <div class="product-featured__meta" data-featured-filename>
                        @(string.IsNullOrWhiteSpace(Model.FeaturedImagePath) ? "تصویر انتخاب نشده است" : "تصویر فعلی انتخاب شده")
                    </div>
                </div>
                <input asp-for="FeaturedImagePath" type="hidden" data-featured-path />
                <span class="text-danger" asp-validation-for="FeaturedImage"></span>
            </div>
        </section>

        <section class="product-form-section">
            <h2 class="product-form-section__title">گالری تصاویر</h2>
            <p class="product-form-section__subtitle">تصاویر تکمیلی محصول را بارگذاری و ترتیب نمایش را تعیین کنید.</p>
            <div class="product-gallery" data-gallery-container data-gallery-count="@galleryItems.Count">
                @for (var i = 0; i < galleryItems.Count; i++)
                {
                    var item = galleryItems[i];
                    var hasImage = !string.IsNullOrWhiteSpace(item?.Path);
                    <div class="product-gallery-row" data-gallery-row data-row-index="@i">
                        <div class="product-gallery-row__media @(hasImage ? string.Empty : "product-gallery-row__media--empty")" data-gallery-preview style="@(hasImage ? $"background-image: url('{Url.Content(item!.Path!)}')" : string.Empty)">
                            <span class="product-gallery-row__placeholder" data-gallery-placeholder>
                                <i class="bi bi-image"></i>
                                <span>پیش‌نمایش تصویر</span>
                            </span>
                        </div>
                        <div class="product-gallery-row__inputs">
                            <div>
                                <label class="form-label" asp-for="Gallery[i].Image"></label>
                                <input class="form-control" asp-for="Gallery[i].Image" type="file" accept="image/*" data-gallery-file />
                                <span class="text-danger" asp-validation-for="Gallery[i].Image"></span>
                            </div>
                            <div>
                                <label class="form-label" asp-for="Gallery[i].Order"></label>
                                <input class="form-control" asp-for="Gallery[i].Order" type="number" min="0" max="1000" data-gallery-order />
                                <span class="text-danger" asp-validation-for="Gallery[i].Order"></span>
                            </div>
                        </div>
                        <div class="product-gallery-row__actions">
                            <input type="hidden" asp-for="Gallery[i].Id" />
                            <input type="hidden" asp-for="Gallery[i].Path" data-gallery-path />
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Gallery[i].Remove" data-gallery-remove />
                                <label class="form-check-label" asp-for="Gallery[i].Remove"></label>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <button type="button" class="btn btn-outline-primary btn-sm" data-gallery-add>
                <i class="bi bi-plus"></i>
                افزودن تصویر جدید
            </button>
        </section>
    </div>

    <div class="card-footer product-form__footer">
        <a class="btn btn-outline-secondary" asp-area="Admin" asp-controller="Catalog" asp-action="Index">انصراف</a>
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i>
            @(isEdit ? "ذخیره تغییرات" : "ثبت محصول")
        </button>
    </div>
</form>

<template id="variantAttributeRowTemplate">
