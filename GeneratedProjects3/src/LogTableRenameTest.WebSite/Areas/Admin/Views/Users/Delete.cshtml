@model DeleteUserViewModel
@{
    ViewData["Title"] = "حذف کاربر";
}

<h1 class="mb-4">حذف کاربر</h1>

@await Html.PartialAsync("_StatusMessage")

<div class="alert alert-danger">با حذف کاربر، دسترسی او مسدود و اطلاعاتش به صورت نرم حذف می‌شود.</div>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="card">
    <div class="card-body">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Email" />
        <input type="hidden" asp-for="FullName" />
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
        <dl class="row">
            <dt class="col-sm-3">نام کامل</dt>
            <dd class="col-sm-9">@Model.FullName</dd>
            <dt class="col-sm-3">ایمیل</dt>
            <dd class="col-sm-9">@Model.Email</dd>
        </dl>
        <p class="mb-0">آیا از حذف این کاربر اطمینان دارید؟</p>
    </div>
    <div class="card-footer d-flex justify-content-between">
        <a class="btn btn-outline-secondary" asp-action="Index">انصراف</a>
        <button type="submit" class="btn btn-danger">تأیید حذف</button>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
