@using LogTableRenameTest.Application.DTOs.Identity
@using LogTableRenameTest.SharedKernel.Extensions
@model AdminUserSessionsViewModel
@{
    ViewData["Title"] = ViewData["Title"] ?? "دستگاه‌های متصل";
    ViewData["Subtitle"] = ViewData["Subtitle"] ?? "مدیریت و مشاهده دستگاه‌های متصل کاربر";
    
    string FormatTimestamp(DateTimeOffset value) => value.ToPersianDateTimeString();
    var hasActiveFilters = !string.IsNullOrWhiteSpace(Model.FilterActivityType) || 
                          !string.IsNullOrWhiteSpace(Model.FilterDeviceType) || 
                          Model.FilterIsActive.HasValue;
    var hasClosedSessions = Model.Activities.Any(a => !a.IsActive && a.SessionId.HasValue);
}

@section Breadcrumb {
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">داشبورد</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Users" asp-action="Index">کاربران</a></li>
    <li class="breadcrumb-item active" aria-current="page">دستگاه‌های متصل</li>
}

@await Html.PartialAsync("_StatusMessage")

<div class="row">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="h5 mb-1">دستگاه‌های متصل - @Model.UserFullName</h2>
                    <p class="text-muted small mb-0">@Model.UserEmail</p>
                </div>
                <div class="d-flex gap-2">
                    @if (hasClosedSessions)
                    {
                        <form asp-action="DeleteUserClosedSessions" method="post" class="d-inline" onsubmit="return confirm('آیا از حذف تاریخچه تمام دستگاه‌های بسته شده اطمینان دارید؟');">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="userId" value="@Model.UserId" />
                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash"></i>
                                حذف تاریخچه دستگاه‌های بسته شده
                            </button>
                        </form>
                    }
                    <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-toggle="modal" data-bs-target="#activity-filter-modal">
                        <i class="bi bi-funnel"></i>
                        فیلترها
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-arrow-right-short"></i>
                        بازگشت به لیست کاربران
                    </a>
                </div>
            </div>
            <div class="card-body">
                @if (hasActiveFilters)
                {
                    <div class="alert alert-info d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <i class="bi bi-info-circle me-2"></i>
                            <span>فیلترهای فعال:</span>
                            @if (!string.IsNullOrWhiteSpace(Model.FilterActivityType))
                            {
                                <span class="badge bg-primary ms-2">نوع: @Model.FilterActivityType</span>
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.FilterDeviceType))
                            {
                                <span class="badge bg-primary ms-2">دستگاه: @Model.FilterDeviceType</span>
                            }
                            @if (Model.FilterIsActive.HasValue)
                            {
                                <span class="badge bg-primary ms-2">وضعیت: @(Model.FilterIsActive.Value ? "فعال" : "بسته شده")</span>
                            }
                        </div>
                        <a asp-action="UserSessions" asp-route-id="@Model.UserId" asp-route-page="1" asp-route-pageSize="@Model.PageSize" class="btn btn-sm btn-outline-secondary">
                            <i class="bi bi-x-circle"></i>
                            حذف فیلترها
                        </a>
                    </div>
                }

                @if (Model.Activities.Count == 0)
                {
                    <div class="alert alert-info mb-0" role="alert">
                        <i class="bi bi-info-circle me-2"></i>
                        هنوز فعالیتی ثبت نشده است.
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead>
                                <tr>
                                    <th scope="col" style="width: 180px;">زمان</th>
                                    <th scope="col">شرح</th>
                                    <th scope="col">مرجع</th>
                                    <th scope="col" style="width: 120px;">IP Address</th>
                                    <th scope="col" style="width: 100px;">وضعیت</th>
                                    <th scope="col" style="width: 80px;">عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var entry in Model.Activities)
                                {
                                    <tr>
                                        <td>
                                            <small class="text-muted">@FormatTimestamp(entry.Timestamp)</small>
                                        </td>
                                        <td>
                                            <strong>@entry.Title</strong>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrWhiteSpace(entry.DeviceType) && !string.IsNullOrWhiteSpace(entry.ClientName))
                                            {
                                                <span>@entry.DeviceType - @entry.ClientName</span>
                                            }
                                            else
                                            {
                                                <span>@entry.Context</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrWhiteSpace(entry.IpAddress))
                                            {
                                                <code class="small">@entry.IpAddress</code>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (entry.IsCurrentSession)
                                            {
                                                <span class="badge bg-success">جاری</span>
                                            }
                                            else if (entry.IsActive && entry.SessionId.HasValue)
                                            {
                                                <span class="badge bg-info">فعال</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">بسته شده</span>
                                            }
                                        </td>
                                        <td>
                                            @if (entry.SessionId.HasValue && entry.IsActive)
                                            {
                                                <form asp-action="CloseUserSession" method="post" class="d-inline" onsubmit="return confirm('آیا از بستن این session اطمینان دارید؟');">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="userId" value="@Model.UserId" />
                                                    <input type="hidden" name="sessionId" value="@entry.SessionId.Value" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger p-1" style="min-width: 28px; height: 28px; line-height: 1;" title="بستن session">
                                                        <i class="bi bi-x-circle" style="font-size: 0.875rem;"></i>
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (Model.TotalPages > 1)
                    {
                        var previousPage = Math.Max(1, Model.PageNumber - 1);
                        var nextPage = Math.Min(Model.TotalPages, Model.PageNumber + 1);
                        var startPage = Math.Max(1, Model.PageNumber - 2);
                        var endPage = Math.Min(Model.TotalPages, Model.PageNumber + 2);

                        <nav aria-label="صفحه‌بندی فعالیت‌ها" class="mt-4">
                            <ul class="pagination justify-content-center">
                                <li class="page-item @(Model.PageNumber == 1 ? "disabled" : string.Empty)">
                                    <a class="page-link" 
                                       asp-action="UserSessions" 
                                       asp-route-id="@Model.UserId"
                                       asp-route-page="@previousPage" 
                                       asp-route-pageSize="@Model.PageSize"
                                       asp-route-activityType="@Model.FilterActivityType"
                                       asp-route-deviceType="@Model.FilterDeviceType"
                                       asp-route-isActive="@Model.FilterIsActive"
                                       aria-label="قبلی">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>

                                @for (var i = startPage; i <= endPage; i++)
                                {
                                    <li class="page-item @(i == Model.PageNumber ? "active" : string.Empty)">
                                        <a class="page-link" 
                                           asp-action="UserSessions" 
                                           asp-route-id="@Model.UserId"
                                           asp-route-page="@i" 
                                           asp-route-pageSize="@Model.PageSize"
                                           asp-route-activityType="@Model.FilterActivityType"
                                           asp-route-deviceType="@Model.FilterDeviceType"
                                           asp-route-isActive="@Model.FilterIsActive">
                                            @i
                                        </a>
                                    </li>
                                }

                                <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : string.Empty)">
                                    <a class="page-link" 
                                       asp-action="UserSessions" 
                                       asp-route-id="@Model.UserId"
                                       asp-route-page="@nextPage" 
                                       asp-route-pageSize="@Model.PageSize"
                                       asp-route-activityType="@Model.FilterActivityType"
                                       asp-route-deviceType="@Model.FilterDeviceType"
                                       asp-route-isActive="@Model.FilterIsActive"
                                       aria-label="بعدی">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>

                        <div class="text-center text-muted small mt-2">
                            نمایش @((Model.PageNumber - 1) * Model.PageSize + 1) تا @(Math.Min(Model.PageNumber * Model.PageSize, Model.TotalCount)) از @Model.TotalCount فعالیت
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>

<!-- Filter Modal -->
<div class="modal fade" id="activity-filter-modal" tabindex="-1" aria-labelledby="activity-filter-modal-label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="activity-filter-modal-label">فیلتر فعالیت‌ها</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="بستن"></button>
            </div>
            <form method="get" asp-action="UserSessions" asp-route-id="@Model.UserId">
                <div class="modal-body">
                    <input type="hidden" name="page" value="1" />
                    <input type="hidden" name="pageSize" value="@Model.PageSize" />

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="activityType" class="form-label">نوع فعالیت</label>
                            <input type="text" 
                                   class="form-control" 
                                   id="activityType" 
                                   name="activityType" 
                                   value="@Model.FilterActivityType"
                                   placeholder="مثال: ورود به سیستم" />
                        </div>
                        <div class="col-md-6">
                            <label for="deviceType" class="form-label">نوع دستگاه</label>
                            <input type="text" 
                                   class="form-control" 
                                   id="deviceType" 
                                   name="deviceType" 
                                   value="@Model.FilterDeviceType"
                                   placeholder="مثال: Mobile, Desktop" />
                        </div>
                        <div class="col-md-6">
                            <label for="isActive" class="form-label">وضعیت</label>
                            <select class="form-select" id="isActive" name="isActive">
                                <option value="">همه</option>
                                @if (Model.FilterIsActive == true)
                                {
                                    <option value="true" selected>فعال</option>
                                }
                                else
                                {
                                    <option value="true">فعال</option>
                                }
                                @if (Model.FilterIsActive == false)
                                {
                                    <option value="false" selected>بسته شده</option>
                                }
                                else
                                {
                                    <option value="false">بسته شده</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <a class="btn btn-light" asp-action="UserSessions" asp-route-id="@Model.UserId" asp-route-page="1" asp-route-pageSize="@Model.PageSize">پاکسازی</a>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">انصراف</button>
                    <button type="submit" class="btn btn-primary">اعمال فیلتر</button>
                </div>
            </form>
        </div>
    </div>
</div>

