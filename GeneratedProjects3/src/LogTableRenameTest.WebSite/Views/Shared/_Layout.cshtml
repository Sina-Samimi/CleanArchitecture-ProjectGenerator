@using LogTableRenameTest.Application.Queries.Cart
@using LogTableRenameTest.Application.Queries.Catalog
@using LogTableRenameTest.WebSite.Services.Cart
@using MediatR
@inject IMediator Mediator
@inject ICartCookieService CartCookieService
@{ 
    var alertMessage = TempData["Alert.Message"] as string;
    var alertTitle = TempData["Alert.Title"] as string;
    var alertType = TempData["Alert.Type"] as string;
    var alertConfirmText = TempData["Alert.ConfirmText"] as string;
    var hasAlert = !string.IsNullOrWhiteSpace(alertMessage);
    string alertJson = string.Empty;
    
    // Get cart item count
    var cartItemCount = 0;
    try
    {
        var userId = User?.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
        var anonymousId = CartCookieService.GetAnonymousCartId();
        var cartResult = await Mediator.Send(new GetCartQuery(userId, anonymousId));
        if (cartResult.IsSuccess && cartResult.Value != null)
        {
            cartItemCount = cartResult.Value.Items.Count;
        }
    }
    catch
    {
        // If cart service fails, default to 0
        cartItemCount = 0;
    }
    
    // Get wishlist item count (only for authenticated users)
    var wishlistItemCount = 0;
    var isAuthenticated = User?.Identity?.IsAuthenticated ?? false;
    if (isAuthenticated)
    {
        try
        {
            var userId = User?.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
            if (!string.IsNullOrWhiteSpace(userId))
            {
                var wishlistResult = await Mediator.Send(new GetWishlistQuery(userId));
                if (wishlistResult.IsSuccess && wishlistResult.Value != null)
                {
                    wishlistItemCount = wishlistResult.Value.Count;
                }
            }
        }
        catch
        {
            // If wishlist service fails, default to 0
            wishlistItemCount = 0;
        }
    }

    if (hasAlert)
    {
        var payload = new
        {
            title = string.IsNullOrWhiteSpace(alertTitle) ? "اعلان سیستم" : alertTitle,
            message = alertMessage,
            type = string.IsNullOrWhiteSpace(alertType) ? "info" : alertType,
            confirmText = string.IsNullOrWhiteSpace(alertConfirmText) ? "باشه" : alertConfirmText
        };

        alertJson = JsonSerializer.Serialize(payload);
    }
    var containerClass = "container site-container";
    if (ViewData["ContainerClass"] is string extraContainer && !string.IsNullOrWhiteSpace(extraContainer))
    {
        containerClass += $" {extraContainer}";
    }

    var mainClass = "site-main pb-3";
    if (ViewData["MainClass"] is string extraMain && !string.IsNullOrWhiteSpace(extraMain))
    {
        mainClass += $" {extraMain}";
    }

    var requestPath = Context?.Request?.Path.Value;
    var requestQuery = Context?.Request?.QueryString.Value;
    var currentUrl = string.IsNullOrEmpty(requestQuery)
        ? (string.IsNullOrEmpty(requestPath) ? Url.Action("Index", "Home") ?? "/" : requestPath)
        : $"{requestPath}{requestQuery}";

    var userDisplayName = (User?.Identity?.IsAuthenticated ?? false)
        ? (User?.Identity?.Name?.Replace("@gmail.com", "") ?? "حساب من")
        : null;

    var metaDescription = ViewData["MetaDescription"] as string;
    var metaKeywords = ViewData["MetaKeywords"] as string;
    var metaRobots = ViewData["MetaRobots"] as string ?? "noindex,nofollow"; // پیش‌فرض: noindex,nofollow
    var canonicalUrl = ViewData["CanonicalUrl"] as string;
    var metaOgTitle = ViewData["MetaOgTitle"] as string ?? ViewData["Title"]?.ToString();
    var metaOgDescription = ViewData["MetaOgDescription"] as string ?? metaDescription;
    var metaOgImage = ViewData["MetaOgImage"] as string;
    var metaOgType = ViewData["MetaOgType"] as string ?? "website";
    var metaOgUrl = ViewData["MetaOgUrl"] as string ?? currentUrl;
    var metaArticleAuthor = ViewData["MetaArticleAuthor"] as string;
    var metaArticlePublished = ViewData["MetaArticlePublished"] as string;
    var twitterCard = ViewData["TwitterCard"] as string;
    var twitterTitle = ViewData["TwitterTitle"] as string;
    var twitterDescription = ViewData["TwitterDescription"] as string;
    var twitterImage = ViewData["TwitterImage"] as string;
    var schemaJson = ViewData["SchemaJson"] as string;
