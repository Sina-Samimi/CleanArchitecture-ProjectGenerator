    <!-- Mobile Bottom Navigation -->
    @{
        var currentPath = Context?.Request?.Path.Value?.ToLower() ?? "";
        
        bool IsActive(string[] paths, bool exactMatch = false)
        {
            if (paths == null || paths.Length == 0) return false;
            foreach (var path in paths)
            {
                var normalizedPath = path.ToLower().Trim('/');
                
                // Handle root/home path
                if (string.IsNullOrEmpty(normalizedPath))
                {
                    if (currentPath == "/" || string.IsNullOrEmpty(currentPath) || currentPath == "/home")
                    {
                        return true;
                    }
                    continue;
                }
                
                // Exact match for specific paths
                if (exactMatch)
                {
                    if (currentPath == $"/{normalizedPath}" || currentPath == $"/{normalizedPath}/")
                    {
                        return true;
                    }
                }
                else
                {
                    // For paths like /home, check exact match or starts with /home/ but not /home/contact, /home/about, etc.
                    if (normalizedPath == "home")
                    {
                        if (currentPath == "/" || currentPath == "/home" || currentPath == "/home/")
                        {
                            return true;
                        }
                        continue;
                    }
                    
                    // For other paths, check exact match or starts with
                    if (currentPath == $"/{normalizedPath}" || currentPath == $"/{normalizedPath}/" || currentPath.StartsWith($"/{normalizedPath}/"))
                    {
                        return true;
                    }
                }
            }
            return false;
        }
    }
