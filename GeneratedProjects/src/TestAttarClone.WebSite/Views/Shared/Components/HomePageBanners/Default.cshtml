@model IReadOnlyCollection<BannerViewModel>
@using TestAttarClone.WebSite.ViewComponents

@if (Model.Any())
{
    // Check if banners should be displayed as slider (global setting from first banner)
    var isGlobalSlider = Model.FirstOrDefault()?.IsSlider ?? false;
    var allBanners = Model.ToList();

    @if (isGlobalSlider)
    {
        // Display all banners as slider
        <section class="hero-banner-slider" id="home" style="width: 100%; height: 80vh; min-height: 500px; position: relative; overflow: hidden; padding: 0;">
            <div id="bannerCarousel" class="carousel slide h-100" data-bs-ride="carousel" data-bs-interval="5000" style="height: 100%;">
                <div class="carousel-indicators">
                    @for (int i = 0; i < allBanners.Count; i++)
                    {
                        <button type="button" data-bs-target="#bannerCarousel" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "false")" aria-label="اسلاید @(i + 1)"></button>
                    }
                </div>
                <div class="carousel-inner h-100">
                    @for (int i = 0; i < allBanners.Count; i++)
                    {
                        var banner = allBanners[i];
                        <div class="carousel-item @(i == 0 ? "active" : "") h-100">
                            @if (!string.IsNullOrWhiteSpace(banner.LinkUrl))
                            {
                                <a href="@banner.LinkUrl" class="banner-link d-block h-100" style="width: 100%; height: 100%;">
                                    <img src="@Url.Content(banner.ImagePath)" class="d-block" alt="@(banner.AltText ?? banner.Title)" style="width: 100%; height: 100%;" />
                                </a>
                            }
                            else
                            {
                                <img src="@Url.Content(banner.ImagePath)" class="d-block" alt="@(banner.AltText ?? banner.Title)" style="width: 100%; height: 100%;" />
                            }
                            @if (!string.IsNullOrWhiteSpace(banner.Title))
                            {
                                <div class="carousel-caption d-none d-md-block">
                                    <h2>@banner.Title</h2>
                                </div>
                            }
                        </div>
                    }
                </div>
                @if (allBanners.Count > 1)
                {
                    <button class="carousel-control-prev" type="button" data-bs-target="#bannerCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">قبلی</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#bannerCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">بعدی</span>
                    </button>
                }
            </div>
        </section>
    }
    else
    {
        // Display all banners as static
        <section class="hero-banners-static" style="width: 100%; height: 80vh; min-height: 500px; position: relative; overflow: hidden; padding: 0;">
            @if (allBanners.Count == 1)
            {
                // Single banner - full width and height
                var banner = allBanners.First();
                @if (!string.IsNullOrWhiteSpace(banner.LinkUrl))
                {
                    <a href="@banner.LinkUrl" class="banner-link d-block h-100" style="width: 100%; height: 100%;">
                        <img src="@Url.Content(banner.ImagePath)" class="d-block" alt="@(banner.AltText ?? banner.Title)" style="width: 100%; height: 100%;" />
                    </a>
                }
                else
                {
                    <img src="@Url.Content(banner.ImagePath)" class="d-block" alt="@(banner.AltText ?? banner.Title)" style="width: 100%; height: 100%;" />
                }
            }
            else
            {
                // Multiple banners - use grid
                <div class="container-fluid p-0 h-100">
                    <div class="row g-0 h-100">
                        @foreach (var banner in allBanners)
                        {
                            <div class="@(allBanners.Count == 2 ? "col-md-6" : "col-md-4") h-100" style="position: relative;">
                                @if (!string.IsNullOrWhiteSpace(banner.LinkUrl))
                                {
                                    <a href="@banner.LinkUrl" class="banner-link d-block h-100" style="width: 100%; height: 100%;">
                                        <img src="@Url.Content(banner.ImagePath)" class="d-block" alt="@(banner.AltText ?? banner.Title)" style="width: 100%; height: 100%;" />
                                    </a>
                                }
                                else
                                {
                                    <img src="@Url.Content(banner.ImagePath)" class="d-block" alt="@(banner.AltText ?? banner.Title)" style="width: 100%; height: 100%;" />
                                }
                            </div>
                        }
                    </div>
                </div>
            }
        </section>
    }
}
else
{
    <section class="hero" id="home">
        <div class="hero-content">
            <h1>به عطاری آنلاین خوش آمدید</h1>
            <p>طبیعت را به خانه خود بیاورید - گیاهان دارویی اصل و با کیفیت</p>
        </div>
    </section>
}

