@using System.Security.Claims
@using TestAttarClone.Application.Queries.Cart
@using TestAttarClone.Application.Queries.Catalog
@using TestAttarClone.WebSite.Services.Cart
@using MediatR
@inject IMediator Mediator
@inject ICartCookieService CartCookieService
@{
    var metaDescription = ViewData["MetaDescription"] as string;
    var metaKeywords = ViewData["MetaKeywords"] as string;
    var metaRobots = ViewData["MetaRobots"] as string ?? "noindex,nofollow"; // پیش‌فرض: noindex,nofollow
    var canonicalUrl = ViewData["CanonicalUrl"] as string;
    var metaOgTitle = ViewData["MetaOgTitle"] as string ?? ViewData["Title"]?.ToString();
    var metaOgDescription = ViewData["MetaOgDescription"] as string ?? metaDescription;
    var metaOgImage = ViewData["MetaOgImage"] as string;
    var metaOgType = ViewData["MetaOgType"] as string ?? "website";
    var metaOgUrl = ViewData["MetaOgUrl"] as string;
    var twitterCard = ViewData["TwitterCard"] as string;
    var twitterTitle = ViewData["TwitterTitle"] as string;
    var twitterDescription = ViewData["TwitterDescription"] as string;
    var twitterImage = ViewData["TwitterImage"] as string;
    var schemaJson = ViewData["SchemaJson"] as string;
    var breadcrumbsJson = ViewData["BreadcrumbsJson"] as string;
    var pageFaqs = Context.Items["PageFaqs"] as System.Collections.Generic.IReadOnlyCollection<TestAttarClone.Application.DTOs.Seo.PageFaqDto>;
    var seoOgImages = ViewData["SeoOgImages"] as System.Collections.Generic.IReadOnlyCollection<TestAttarClone.Application.DTOs.Seo.SeoOgImageDto> 
        ?? Context.Items["SeoOgImages"] as System.Collections.Generic.IReadOnlyCollection<TestAttarClone.Application.DTOs.Seo.SeoOgImageDto>;
    
    var siteName = ViewData["SiteName"] as string ?? "عطاری آنلاین";
    var logoPath = ViewData["SiteLogoPath"] as string;
    var siteEmail = ViewData["SiteEmail"] as string;

    // Get cart item count
    var cartItemCount = 0;
    try
    {
        var userId = User?.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
        var anonymousId = CartCookieService.GetAnonymousCartId();
        var cartResult = await Mediator.Send(new GetCartQuery(userId, anonymousId));
        if (cartResult.IsSuccess && cartResult.Value != null)
        {
            cartItemCount = cartResult.Value.Items.Count;
        }
    }
    catch
    {
        // If cart service fails, default to 0
        cartItemCount = 0;
    }

    // Get wishlist item count (only for authenticated users)
    var wishlistItemCount = 0;
    var isAuthenticated = User?.Identity?.IsAuthenticated ?? false;
    if (isAuthenticated)
    {
        try
        {
            var userId = User?.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
            if (!string.IsNullOrWhiteSpace(userId))
            {
                var wishlistResult = await Mediator.Send(new GetWishlistQuery(userId));
                if (wishlistResult.IsSuccess && wishlistResult.Value != null)
                {
                    wishlistItemCount = wishlistResult.Value.Count;
                }
            }
        }
        catch
        {
            // If wishlist service fails, default to 0
            wishlistItemCount = 0;
        }
    }
    var contactPhone = ViewData["ContactPhone"] as string;
    var address = ViewData["Address"] as string;
    var shortDescription = ViewData["ShortDescription"] as string;
    var telegramUrl = ViewData["TelegramUrl"] as string;
    var instagramUrl = ViewData["InstagramUrl"] as string;
    var whatsAppUrl = ViewData["WhatsAppUrl"] as string;
    var linkedInUrl = ViewData["LinkedInUrl"] as string;
}
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @siteName</title>
    @{
        var faviconPath = ViewData["SiteFaviconPath"] as string;
    }
    @if (!string.IsNullOrWhiteSpace(faviconPath))
    {
        <link rel="icon" type="image/x-icon" href="@Url.Content(faviconPath)" />
        <link rel="shortcut icon" type="image/x-icon" href="@Url.Content(faviconPath)" />
    }
    @if (!string.IsNullOrWhiteSpace(metaDescription))
    {
        <meta name="description" content="@metaDescription" />
    }
    @if (!string.IsNullOrWhiteSpace(metaKeywords))
    {
        <meta name="keywords" content="@metaKeywords" />
    }
    @if (!string.IsNullOrWhiteSpace(metaRobots))
    {
        <meta name="robots" content="@metaRobots" />
    }
    @if (!string.IsNullOrWhiteSpace(canonicalUrl))
    {
        <link rel="canonical" href="@canonicalUrl" />
    }
    @if (!string.IsNullOrWhiteSpace(metaOgTitle))
    {
        <meta property="og:title" content="@metaOgTitle" />
    }
    @if (!string.IsNullOrWhiteSpace(metaOgDescription))
    {
        <meta property="og:description" content="@metaOgDescription" />
    }
    @* پشتیبانی از چندین OG Image *@
    @if (seoOgImages != null && seoOgImages.Any())
    {
        @foreach (var ogImage in seoOgImages.OrderBy(img => img.DisplayOrder))
        {
            <meta property="og:image" content="@ogImage.ImageUrl" />
            @if (ogImage.Width.HasValue)
            {
                <meta property="og:image:width" content="@ogImage.Width.Value" />
            }
            @if (ogImage.Height.HasValue)
            {
                <meta property="og:image:height" content="@ogImage.Height.Value" />
            }
            @if (!string.IsNullOrWhiteSpace(ogImage.ImageType))
            {
                <meta property="og:image:type" content="image/@ogImage.ImageType" />
            }
            @if (!string.IsNullOrWhiteSpace(ogImage.Alt))
            {
                <meta property="og:image:alt" content="@ogImage.Alt" />
            }
        }
    }
    else if (!string.IsNullOrWhiteSpace(metaOgImage))
    {
        <meta property="og:image" content="@metaOgImage" />
    }
    <meta property="og:type" content="@metaOgType" />
    @if (!string.IsNullOrWhiteSpace(metaOgUrl))
    {
        <meta property="og:url" content="@metaOgUrl" />
    }
    
    @* Twitter Card *@
    @if (!string.IsNullOrWhiteSpace(twitterCard))
    {
        <meta name="twitter:card" content="@twitterCard" />
    }
    else if (!string.IsNullOrWhiteSpace(metaOgImage))
    {
        <meta name="twitter:card" content="summary_large_image" />
    }
    else
    {
        <meta name="twitter:card" content="summary" />
    }
    @if (!string.IsNullOrWhiteSpace(twitterTitle))
    {
        <meta name="twitter:title" content="@twitterTitle" />
    }
    else if (!string.IsNullOrWhiteSpace(metaOgTitle))
    {
        <meta name="twitter:title" content="@metaOgTitle" />
    }
    @if (!string.IsNullOrWhiteSpace(twitterDescription))
    {
        <meta name="twitter:description" content="@twitterDescription" />
    }
    else if (!string.IsNullOrWhiteSpace(metaOgDescription))
    {
        <meta name="twitter:description" content="@metaOgDescription" />
    }
    @if (!string.IsNullOrWhiteSpace(twitterImage))
    {
        <meta name="twitter:image" content="@twitterImage" />
    }
    else if (!string.IsNullOrWhiteSpace(metaOgImage))
    {
        <meta name="twitter:image" content="@metaOgImage" />
    }
    
    @* Schema JSON-LD *@
    @if (!string.IsNullOrWhiteSpace(schemaJson))
    {
        <script type="application/ld+json">
            @Html.Raw(schemaJson)
        </script>
    }
    
    @* FAQ Schema *@
    @if (pageFaqs != null && pageFaqs.Any())
    {
        <script type="application/ld+json">
            {
                "@@context": "https://schema.org",
                "@@type": "FAQPage",
                "mainEntity": [
                    @foreach (var faq in pageFaqs.OrderBy(f => f.DisplayOrder))
                    {
                        <text>{
                            "@@type": "Question",
                            "name": "@Html.Raw(faq.Question.Replace("\"", "\\\""))",
                            "acceptedAnswer": {
                                "@@type": "Answer",
                                "text": "@Html.Raw(faq.Answer.Replace("\"", "\\\""))"
                            }
                        }</text>
                        @if (faq != pageFaqs.OrderBy(f => f.DisplayOrder).Last())
                        {
                            <text>,</text>
                        }
                    }
                ]
            }
        </script>
    }
    
    @* Breadcrumbs Schema *@
    @if (!string.IsNullOrWhiteSpace(breadcrumbsJson))
    {
        <script type="application/ld+json">
            @Html.Raw(breadcrumbsJson)
        </script>
    }
    
    <link rel="stylesheet" href="~/css/home-template.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="/font/iransans/style.css" rel="stylesheet" asp-append-version="true" />
    <link href="/font/iransans/fontiran.css" rel="stylesheet" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
