                    </div>
                </div>
                <div class="nav-cart-item d-none d-lg-block">
                    <a asp-controller="Cart" asp-action="Index" class="nav-cart-link">
                        <span class="nav-cart-icon-wrapper">
                            <i class="bi bi-cart3 nav-cart-icon"></i>
                            @if (cartItemCount > 0)
                            {
                                <span class="nav-cart-badge">@cartItemCount</span>
                            }
                        </span>
                    </a>
                </div>
                @if (isAuthenticated)
                {
                    <div class="nav-wishlist-item d-none d-lg-block">
                        <a asp-controller="Wishlist" asp-action="Index" class="nav-wishlist-link">
                            <span class="nav-wishlist-icon-wrapper">
                                <i class="bi bi-heart nav-wishlist-icon"></i>
                                @if (wishlistItemCount > 0)
                                {
                                    <span class="nav-wishlist-badge">@wishlistItemCount</span>
                                }
                            </span>
                        </a>
                    </div>
                }
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    @RenderBody()

    <!-- Mobile Search Box -->
    <div class="mobile-search-box" id="mobile-search-box">
        <form asp-controller="Product" asp-action="Index" method="get" class="mobile-search-form">
            <input type="text" name="search" id="mobile-search-input" placeholder="جستجوی محصولات..." class="mobile-search-input" autocomplete="off">
            <button type="submit" class="mobile-search-submit">🔍</button>
            <button type="button" class="mobile-search-close" id="mobile-search-close">✕</button>
        </form>
    </div>

    <!-- Mobile Sidebar Menu -->
    <div class="mobile-sidebar__overlay" id="mobile-sidebar-overlay"></div>
    <div class="mobile-sidebar" id="mobile-sidebar">
        <div class="mobile-sidebar__content">
            <div class="mobile-sidebar__header">
                <a class="mobile-sidebar__logo" asp-area="" asp-controller="Home" asp-action="Index" aria-label="بازگشت به صفحه اصلی">
                    @if (!string.IsNullOrWhiteSpace(logoPath))
                    {
                        <img src="@Url.Content(logoPath)" alt="@siteName" style="height: 35px; margin-left: 8px;" />
                    }
                    <span>@siteName</span>
                </a>
                <button type="button" class="mobile-sidebar__close" id="mobile-sidebar-close" aria-label="بستن منو">
