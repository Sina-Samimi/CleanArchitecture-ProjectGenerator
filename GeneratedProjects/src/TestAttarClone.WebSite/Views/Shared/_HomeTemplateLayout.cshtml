            </div>
            <div class="mobile-sidebar__search">
                <form asp-controller="Product" asp-action="Index" method="get" class="mobile-sidebar__search-form">
                    <input type="text" name="search" class="mobile-sidebar__search-input" placeholder="جستجو..." autocomplete="off">
                    <button type="submit" class="mobile-sidebar__search-button" aria-label="جستجو">
                        <span><i class="bi bi-search"></i></span>
                    </button>
                </form>
            </div>
            <nav class="mobile-sidebar__nav">
                <ul class="mobile-sidebar__menu">
                    @await Component.InvokeAsync("NavigationMenu", new { viewName = "MobileSidebar" })

