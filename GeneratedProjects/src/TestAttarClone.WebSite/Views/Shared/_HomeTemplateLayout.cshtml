    <!-- Mobile Bottom Navigation -->
    @{
        var currentPath = Context?.Request?.Path.Value?.ToLower() ?? "";

        bool IsActive(string[] paths, bool exactMatch = false)
        {
            if (paths == null || paths.Length == 0) return false;
            foreach (var path in paths)
            {
                var normalizedPath = path.ToLower().Trim('/');

                // Handle root/home path
                if (string.IsNullOrEmpty(normalizedPath))
                {
                    if (currentPath == "/" || string.IsNullOrEmpty(currentPath) || currentPath == "/home")
                    {
                        return true;
                    }
                    continue;
                }

                // Exact match for specific paths
                if (exactMatch)
                {
                    if (currentPath == $"/{normalizedPath}" || currentPath == $"/{normalizedPath}/")
                    {
                        return true;
                    }
                }
                else
                {
                    // For paths like /home, check exact match or starts with /home/ but not /home/contact, /home/about, etc.
                    if (normalizedPath == "home")
                    {
                        if (currentPath == "/" || currentPath == "/home" || currentPath == "/home/")
                        {
                            return true;
                        }
                        continue;
                    }

                    // For other paths, check exact match or starts with
                    if (currentPath == $"/{normalizedPath}" || currentPath == $"/{normalizedPath}/" || currentPath.StartsWith($"/{normalizedPath}/"))
                    {
                        return true;
                    }
                }
            }
            return false;
        }
    }
    <nav class="mobile-bottom-nav">
        <a asp-controller="Home" asp-action="Index" class="mobile-bottom-nav-item @(IsActive(new[] { "/", "/home" }) ? "active" : "")">
            <i class="bi bi-house mobile-bottom-nav-icon"></i>
            <span class="mobile-bottom-nav-label">خانه</span>
        </a>

        <a asp-controller="Product" asp-action="Index" class="mobile-bottom-nav-item @(IsActive(new[] { "/product" }) ? "active" : "")">
            <i class="bi bi-grid mobile-bottom-nav-icon"></i>
            <span class="mobile-bottom-nav-label">محصولات</span>
        </a>

        <a asp-controller="Cart" asp-action="Index" class="mobile-bottom-nav-item @(IsActive(new[] { "/cart" }, exactMatch: true) ? "active" : "")">
            <span class="mobile-bottom-nav-icon-wrapper">
                <i class="bi bi-cart3 mobile-bottom-nav-icon"></i>
                @if (cartItemCount > 0)
                {
                    <span class="mobile-bottom-nav-badge">@cartItemCount</span>
                }
            </span>
            <span class="mobile-bottom-nav-label">سبد خرید</span>
        </a>

        @if (isAuthenticated)
        {
            <a asp-area="User" asp-controller="Profile" asp-action="Index" class="mobile-bottom-nav-item @(IsActive(new[] { "/user" }) ? "active" : "")">
                <i class="bi bi-person mobile-bottom-nav-icon"></i>
                <span class="mobile-bottom-nav-label">حساب من</span>
            </a>
        }
        else
        {
            <a asp-controller="Account" asp-action="PhoneLogin" class="mobile-bottom-nav-item @(IsActive(new[] { "/account/phonelogin", "/account" }) ? "active" : "")">
                <i class="bi bi-person mobile-bottom-nav-icon"></i>
                <span class="mobile-bottom-nav-label">ورود / ثبت نام</span>
            </a>
        }

        @if (isAuthenticated)
        {
            <a asp-controller="Wishlist" asp-action="Index" class="mobile-bottom-nav-item @(IsActive(new[] { "/wishlist" }, exactMatch: true) ? "active" : "")">
                <span class="mobile-bottom-nav-icon-wrapper">
                    <i class="bi bi-heart mobile-bottom-nav-icon"></i>
                    @if (wishlistItemCount > 0)
                    {
                        <span class="mobile-bottom-nav-badge">@wishlistItemCount</span>
                    }
                </span>
                <span class="mobile-bottom-nav-label">علاقه‌مندی‌ها</span>
            </a>
        }
        else
        {
            <a asp-controller="Account" asp-action="PhoneLogin" asp-route-returnUrl="@Url.Action("Index", "Wishlist")" class="mobile-bottom-nav-item">
                <i class="bi bi-heart mobile-bottom-nav-icon"></i>
                <span class="mobile-bottom-nav-label">علاقه‌مندی‌ها</span>
            </a>
        }
    </nav>

    <script src="~/js/home-template.js" asp-append-version="true"></script>
    @await Html.PartialAsync("_AlertModal")
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
