@model TestAttarClone.WebSite.Models.Cart.CheckoutViewModel
@{
    Layout = "_HomeTemplateLayout";
    ViewData["Title"] = "تسویه حساب";
}
@section Styles {
    <link rel="stylesheet" href="~/css/checkout-modern.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/checkout.css" asp-append-version="true" />
}

<section class="checkout-page">
    <div class="container">
        <div class="checkout-header">
            <h1 class="checkout-title">تسویه حساب</h1>
            <p class="checkout-subtitle">انتخاب روش پرداخت و تکمیل خرید</p>
        </div>

        <div class="checkout-layout">
            <div class="checkout-main">
                <!-- Shipping Address Selection -->
                <div class="checkout-section">
                    <h2>انتخاب آدرس ارسال</h2>
                    <div id="addresses-container">
                        @if (Model.Addresses != null && Model.Addresses.Count > 0)
                        {
                            @foreach (var address in Model.Addresses)
                            {
                                <div class="address-card @(address.IsDefault ? "selected" : "")" data-address-id="@address.Id">
                                    <label style="cursor: pointer; display: block; margin: 0;">
                                        <input type="radio" name="SelectedAddressId" value="@address.Id" @(address.IsDefault ? "checked" : "") style="margin-left: 0.5rem;" />
                                        <div class="address-title">
                                            @address.Title
                                            @if (address.IsDefault)
                                            {
                                                <span class="address-badge">پیش‌فرض</span>
                                            }
                                        </div>
                                        <div class="address-details">
                                            <div>@address.RecipientName - @address.RecipientPhone</div>
                                            <div>@address.Province، @address.City</div>
                                            <div>
                                                @address.AddressLine
                                                @if (!string.IsNullOrWhiteSpace(address.Plaque))
                                                {
                                                    <span>، پلاک @address.Plaque</span>
                                                }
                                                @if (!string.IsNullOrWhiteSpace(address.Unit))
                                                {
                                                    <span>، واحد @address.Unit</span>
                                                }
                                            </div>
                                            <div>کد پستی: @address.PostalCode</div>
                                        </div>
                                    </label>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="no-address-message">
                                <p>شما هنوز آدرسی ثبت نکرده‌اید.</p>
                            </div>
                        }
                        <button type="button" class="btn-add-address" id="btn-add-address" data-bs-toggle="modal" data-bs-target="#addAddressModal">
                            <i class="bi bi-plus-circle ms-1"></i>
                            افزودن آدرس جدید
                        </button>
                    </div>
                </div>

                <!-- Payment Method Selection -->
                <div class="checkout-section">
                    <h2>روش پرداخت</h2>
                    <form asp-action="ProcessPayment" method="post" id="checkout-form">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="SelectedAddressId" id="selected-address-input" />
                        
                        <div class="payment-methods">
                            <!-- Gateway Payment -->
                            <label class="payment-method">
                                <input type="radio" name="PaymentMethod" value="Gateway" checked class="payment-method__radio" />
                                <div class="payment-method-content">
                                    <div class="payment-method-icon">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" viewBox="0 0 16 16">
                                            <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4zm2-1a1 1 0 0 0-1 1v1h14V4a1 1 0 0 0-1-1H2zm13 4H1v5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V7z"/>
                                            <path d="M2 10a1 1 0 0 1 1-1h1a1 1 0 0 1 1 1v1a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1v-1z"/>
                                        </svg>
                                    </div>
                                    <div class="payment-method-info">
                                        <div class="payment-method-name">پرداخت اینترنتی</div>
                                        <div class="payment-method-description">پرداخت از طریق درگاه بانکی</div>
                                    </div>
                                </div>
                            </label>

                            <!-- Wallet Payment -->
                            <label class="payment-method">
                                <input type="radio" name="PaymentMethod" value="Wallet" class="payment-method__radio" />
                                <div class="payment-method-content">
                                    <div class="payment-method-icon">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" viewBox="0 0 16 16">
                                            <path d="M12.136.326A1.5 1.5 0 0 1 14 1.78V3h.5A1.5 1.5 0 0 1 16 4.5v9a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 13.5v-9a1.5 1.5 0 0 1 1.432-1.499L12.136.326zM5.562 3H13V1.78a.5.5 0 0 0-.621-.484L5.562 3zM1.5 4a.5.5 0 0 0-.5.5v9a.5.5 0 0 0 .5.5h13a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-13z"/>
                                        </svg>
                                    </div>
                                    <div class="payment-method-info">
                                        <div class="payment-method-name">کیف پول</div>
                                        <div class="payment-method-description">پرداخت از موجودی کیف پول</div>
                                    </div>
                                </div>
                            </label>
                        </div>

                        <div class="checkout-actions">
                            <button type="submit" class="btn-checkout">
                                <i class="bi bi-arrow-left ms-1"></i>
                                ادامه و پرداخت
                            </button>
                            <a asp-controller="Cart" asp-action="Index" class="btn-back-cart">
                                <i class="bi bi-arrow-right ms-1"></i>
                                بازگشت به سبد خرید
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Order Summary -->
            <aside class="checkout-summary">
                <div class="summary-card">
                    <h2 class="summary-title">خلاصه سفارش</h2>
                    
                    <div class="summary-items">
                        @foreach (var item in Model.Cart.Items)
                        {
                            <div class="summary-item">
                                <img class="summary-item-image" src="@(!string.IsNullOrWhiteSpace(item.ThumbnailUrl) ? item.ThumbnailUrl : "https://placehold.co/60x60?text=Arsis")" alt="" loading="lazy" />
                                <div class="summary-item-info">
                                    <div class="summary-item-name">@item.Name</div>
                                    <div class="summary-item-quantity">تعداد: @item.Quantity</div>
                                </div>
                                <div class="summary-item-price">@item.LineTotal.ToString("N0", new System.Globalization.CultureInfo("fa-IR")) تومان</div>
                            </div>
                        }
                    </div>

                    <div class="summary-totals">
                        <div class="summary-row">
                            <span>جمع جزء</span>
                            <span>@Model.Cart.Subtotal.ToString("N0", new System.Globalization.CultureInfo("fa-IR")) تومان</span>
                        </div>
                        <div class="summary-row">
                            <span>تخفیف</span>
                            <span>@Model.Cart.DiscountTotal.ToString("N0", new System.Globalization.CultureInfo("fa-IR")) تومان</span>
                        </div>
                        <div class="summary-row total">
                            <span>مبلغ قابل پرداخت</span>
                            <span>@Model.Cart.GrandTotal.ToString("N0", new System.Globalization.CultureInfo("fa-IR")) تومان</span>
                        </div>
                    </div>
                </div>
            </aside>
        </div>
    </div>
</section>

<!-- Add Address Modal - Must be outside container for proper positioning -->
<div class="modal fade" id="addAddressModal" tabindex="-1" aria-labelledby="addAddressModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addAddressModalLabel">افزودن آدرس جدید</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="add-address-form" method="post" action="@Url.Action("AddAddress", "Checkout")" data-action-url="@Url.Action("AddAddress", "Checkout")">
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="row g-3">
                        <div class="col-12">
                            <label class="form-label">عنوان آدرس <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="title" required placeholder="مثلاً: منزل، محل کار" />
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label">نام گیرنده <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="recipientName" required />
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label">شماره تماس گیرنده <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="recipientPhone" required placeholder="09123456789" />
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label">استان <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="province" required />
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label">شهر <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="city" required />
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label">کد پستی <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="postalCode" required placeholder="1234567890" />
                        </div>

                        <div class="col-12 col-md-3">
                            <label class="form-label">پلاک</label>
                            <div class="optional-field-wrapper">
                                <input type="text" class="form-control" name="plaque" id="plaqueInput" style="display: none;" />
                                <button type="button" class="btn-optional" data-toggle-field="plaqueInput">
                                    <span>اختیاری</span>
                                </button>
                            </div>
                        </div>

                        <div class="col-12 col-md-3">
                            <label class="form-label">واحد</label>
                            <div class="optional-field-wrapper">
                                <input type="text" class="form-control" name="unit" id="unitInput" style="display: none;" />
                                <button type="button" class="btn-optional" data-toggle-field="unitInput">
                                    <span>اختیاری</span>
                                </button>
                            </div>
                        </div>

                        <div class="col-12">
                            <label class="form-label">آدرس کامل <span class="text-danger">*</span></label>
                            <textarea class="form-control" name="addressLine" rows="3" required placeholder="آدرس کامل را وارد کنید"></textarea>
                        </div>

                        <div class="col-12">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="isDefault" id="isDefault" value="true" />
                                <label class="form-check-label" for="isDefault">
                                    آدرس پیش‌فرض
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-cancel" data-bs-dismiss="modal">انصراف</button>
                    <button type="submit" class="btn btn-save">
                        <i class="bi bi-check-circle ms-1"></i>
                        ذخیره
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Load jQuery and Bootstrap before validation scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        // Ensure jQuery is available globally
        if (typeof jQuery !== 'undefined') {
            window.$ = window.jQuery = jQuery;
        }
    </script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/checkout.js" asp-append-version="true"></script>
}
