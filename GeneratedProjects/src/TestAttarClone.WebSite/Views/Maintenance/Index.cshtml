@{
    Layout = null;
    var message = ViewData["Message"] as string ?? "سایت در حال تعمیر و به‌روزرسانی است. لطفاً دقایقی دیگر دوباره تلاش کنید.";
    var estimatedTime = ViewData["EstimatedTime"] as string;
}
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - عطاری آنلاین</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #4caf50 0%, #2e7d32 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            position: relative;
            overflow: hidden;
        }

        body::before {
            content: '';
            position: absolute;
            top: -50px;
            left: -50px;
            width: 200px;
            height: 200px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.12);
            filter: blur(2px);
        }

        body::after {
            content: '';
            position: absolute;
            bottom: -60px;
            right: -60px;
            width: 260px;
            height: 260px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.15);
            filter: blur(3px);
        }

        .maintenance-container {
            background: rgba(255, 255, 255, 0.97);
            backdrop-filter: blur(12px);
            border-radius: 28px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.25);
            padding: 3.5rem 3rem;
            max-width: 720px;
            width: 100%;
            text-align: center;
            position: relative;
            z-index: 1;
            animation: slideUp 0.6s ease-out;
        }

        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(32px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

         .logo {
             display: inline-flex;
             align-items: center;
             gap: 0.5rem;
             font-size: 1.6rem;
             font-weight: 800;
             color: #2e7d32;
             margin-bottom: 1.5rem;
         }

         .logo-link {
             text-decoration: none;
             color: inherit;
         }

         .logo-link:hover {
             opacity: 0.9;
         }

        .logo-icon {
            width: 38px;
            height: 38px;
            border-radius: 14px;
            background: linear-gradient(135deg, #66bb6a 0%, #43a047 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: #fff;
            font-size: 1.4rem;
            box-shadow: 0 6px 16px rgba(67, 160, 71, 0.5);
        }

        .maintenance-icon {
            width: 130px;
            height: 130px;
            margin: 0 auto 1.8rem;
            border-radius: 50%;
            background: linear-gradient(135deg, #a5d6a7 0%, #81c784 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: #2e7d32;
            font-size: 3.2rem;
            box-shadow: 0 10px 30px rgba(46, 125, 50, 0.35);
            animation: pulse 2.2s infinite;
        }

        @@keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }

        h1 {
            color: #1b5e20;
            font-weight: 800;
            font-size: 2.4rem;
            margin-bottom: 1rem;
        }

        .subtitle {
            color: #388e3c;
            font-weight: 600;
            margin-bottom: 1.5rem;
            font-size: 1.1rem;
        }

        .message {
            color: #555;
            font-size: 1.05rem;
            line-height: 2;
            margin-bottom: 1.8rem;
        }

        .estimated-time {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            background: #f1f8e9;
            border-radius: 999px;
            padding: 0.75rem 1.5rem;
            margin-bottom: 1.8rem;
            color: #33691e;
            font-weight: 600;
            font-size: 0.95rem;
        }

        .estimated-time i {
            color: #558b2f;
        }

        .features {
            display: flex;
            justify-content: center;
            gap: 1.5rem;
            margin-bottom: 2rem;
            flex-wrap: wrap;
        }

        .feature-item {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            color: #616161;
            font-size: 0.95rem;
        }

        .feature-item i {
            color: #43a047;
            font-size: 1.2rem;
        }

        .actions {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 1rem;
        }

        .btn-refresh {
            background: linear-gradient(135deg, #66bb6a 0%, #43a047 100%);
            border: none;
            padding: 0.85rem 2.4rem;
            border-radius: 999px;
            color: #fff;
            font-weight: 600;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.3s;
            box-shadow: 0 6px 18px rgba(76, 175, 80, 0.45);
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-refresh:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 26px rgba(76, 175, 80, 0.55);
        }

        .btn-outline {
            background: transparent;
            border: 2px solid #a5d6a7;
            padding: 0.8rem 1.8rem;
            border-radius: 999px;
            color: #2e7d32;
            font-weight: 600;
            font-size: 0.95rem;
            cursor: pointer;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 0.4rem;
        }

        .btn-outline:hover {
            background: #e8f5e9;
            border-color: #81c784;
        }

        .footer-note {
            margin-top: 2rem;
            font-size: 0.88rem;
            color: #9e9e9e;
        }

        @@media (max-width: 768px) {
            .maintenance-container {
                padding: 2.5rem 1.5rem;
            }

            h1 {
                font-size: 1.9rem;
            }

            .maintenance-icon {
                width: 110px;
                height: 110px;
                font-size: 2.6rem;
            }
        }
    </style>
</head>
<body>
     <div class="maintenance-container">
        <a href="/" class="logo logo-link" aria-label="بازگشت به صفحه اصلی">
            <span class="logo-icon">
                <i class="bi bi-leaf"></i>
            </span>
            <span>عطاری آنلاین</span>
        </a>

        <div class="maintenance-icon">
            <i class="bi bi-tools"></i>
        </div>

        <h1>سایت در دست تعمیر است</h1>
        <div class="subtitle">در حال به\u200cروزرسانی تجربه بهتر برای شما هستیم 🌿</div>

        <p class="message">
            @message
        </p>

        @if (!string.IsNullOrWhiteSpace(estimatedTime))
        {
            <div class="estimated-time">
                <i class="bi bi-clock-history"></i>
                <span>زمان تقریبی اتمام: @estimatedTime</span>
            </div>
        }

        <div class="features">
            <div class="feature-item">
                <i class="bi bi-shield-check"></i>
                <span>افزایش امنیت و پایداری سیستم</span>
            </div>
            <div class="feature-item">
                <i class="bi bi-speedometer2"></i>
                <span>بهبود سرعت و کارایی سایت</span>
            </div>
            <div class="feature-item">
                <i class="bi bi-stars"></i>
                <span>افزودن امکانات و تجربه کاربری جدید</span>
            </div>
        </div>

        <div class="actions">
            <button type="button" class="btn-refresh" onclick="location.reload()">
                <i class="bi bi-arrow-clockwise"></i>
                تلاش مجدد
            </button>

            <a href="/home/contact" class="btn-outline">
                <i class="bi bi-chat-dots"></i>
                تماس با پشتیبانی
            </a>
        </div>

        <div class="footer-note">
            از صبر و همراهی شما سپاسگزاریم. به زودی با نسخه‌ای بهتر در خدمت شما خواهیم بود.
        </div>
    </div>
</body>
</html>


