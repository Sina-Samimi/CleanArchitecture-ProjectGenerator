{
  "ApplicationName": "TestAttarClone-WebSite",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ 
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Information",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj}{NewLine}{Exception}",
          "shared": true,
          "flushToDiskInterval": "00:00:01"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341",
          "restrictedToMinimumLevel": "Information",
          "apiKey": ""
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithEnvironmentName" ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "server=.;Initial Catalog=TestAttarClone_DB;Integrated Security=true;Encrypt=False;",
    "LogsConnection": "server=.;Initial Catalog=TestAttarClone_Logs_DB;Integrated Security=true;Encrypt=False;",
    "HangfireConnection": "server=.;Initial Catalog=TestAttarClone_Hangfire_DB;Integrated Security=true;Encrypt=False;"
  },
  "Matrices": {
    "TalentJob": "matrices/talent_job.csv",
    "ValueJob": "matrices/value_job.csv",
    "TalentSkill": "matrices/talent_skill.csv",
    "JobSkill": "matrices/job_skill.csv",
    "SkillLevels": "matrices/skill_levels.csv"
  },
  "Scoring": {
    "CliftonMaxLikert": 2,
    "PvqMaxLikert": 6,
    "Alpha": 1.0,
    "Beta": 1.0,
    "Strategy": "MeanOverMax",
    "NormalizePvqOverMax": true,
    "TopJobCount": 3,
    "TopSkillsPerLevel": 5
  },
  "SeedAdminUser": {
    "Id": "a9c99894-9dc7-45a5-9235-7efbd7fac1d7",
    "Email": "admin@arsis.local",
    "FullName": "Arsis Platform Admin",
    "Password": "ChangeMe@123",
    "EmailConfirmed": true,
    "IsActive": true,
    "IsDeleted": false,
    "CreatedOn": "2024-01-01T00:00:00+00:00"
  },
  "AllowedHosts": "*",
  "Settings": {
    "SmsSettings": {
      "Api-Key": "YOUR_KAVENEGAR_API_KEY_HERE"
    }
  },
  "MaintenanceMode": {
    "Enabled": false,
    "Message": "سایت در حال به‌روزرسانی است. لطفاً چند دقیقه دیگر دوباره تلاش کنید.",
    "EstimatedTime": "حدود 10 دقیقه"
  }
}
