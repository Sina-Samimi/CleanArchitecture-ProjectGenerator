@using TestAttarClone.WebSite.Areas.Seller.Models
@model SellerProductVariantAttributesViewModel

@{
    var isEditing = Model.Form.Id.HasValue;
    var pageTitle = isEditing ? "ویرایش ویژگی گزینه" : "افزودن ویژگی گزینه";
}

@section Head {
    <link rel="stylesheet" href="~/css/seller/product-comments.css" asp-append-version="true" />
}

<div class="seller-product-comments">
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h4 mb-1">ویژگی‌های گزینه‌ها: @Model.ProductName</h1>
                <p class="text-muted mb-0">مدیریت ویژگی‌های گزینه‌های محصول (مثلاً: سایز، رنگ)</p>
            </div>
            <div>
                <a class="btn btn-outline-primary me-2" asp-area="Seller" asp-controller="ProductVariants" asp-action="Index" asp-route-productId="@Model.ProductId">
                    <i class="bi bi-list-ul"></i>
                    مدیریت گزینه‌ها
                </a>
                <a class="btn btn-outline-secondary" asp-area="Seller" asp-controller="Products" asp-action="Index">
                    <i class="bi bi-arrow-right-short"></i>
                    بازگشت به لیست محصولات
                </a>
            </div>
        </div>
    </div>

    @await Html.PartialAsync("_StatusMessage")

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <h2 class="h5 mb-3">@pageTitle</h2>
            <form asp-area="Seller"
                  asp-controller="ProductVariantAttributes"
                  asp-action="@(isEditing ? "Update" : "Create")"
                  asp-route-productId="@Model.ProductId"
                  method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="Form.Id" />
                <div class="row g-3">
                    <div class="col-12 col-md-4">
                        <label class="form-label" asp-for="Form.Name"></label>
                        <input class="form-control" asp-for="Form.Name" placeholder="مثال: سایز" />
                        <span class="text-danger" asp-validation-for="Form.Name"></span>
                        <small class="form-text text-muted">نام ویژگی برای گزینه‌ها (مثلاً: سایز، رنگ، وزن)</small>
                    </div>
                    <div class="col-12 col-md-4">
                        <label class="form-label" asp-for="Form.OptionsText"></label>
                        <input class="form-control" asp-for="Form.OptionsText" placeholder="مثال: S, M, L, XL" />
                        <span class="text-danger" asp-validation-for="Form.OptionsText"></span>
                        <small class="form-text text-muted">گزینه‌ها را با کاما جدا کنید (مثلاً: S, M, L)</small>
                    </div>
                    <div class="col-12 col-md-2">
                        <label class="form-label" asp-for="Form.DisplayOrder"></label>
                        <input class="form-control" asp-for="Form.DisplayOrder" type="number" min="0" />
                        <span class="text-danger" asp-validation-for="Form.DisplayOrder"></span>
                    </div>
                    <div class="col-12 col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi @(isEditing ? "bi-arrow-repeat" : "bi-plus-lg")"></i>
                            @(isEditing ? "ذخیره" : "افزودن")
                        </button>
                    </div>
                </div>
                @if (isEditing)
                {
                    <div class="mt-3">
                        <a class="btn btn-link" asp-area="Seller" asp-controller="ProductVariantAttributes" asp-action="Index" asp-route-productId="@Model.ProductId">
                            انصراف از ویرایش
                        </a>
                    </div>
                }
            </form>
        </div>
    </div>

    @if (Model.VariantAttributes.Count == 0)
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <div class="display-5 text-muted mb-3"><i class="bi bi-tags"></i></div>
                <h2 class="h5">هنوز ویژگی گزینه‌ای ثبت نشده است</h2>
                <p class="text-muted mb-0">برای افزودن ویژگی گزینه جدید (مثلاً: سایز یا رنگ)، فرم بالا را تکمیل کنید.</p>
                <p class="text-muted small mt-2">پس از ایجاد ویژگی، می‌توانید گزینه‌های محصول را در بخش "مدیریت گزینه‌ها" ایجاد کنید.</p>
            </div>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h2 class="h5 mb-0">لیست ویژگی‌های گزینه‌ها (@Model.VariantAttributes.Count ویژگی)</h2>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>نام ویژگی</th>
                                <th>گزینه‌ها</th>
                                <th>ترتیب نمایش</th>
                                <th>عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var attr in Model.VariantAttributes)
                            {
                                var isHighlighted = Model.HighlightedVariantAttributeId == attr.Id;
                                <tr class="@(isHighlighted ? "table-warning" : "")" data-variant-attribute-id="@attr.Id">
                                    <td>
                                        <strong>@attr.Name</strong>
                                    </td>
                                    <td>
                                        @if (attr.Options.Any())
                                        {
                                            <div class="d-flex flex-wrap gap-1">
                                                @foreach (var option in attr.Options)
                                                {
                                                    <span class="badge bg-primary">@option</span>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">بدون گزینه</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@attr.DisplayOrder</span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a class="btn btn-outline-primary"
                                               asp-area="Seller"
                                               asp-controller="ProductVariantAttributes"
                                               asp-action="Index"
                                               asp-route-productId="@Model.ProductId"
                                               asp-route-variantAttributeId="@attr.Id">
                                                <i class="bi bi-pencil"></i>
                                                ویرایش
                                            </a>
                                            <form asp-area="Seller"
                                                  asp-controller="ProductVariantAttributes"
                                                  asp-action="Delete"
                                                  asp-route-productId="@Model.ProductId"
                                                  asp-route-variantAttributeId="@attr.Id"
                                                  method="post"
                                                  class="d-inline"
                                                  onsubmit="return confirm('آیا از حذف این ویژگی گزینه اطمینان دارید؟ با حذف این ویژگی، تمام گزینه‌های محصول که از این ویژگی استفاده می‌کنند نیز حذف خواهند شد.');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-danger">
                                                    <i class="bi bi-trash"></i>
                                                    حذف
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
