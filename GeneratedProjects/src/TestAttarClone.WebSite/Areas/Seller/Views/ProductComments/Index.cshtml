@using TestAttarClone.WebSite.Areas.Seller.Models
@using TestAttarClone.SharedKernel.Extensions
@model SellerProductCommentsViewModel

@{
    ViewData["Title"] = "نظرات محصول";
    ViewData["Subtitle"] = "مدیریت و پاسخ به نظرات مشتریان";
    ViewData["Sidebar:ActiveTab"] = "products";
}

@section Head {
    <link rel="stylesheet" href="~/css/seller/product-comments.css" asp-append-version="true" />
}

<div class="seller-product-comments">
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h4 mb-1">نظرات محصول: @Model.ProductName</h1>
                <p class="text-muted mb-0">مدیریت و پاسخ به نظرات مشتریان</p>
            </div>
            <a class="btn btn-outline-secondary" asp-area="Seller" asp-controller="Products" asp-action="Index">
                <i class="bi bi-arrow-right-short"></i>
                بازگشت به لیست محصولات
            </a>
        </div>
    </div>

    @await Html.PartialAsync("_StatusMessage")

    @if (Model.Comments.Count == 0)
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <div class="display-5 text-muted mb-3"><i class="bi bi-chat-dots"></i></div>
                <h2 class="h5">هنوز نظری ثبت نشده است</h2>
                <p class="text-muted mb-0">هنگامی که مشتریان برای این محصول نظر ثبت کنند، در اینجا نمایش داده می‌شود.</p>
            </div>
        </div>
    }
    else
    {
        <div class="seller-comments-list">
            @foreach (var comment in Model.Comments)
            {
                <div class="card border-0 shadow-sm mb-3 seller-comment-card" id="comment-@comment.Id">
                    <div class="card-body">
                        <div class="seller-comment-header">
                            <div class="seller-comment-author">
                                <div class="seller-comment-avatar">
                                    <i class="bi bi-person-circle"></i>
                                </div>
                                <div>
                                    <div class="seller-comment-author-name">@comment.AuthorName</div>
                                    <div class="seller-comment-date">
                                        <i class="bi bi-calendar3"></i>
                                        @comment.CreatedAt.ToPersianDateTimeString()
                                    </div>
                                </div>
                            </div>
                            <div class="seller-comment-meta">
                                @if (comment.Rating > 0)
                                {
                                    <div class="seller-comment-rating">
                                        <i class="bi bi-star-fill"></i>
                                        <span>@comment.Rating.ToString("0.0")</span>
                                    </div>
                                }
                                @if (comment.IsApproved)
                                {
                                    <span class="badge bg-success-subtle text-success-emphasis">
                                        <i class="bi bi-check-circle"></i>
                                        تایید شده
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-warning-subtle text-warning-emphasis">
                                        <i class="bi bi-hourglass-split"></i>
                                        در انتظار تایید
                                    </span>
                                }
                            </div>
                        </div>
                        <div class="seller-comment-content">
                            @comment.Content
                        </div>
                        <div class="seller-comment-actions">
                            <button type="button"
                                    class="btn btn-sm btn-outline-primary"
                                    data-bs-toggle="collapse"
                                    data-bs-target="#reply-form-@comment.Id"
                                    aria-expanded="false"
                                    aria-controls="reply-form-@comment.Id">
                                <i class="bi bi-reply"></i>
                                پاسخ به این نظر
                            </button>
                        </div>
                        <div class="collapse mt-3" id="reply-form-@comment.Id">
                            <div class="card card-body bg-light">
                                <form method="post"
                                      asp-action="Reply"
                                      asp-route-productId="@Model.ProductId"
                                      asp-route-parentCommentId="@comment.Id">
                                    @Html.AntiForgeryToken()
                                    <div class="mb-3">
                                        <label class="form-label" for="AuthorName-@comment.Id">نام پاسخ‌دهنده</label>
                                        <input type="text"
                                               class="form-control"
                                               id="AuthorName-@comment.Id"
                                               name="AuthorName"
                                               value="@Model.DefaultAuthorName"
                                               placeholder="نام فروشگاه" />
                                        <div class="form-text">در صورت خالی بودن، نام فروشگاه به صورت پیش‌فرض استفاده می‌شود.</div>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label" for="Content-@comment.Id">متن پاسخ <span class="text-danger">*</span></label>
                                        <textarea class="form-control"
                                                  id="Content-@comment.Id"
                                                  name="Content"
                                                  rows="4"
                                                  required
                                                  placeholder="پاسخ خود را وارد کنید..."></textarea>
                                    </div>
                                    <div class="d-flex gap-2">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="bi bi-send"></i>
                                            ارسال پاسخ
                                        </button>
                                        <button type="button"
                                                class="btn btn-outline-secondary"
                                                data-bs-toggle="collapse"
                                                data-bs-target="#reply-form-@comment.Id">
                                            انصراف
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                @if (comment.Replies.Count > 0)
                {
                    <div class="seller-comment-replies ms-4">
                        @foreach (var reply in comment.Replies)
                        {
                            <div class="card border-0 shadow-sm mb-2 seller-comment-reply" id="reply-@reply.Id">
                                <div class="card-body">
                                    <div class="seller-comment-header">
                                        <div class="seller-comment-author">
                                            <div class="seller-comment-avatar seller-comment-avatar--reply">
                                                <i class="bi bi-shop"></i>
                                            </div>
                                            <div>
                                                <div class="seller-comment-author-name">@reply.AuthorName</div>
                                                <div class="seller-comment-date">
                                                    <i class="bi bi-calendar3"></i>
                                                    @reply.CreatedAt.ToPersianDateTimeString()
                                                </div>
                                            </div>
                                        </div>
                                        @if (reply.IsApproved)
                                        {
                                            <span class="badge bg-success-subtle text-success-emphasis">
                                                <i class="bi bi-check-circle"></i>
                                                تایید شده
                                            </span>
                                        }
                                    </div>
                                    <div class="seller-comment-content">
                                        @reply.Content
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            }
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

