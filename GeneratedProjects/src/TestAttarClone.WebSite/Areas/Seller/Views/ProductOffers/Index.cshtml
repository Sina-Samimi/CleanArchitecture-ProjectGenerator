@using System.Globalization
@using TestAttarClone.SharedKernel.Extensions
@using TestAttarClone.WebSite.Areas.Seller.Models
@model SellerProductOfferListViewModel
@{
    ViewData["Sidebar:ActiveTab"] = "product-offers";
    ViewData["Title"] = "پیشنهادات محصولات";
    ViewData["Subtitle"] = "مدیریت پیشنهادات شما برای محصولات موجود";
    var culture = CultureInfo.GetCultureInfo("fa-IR");
    string FormatDateTime(DateTimeOffset value) => value.ToPersianDateTimeString();
    string FormatPrice(decimal price) => price.ToString("N0");
}

@section Head {
    <link rel="stylesheet" href="~/css/seller/product-index.css" asp-append-version="true" />
}

<div class="row g-4" data-seller-product-offers>
    <div class="col-12">
        <div class="d-flex flex-column flex-lg-row gap-3 align-items-lg-center justify-content-between">
            <div>
                <h1 class="h3 mb-1">پیشنهادات محصولات</h1>
                <p class="text-muted mb-0">در این بخش پیشنهادات شما برای محصولات موجود را مشاهده و مدیریت می‌کنید.</p>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="col-12">
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="col-12">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }

    @if (!Model.Offers.Any())
    {
        <div class="col-12">
            <div class="alert alert-info border-0 text-center py-4" role="alert">
                <i class="bi bi-inbox fs-3 mb-2 d-block"></i>
                <h2 class="h5 mb-1">هنوز پیشنهادی ثبت نکرده‌اید.</h2>
                <p class="mb-0">شما می‌توانید برای محصولات موجود در سایت پیشنهاد قیمت و موجودی ثبت کنید.</p>
            </div>
        </div>
    }
    else
    {
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table align-middle mb-0">
                            <thead>
                                <tr>
                                    <th scope="col">محصول</th>
                                    <th scope="col">قیمت</th>
                                    <th scope="col">موجودی</th>
                                    <th scope="col">وضعیت</th>
                                    <th scope="col">تاریخ ثبت</th>
                                    <th scope="col" class="text-end">عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var offer in Model.Offers)
                                {
                                    <tr>
                                        <td>
                                            <div>
                                                <div class="fw-semibold">
                                                    @if (!string.IsNullOrWhiteSpace(offer.ProductSlug))
                                                    {
                                                        <a asp-area="" asp-controller="Product" asp-action="Details" asp-route-slug="@offer.ProductSlug" target="_blank" class="text-decoration-none">
                                                            @offer.ProductName
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        @offer.ProductName
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            @if (offer.Price.HasValue)
                                            {
                                                <span>@FormatPrice(offer.Price.Value) تومان</span>
                                                @if (offer.CompareAtPrice.HasValue && offer.CompareAtPrice.Value > offer.Price.Value)
                                                {
                                                    <br />
                                                    <small class="text-decoration-line-through text-muted">@FormatPrice(offer.CompareAtPrice.Value) تومان</small>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (offer.TrackInventory)
                                            {
                                                <span class="@(offer.StockQuantity > 0 ? "text-success" : "text-danger")">
                                                    @offer.StockQuantity عدد
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">نامحدود</span>
                                            }
                                        </td>
                                        <td>
                                            @if (offer.IsPublished)
                                            {
                                                <span class="badge bg-success-subtle text-success-emphasis">
                                                    <i class="bi bi-check-circle"></i> منتشر شده
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning-subtle text-warning-emphasis">
                                                    <i class="bi bi-hourglass-split"></i> منتشر نشده
                                                </span>
                                            }
                                            <br />
                                            @if (offer.IsActive)
                                            {
                                                <span class="badge bg-primary-subtle text-primary-emphasis mt-1">فعال</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary-subtle text-secondary-emphasis mt-1">غیرفعال</span>
                                            }
                                        </td>
                                        <td>
                                            <div>
                                                <i class="bi bi-calendar-event me-1"></i>
                                                <span>@FormatDateTime(offer.CreatedAt)</span>
                                            </div>
                                        </td>
                                        <td class="text-end">
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@offer.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i>
                                                    جزئیات
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@offer.Id" class="btn btn-sm btn-outline-secondary">
                                                    <i class="bi bi-pencil"></i>
                                                    ویرایش
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    @if (Model.TotalCount > Model.PageSize)
                    {
                        <nav aria-label="صفحه‌بندی پیشنهادات" class="mt-4">
                            <ul class="pagination justify-content-center">
                                @{
                                    var totalPages = (int)Math.Ceiling((double)Model.TotalCount / Model.PageSize);
                                    var currentPage = Model.PageNumber;
                                }
                                @if (currentPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" asp-action="Index" asp-route-page="@(currentPage - 1)">قبلی</a>
                                    </li>
                                }
                                @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                                {
                                    <li class="page-item @(i == currentPage ? "active" : "")">
                                        <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                                    </li>
                                }
                                @if (currentPage < totalPages)
                                {
                                    <li class="page-item">
                                        <a class="page-link" asp-action="Index" asp-route-page="@(currentPage + 1)">بعدی</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    }
                </div>
            </div>
        </div>
    }
</div>

