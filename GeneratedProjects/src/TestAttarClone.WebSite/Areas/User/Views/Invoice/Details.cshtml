@using System.Text.Json
@using System.Globalization
@using TestAttarClone.Domain.Enums
@using TestAttarClone.Application.DTOs.Orders
@model TestAttarClone.Application.DTOs.Billing.InvoiceDetailDto
@{
    ViewData["Title"] = $"جزئیات فاکتور {Model.InvoiceNumber}";
    var currency = string.IsNullOrWhiteSpace(Model.Currency) ? "IRT" : Model.Currency;
    var outstanding = Model.OutstandingAmount;
    var paidAmount = Model.PaidAmount;
    var issueDate = Model.IssueDate.ToPersianDateString();
    var issueTime = Model.IssueDate.ToString("HH:mm");
    var dueDate = Model.DueDate?.ToPersianDateString();
    var statusClass = outstanding switch
    {
        var amount when amount <= 0 => "bg-success-subtle text-success",
        _ => "bg-warning-subtle text-warning"
    };

    var trackings = ViewData["ShipmentTrackings"] as IReadOnlyCollection<ShipmentTrackingDto> ?? Array.Empty<ShipmentTrackingDto>();
    var physicalItems = Model.Items.Where(item => item.ItemType == InvoiceItemType.Product && item.ReferenceId.HasValue).ToList();

    string ShipmentStatusText(ShipmentStatus status) => status switch
    {
        ShipmentStatus.Preparing => "در حال آماده سازی",
        ShipmentStatus.DeliveredToPost => "تحویل به پست",
        ShipmentStatus.Shipped => "ارسال شده",
        ShipmentStatus.Delivered => "دریافت شده توسط مشتری",
        _ => "نامشخص"
    };

    string ShipmentStatusBadge(ShipmentStatus status) => status switch
    {
        ShipmentStatus.Preparing => "badge bg-info-subtle text-info-emphasis",
        ShipmentStatus.DeliveredToPost => "badge bg-warning-subtle text-warning-emphasis",
        ShipmentStatus.Shipped => "badge bg-primary-subtle text-primary-emphasis",
        ShipmentStatus.Delivered => "badge bg-success-subtle text-success-emphasis",
        _ => "badge bg-secondary-subtle text-secondary-emphasis"
    };
}

<div class="invoice-detail">
    <div class="d-flex flex-column flex-lg-row justify-content-between align-items-start gap-3 mb-4">
        <div>
            <h1 class="h3 mb-2">فاکتور @Model.InvoiceNumber</h1>
            <p class="text-muted mb-1">@Model.Title</p>
            <span class="badge bg-primary-subtle text-primary">@Model.Status.GetDisplayName()</span>
        </div>
        <div class="d-flex align-items-center gap-2 w-100 w-lg-auto">
            <div class="text-end flex-grow-1">
                <div class="text-muted small">مبلغ قابل پرداخت</div>
                <div class="fs-4 fw-bold @(outstanding > 0 ? "text-danger" : "text-success")">@outstanding.ToString("N0") @currency</div>
                <div class="text-muted small">مبلغ پرداخت‌شده: @paidAmount.ToString("N0") @currency</div>
            </div>
            
            @if (outstanding > 0)
            {
                <a class="btn btn-primary" asp-controller="Wallet" asp-action="PayInvoice" asp-route-id="@Model.Id">
                    <i class="bi bi-credit-card ms-2"></i>
                    پرداخت فاکتور
                </a>
            }
            @* Cancel button: Temporarily disabled - commented out for future implementation
            @if (Model.Status != InvoiceStatus.Cancelled && !trackings.Any(t => t.Status == ShipmentStatus.Delivered))
            {
                <form method="post" asp-action="Cancel" class="d-inline ms-2">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-outline-danger" onclick="return confirm('آیا از لغو سفارش اطمینان دارید؟')">
                        <i class="bi bi-x-circle ms-2"></i>
                        لغو سفارش
                    </button>
                </form>
            }
            *@

            <a class="btn btn-outline-secondary" asp-action="Index">
                <i class="bi bi-arrow-right ms-2"></i>
                بازگشت به فاکتورها
            </a>
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.Description) || Model.ExternalReference is not null)
    {
        <div class="alert alert-info bg-opacity-25 border-0">
            <div class="fw-semibold mb-1">توضیحات فاکتور</div>
            @if (!string.IsNullOrWhiteSpace(Model.Description))
            {
                <p class="mb-1">@Model.Description</p>
            }
            @if (!string.IsNullOrWhiteSpace(Model.ExternalReference))
            {
                <p class="mb-0 text-muted small">شناسه پیگیری: @Model.ExternalReference</p>
            }
        </div>
    }

    <div class="row g-4 mb-4">
        <div class="col-12 col-xl-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h2 class="h5 mb-3">جزئیات زمانی</h2>
                    <dl class="row mb-0 small text-muted">
                        <dt class="col-sm-4">تاریخ صدور</dt>
                        <dd class="col-sm-8 text-dark fw-semibold">@issueDate ساعت @issueTime</dd>
                        <dt class="col-sm-4">تاریخ سررسید</dt>
                        <dd class="col-sm-8 text-dark fw-semibold">@(dueDate ?? "-")</dd>
                        <dt class="col-sm-4">وضعیت پرداخت</dt>
                        <dd class="col-sm-8">
                            <span class="badge @statusClass">@Model.Status.GetDisplayName()</span>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-12 col-xl-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h2 class="h5 mb-3">خلاصه مالی</h2>
                    <ul class="list-unstyled mb-0 small text-muted">
                        <li class="d-flex justify-content-between mb-2">
                            <span>جمع کل آیتم‌ها</span>
                            <strong class="text-dark">@Model.Subtotal.ToString("N0") @currency</strong>
                        </li>
                        <li class="d-flex justify-content-between mb-2">
                            <span>تخفیف‌ها</span>
                            <strong class="text-dark">@Model.DiscountTotal.ToString("N0") @currency</strong>
                        </li>
                        <li class="d-flex justify-content-between mb-2">
                            <span>مالیات</span>
                            <strong class="text-dark">@Model.TaxAmount.ToString("N0") @currency</strong>
                        </li>
                        <li class="d-flex justify-content-between mb-2">
                            <span>تعدیلات</span>
                            <strong class="text-dark">@Model.AdjustmentAmount.ToString("N0") @currency</strong>
                        </li>
                        <li class="d-flex justify-content-between mb-2 border-top pt-2">
                            <span>مبلغ نهایی فاکتور</span>
                            <strong class="text-dark">@Model.GrandTotal.ToString("N0") @currency</strong>
                        </li>
                        <li class="d-flex justify-content-between mb-2">
                            <span>پرداخت‌شده</span>
                            <strong class="text-dark">@Model.PaidAmount.ToString("N0") @currency</strong>
                        </li>
                        <li class="d-flex justify-content-between">
                            <span>باقیمانده</span>
                            <strong class="@(outstanding > 0 ? "text-danger" : "text-success")">@outstanding.ToString("N0") @currency</strong>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="h5 mb-0">آیتم‌های فاکتور</h2>
            </div>
            @if (Model.Items.Count == 0)
            {
                <div class="alert alert-secondary mb-0" role="alert">
                    آیتمی برای این فاکتور ثبت نشده است.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead>
                            <tr>
                                <th>عنوان</th>
                                <th>نوع</th>
                                <th>تعداد</th>
                                <th>قیمت واحد</th>
                                <th>تخفیف</th>
                                <th>مبلغ کل</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>
                                        <div class="fw-semibold">@item.Name</div>
                                        @if (!string.IsNullOrWhiteSpace(item.Description))
                                        {
                                            <div class="text-muted small">@item.Description</div>
                                        }
                                        @if (item.Attributes.Count > 0)
                                        {
                                            <ul class="list-inline small text-muted mb-0">
                                                @foreach (var attr in item.Attributes)
                                                {
                                                    <li class="list-inline-item">@attr.Key: <strong>@attr.Value</strong></li>
                                                }
                                            </ul>
                                        }
                                    </td>
                                    <td>@item.ItemType.GetDisplayName()</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.UnitPrice.ToString("N0") @currency</td>
                                    <td>@(item.DiscountAmount?.ToString("N0") ?? "0") @currency</td>
                                    <td class="fw-semibold">@item.Total.ToString("N0") @currency</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    @if (physicalItems.Any() && trackings.Any())
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h2 class="h5 mb-0">پیگیری ارسال محصولات</h2>
                </div>
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead>
                            <tr>
                                <th>محصول</th>
                                <th>وضعیت</th>
                                <th>شماره پیگیری</th>
                                <th>تاریخ</th>
                                <th>توضیحات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in physicalItems)
                            {
                                var tracking = trackings.FirstOrDefault(t => t.InvoiceItemId == item.Id);
                                if (tracking is not null)
                                {
                                    <tr>
                                        <td>
                                            <div class="fw-semibold">@item.Name</div>
                                            @if (item.Quantity > 1)
                                            {
                                                <small class="text-muted">تعداد: @item.Quantity</small>
                                            }
                                        </td>
                                        <td>
                                            <span class="@ShipmentStatusBadge(tracking.Status)">@ShipmentStatusText(tracking.Status)</span>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrWhiteSpace(tracking.TrackingNumber))
                                            {
                                                <code>@tracking.TrackingNumber</code>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>@tracking.StatusDate.ToPersianDateTimeString()</td>
                                        <td>
                                            @if (!string.IsNullOrWhiteSpace(tracking.Notes))
                                            {
                                                <small class="text-muted">@tracking.Notes</small>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="h5 mb-0">تراکنش‌های مرتبط</h2>
            </div>
            @if (Model.Transactions.Count == 0)
            {
                <div class="alert alert-secondary mb-0" role="alert">
                    تراکنشی برای این فاکتور ثبت نشده است.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead>
                            <tr>
                                <th>مبلغ</th>
                                <th>روش پرداخت</th>
                                <th>وضعیت</th>
                                <th>شناسه مرجع</th>
                                <th>توضیحات</th>
                                <th>تاریخ</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var transaction in Model.Transactions)
                            {
                                <tr>
                                    <td class="fw-semibold">@transaction.Amount.ToString("N0") @currency</td>
                                    <td>@transaction.Method.GetDisplayName()</td>
                                    <td><span class="badge bg-light text-dark">@transaction.Status.GetDisplayName()</span></td>
                                    <td>
                                        <div class="fw-semibold">@transaction.Reference</div>
                                        @if (!string.IsNullOrWhiteSpace(transaction.GatewayName))
                                        {
                                            <div class="text-muted small">@transaction.GatewayName</div>
                                        }
                                    </td>
                                    <td class="text-muted small">@transaction.Description</td>
                                    <td>@transaction.OccurredAt.ToPersianDateTimeString()</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
