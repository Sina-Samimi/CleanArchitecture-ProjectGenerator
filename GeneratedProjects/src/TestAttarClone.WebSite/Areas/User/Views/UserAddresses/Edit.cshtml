@model TestAttarClone.WebSite.Areas.User.Models.UserAddressFormViewModel
@{
    ViewData["Title"] ??= "ویرایش آدرس";
    Layout = "_UserLayout";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-1">ویرایش آدرس</h1>
                    <p class="text-muted mb-0">اطلاعات آدرس را ویرایش کنید</p>
                </div>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-right ms-1"></i>
                    بازگشت
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-lg-8 col-xl-6">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input asp-for="Id" type="hidden" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="Title" class="form-label"></label>
                                <input asp-for="Title" class="form-control" placeholder="مثلاً: منزل، محل کار" />
                                <span asp-validation-for="Title" class="text-danger small"></span>
                            </div>

                            <div class="col-12 col-md-6">
                                <label asp-for="RecipientName" class="form-label"></label>
                                <input asp-for="RecipientName" class="form-control" />
                                <span asp-validation-for="RecipientName" class="text-danger small"></span>
                            </div>

                            <div class="col-12 col-md-6">
                                <label asp-for="RecipientPhone" class="form-label"></label>
                                <input asp-for="RecipientPhone" class="form-control" placeholder="09123456789" />
                                <span asp-validation-for="RecipientPhone" class="text-danger small"></span>
                            </div>

                            <div class="col-12 col-md-6">
                                <label asp-for="Province" class="form-label"></label>
                                <input asp-for="Province" class="form-control" />
                                <span asp-validation-for="Province" class="text-danger small"></span>
                            </div>

                            <div class="col-12 col-md-6">
                                <label asp-for="City" class="form-label"></label>
                                <input asp-for="City" class="form-control" />
                                <span asp-validation-for="City" class="text-danger small"></span>
                            </div>

                            <div class="col-12 col-md-6">
                                <label asp-for="PostalCode" class="form-label"></label>
                                <input asp-for="PostalCode" class="form-control" placeholder="1234567890" />
                                <span asp-validation-for="PostalCode" class="text-danger small"></span>
                            </div>

                            <div class="col-12 col-md-3">
                                <label asp-for="Plaque" class="form-label"></label>
                                <input asp-for="Plaque" class="form-control" placeholder="اختیاری" />
                                <span asp-validation-for="Plaque" class="text-danger small"></span>
                            </div>

                            <div class="col-12 col-md-3">
                                <label asp-for="Unit" class="form-label"></label>
                                <input asp-for="Unit" class="form-control" placeholder="اختیاری" />
                                <span asp-validation-for="Unit" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="AddressLine" class="form-label"></label>
                                <textarea asp-for="AddressLine" class="form-control" rows="3" placeholder="آدرس کامل را وارد کنید"></textarea>
                                <span asp-validation-for="AddressLine" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <div class="form-check">
                                    <input asp-for="IsDefault" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsDefault" class="form-check-label"></label>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="d-flex gap-2">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-check-circle ms-1"></i>
                                        ذخیره تغییرات
                                    </button>
                                    <a asp-action="Index" class="btn btn-outline-secondary">انصراف</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
