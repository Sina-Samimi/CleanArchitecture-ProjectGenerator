@using TestAttarClone.WebSite.Areas.Admin.Models
@using TestAttarClone.Application.DTOs.Seo
@model IReadOnlyCollection<SeoOgImageDto>
@{
    var seoMetadataId = ViewData["SeoMetadataId"] as Guid? ?? Guid.Empty;
}

@section Breadcrumb {
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">داشبورد</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Seo" asp-action="Index">مدیریت SEO</a></li>
    <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
}

@await Html.PartialAsync("_StatusMessage")

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">تصاویر Open Graph</h5>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ogImageModal">
            <i class="bi bi-plus-circle"></i> افزودن تصویر OG
        </button>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>تصویر</th>
                            <th>URL</th>
                            <th>ابعاد</th>
                            <th>نوع</th>
                            <th>ترتیب</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var image in Model.OrderBy(img => img.DisplayOrder))
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(image.ImageUrl))
                                    {
                                        <img src="@image.ImageUrl" alt="@image.Alt" style="max-width: 100px; max-height: 60px; object-fit: cover;" />
                                    }
                                </td>
                                <td>@(image.ImageUrl?.Length > 50 ? image.ImageUrl.Substring(0, 50) + "..." : image.ImageUrl)</td>
                                <td>
                                    @if (image.Width.HasValue && image.Height.HasValue)
                                    {
                                        <text>@image.Width.Value × @image.Height.Value</text>
                                    }
                                    else
                                    {
                                        <text>-</text>
                                    }
                                </td>
                                <td>@(image.ImageType ?? "-")</td>
                                <td>@image.DisplayOrder</td>
                                <td>
                                    <form asp-action="DeleteOgImage" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@image.Id" />
                                        <input type="hidden" name="seoMetadataId" value="@seoMetadataId" />
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('آیا از حذف این تصویر اطمینان دارید؟')">
                                            <i class="bi bi-trash"></i> حذف
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> هنوز تصویر OG اضافه نشده است.
            </div>
        }
    </div>
</div>

<!-- Modal for Add OG Image -->
<div class="modal fade" id="ogImageModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="CreateOgImage" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title">افزودن تصویر Open Graph</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="SeoMetadataId" value="@seoMetadataId" />
                    <div class="mb-3">
                        <label class="form-label">URL تصویر</label>
                        <input type="url" name="ImageUrl" class="form-control" required placeholder="https://example.com/image.jpg" />
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">عرض (Width)</label>
                                <input type="number" name="Width" class="form-control" min="1" placeholder="1200" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">ارتفاع (Height)</label>
                                <input type="number" name="Height" class="form-control" min="1" placeholder="630" />
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">نوع تصویر</label>
                        <select name="ImageType" class="form-select">
                            <option value="">-- انتخاب کنید --</option>
                            <option value="png">PNG</option>
                            <option value="jpg">JPG</option>
                            <option value="jpeg">JPEG</option>
                            <option value="webp">WebP</option>
                            <option value="gif">GIF</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Alt Text</label>
                        <input type="text" name="Alt" class="form-control" placeholder="توضیحات تصویر" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">ترتیب نمایش</label>
                        <input type="number" name="DisplayOrder" class="form-control" value="0" min="0" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">انصراف</button>
                    <button type="submit" class="btn btn-primary">ذخیره</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        @if (TempData["Success"] != null || TempData["Error"] != null)
        {
            <text>
            setTimeout(function() {
                window.location.reload();
            }, 2000);
            </text>
        }
    </script>
}

