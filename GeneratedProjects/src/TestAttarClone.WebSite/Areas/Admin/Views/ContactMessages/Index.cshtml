@using System.Globalization
@using TestAttarClone.SharedKernel.Extensions
@using TestAttarClone.WebSite.Areas.Admin.Models
@model ContactMessagesListViewModel
@{
    ViewData["Title"] = "پیام‌های تماس";
    ViewData["Subtitle"] = "مدیریت و پاسخگویی به پیام‌های تماس با ما";
    var culture = CultureInfo.GetCultureInfo("fa-IR");
    string FormatDateTime(DateTimeOffset value) => value.ToPersianDateTimeString();
}

@section Head {
    <link rel="stylesheet" href="~/css/admin/catalog.css" asp-append-version="true" />
}

@section Breadcrumb {
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">داشبورد</a></li>
    <li class="breadcrumb-item active" aria-current="page">پیام‌های تماس</li>
}

@await Html.PartialAsync("_StatusMessage")

<div class="contact-messages-page">
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h4 mb-1">پیام‌های تماس با ما</h1>
                    <p class="text-muted mb-0">مدیریت و پاسخگویی به پیام‌های دریافتی از فرم تماس</p>
                </div>
                <div>
                    <a asp-action="Index" asp-route-unreadOnly="@(!Model.UnreadOnly)" class="btn btn-outline-primary">
                        @if (Model.UnreadOnly)
                        {
                            <i class="bi bi-envelope-open"></i>
                            <span>نمایش همه</span>
                        }
                        else
                        {
                            <i class="bi bi-envelope"></i>
                            <span>فقط خوانده نشده</span>
                        }
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            @if (!Model.Messages.Any())
            {
                <div class="alert alert-info-subtle border-0 text-center py-4 mb-0" role="alert">
                    <i class="bi bi-inbox fs-3 mb-2 d-block"></i>
                    <h2 class="h5 mb-1">هنوز پیامی ثبت نشده است.</h2>
                    <p class="mb-0">به محض ثبت پیام جدید، در این بخش نمایش داده خواهد شد.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table align-middle mb-0">
                        <thead>
                            <tr>
                                <th scope="col">نام و نام خانوادگی</th>
                                <th scope="col">تماس</th>
                                <th scope="col">موضوع</th>
                                <th scope="col">وضعیت</th>
                                <th scope="col">تاریخ ثبت</th>
                                <th scope="col" class="text-end">عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var message in Model.Messages)
                            {
                                <tr class="@(!message.IsRead ? "table-warning" : "")">
                                    <td>
                                        <div class="fw-semibold">@message.FullName</div>
                                        @if (!string.IsNullOrWhiteSpace(message.UserId))
                                        {
                                            <small class="text-muted">کاربر ثبت‌نام شده</small>
                                        }
                                    </td>
                                    <td>
                                        <div>
                                            <i class="bi bi-telephone me-1"></i>
                                            <span>@message.Phone</span>
                                        </div>
                                        <div class="mt-1">
                                            <i class="bi bi-envelope me-1"></i>
                                            <a href="mailto:@message.Email">@message.Email</a>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="fw-semibold">@message.Subject</div>
                                        <small class="text-muted">@(message.Message.Length > 50 ? message.Message.Substring(0, 50) + "..." : message.Message)</small>
                                    </td>
                                    <td>
                                        @if (message.IsRead)
                                        {
                                            <span class="badge bg-success-subtle text-success-emphasis">
                                                <i class="bi bi-check-circle"></i> خوانده شده
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning-subtle text-warning-emphasis">
                                                <i class="bi bi-envelope"></i> خوانده نشده
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div>
                                            <i class="bi bi-calendar-event me-1"></i>
                                            <span>@FormatDateTime(message.CreateDate)</span>
                                        </div>
                                        @if (message.ReadAt.HasValue)
                                        {
                                            <small class="text-muted">
                                                خوانده شده: @FormatDateTime(message.ReadAt.Value)
                                            </small>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#messageModal-@message.Id">
                                                <i class="bi bi-eye"></i>
                                                مشاهده
                                            </button>
                                            @if (!message.IsRead)
                                            {
                                                <form method="post" asp-action="MarkAsRead" asp-route-id="@message.Id" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-outline-success">
                                                        <i class="bi bi-check"></i>
                                                        خوانده شد
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>

                                <!-- Modal -->
                                <div class="modal fade" id="messageModal-@message.Id" tabindex="-1" aria-labelledby="messageModalLabel-@message.Id" aria-hidden="true">
                                    <div class="modal-dialog modal-lg">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="messageModalLabel-@message.Id">جزئیات پیام</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="row mb-3">
                                                    <div class="col-md-6">
                                                        <strong>نام و نام خانوادگی:</strong>
                                                        <div>@message.FullName</div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <strong>تاریخ ثبت:</strong>
                                                        <div>@FormatDateTime(message.CreateDate)</div>
                                                    </div>
                                                </div>
                                                <div class="row mb-3">
                                                    <div class="col-md-6">
                                                        <strong>ایمیل:</strong>
                                                        <div><a href="mailto:@message.Email">@message.Email</a></div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <strong>شماره تماس:</strong>
                                                        <div><a href="tel:@message.Phone">@message.Phone</a></div>
                                                    </div>
                                                </div>
                                                <div class="mb-3">
                                                    <strong>موضوع:</strong>
                                                    <div>@message.Subject</div>
                                                </div>
                                                <div class="mb-3">
                                                    <strong>پیام:</strong>
                                                    <div class="border p-3 rounded bg-light">@Html.Raw(message.Message.Replace("\n", "<br>"))</div>
                                                </div>
                                                @if (!string.IsNullOrWhiteSpace(message.AdminReply))
                                                {
                                                    <div class="mb-3">
                                                        <strong>پاسخ ادمین:</strong>
                                                        <div class="border p-3 rounded bg-info-subtle">@Html.Raw(message.AdminReply.Replace("\n", "<br>"))</div>
                                                        @if (message.RepliedAt.HasValue)
                                                        {
                                                            <small class="text-muted">تاریخ پاسخ: @FormatDateTime(message.RepliedAt.Value)</small>
                                                        }
                                                    </div>
                                                }
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">بستن</button>
                                                @if (!message.IsRead)
                                                {
                                                    <form method="post" asp-action="MarkAsRead" asp-route-id="@message.Id" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-success">
                                                            <i class="bi bi-check"></i>
                                                            علامت‌گذاری به عنوان خوانده شده
                                                        </button>
                                                    </form>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </tbody>
                    </table>
                </div>

                @if (Model.TotalCount > Model.PageSize)
                {
                    <nav aria-label="صفحه‌بندی" class="mt-4">
                        <ul class="pagination justify-content-center">
                            @if (Model.PageNumber > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber - 1)" asp-route-unreadOnly="@Model.UnreadOnly">قبلی</a>
                                </li>
                            }
                            @for (int i = 1; i <= (Model.TotalCount + Model.PageSize - 1) / Model.PageSize; i++)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-unreadOnly="@Model.UnreadOnly">@i</a>
                                </li>
                            }
                            @if (Model.PageNumber < (Model.TotalCount + Model.PageSize - 1) / Model.PageSize)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber + 1)" asp-route-unreadOnly="@Model.UnreadOnly">بعدی</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
        </div>
    </div>
</div>

