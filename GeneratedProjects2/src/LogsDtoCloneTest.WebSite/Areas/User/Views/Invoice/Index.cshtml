@using LogsDtoCloneTest.Domain.Enums
@model LogsDtoCloneTest.Application.DTOs.Billing.InvoiceListResultDto
@{
    ViewData["Title"] = "فاکتورهای من";
    
    var filter = ViewData["Filter"] as dynamic;
    var searchTerm = filter?.SearchTerm as string;
    var status = filter?.Status as InvoiceStatus?;
    var fromDate = filter?.FromDate as string;
    var toDate = filter?.ToDate as string;

    string StatusText(InvoiceStatus status) => status switch
    {
        InvoiceStatus.Paid => "پرداخت شده",
        InvoiceStatus.PartiallyPaid => "پرداخت جزئی",
        InvoiceStatus.Overdue => "سررسید گذشته",
        InvoiceStatus.Cancelled => "لغو شده",
        InvoiceStatus.Draft => "پیش‌نویس",
        _ => "در انتظار پرداخت"
    };
}

<div class="invoice-list">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-2">فاکتورهای من</h1>
            <p class="text-muted mb-0">لیست تمام فاکتورهای شما</p>
        </div>
        <div>
            <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#invoice-filter-modal">
                <i class="bi bi-funnel"></i> فیلترها
            </button>
        </div>
    </div>

    @if (Model.Items.Count == 0)
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <div class="fs-1 mb-3">📄</div>
                <h3 class="h5 mb-2">هیچ فاکتوری یافت نشد</h3>
                <p class="text-muted mb-3">شما هنوز فاکتوری ندارید. با خرید محصولات، فاکتورهای شما اینجا نمایش داده می‌شوند.</p>
                <a asp-area="" asp-controller="Product" asp-action="Index" class="btn btn-primary">
                    مشاهده محصولات
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead>
                            <tr>
                                <th>شماره فاکتور</th>
                                <th>عنوان</th>
                                <th>مبلغ کل</th>
                                <th>پرداخت شده</th>
                                <th>باقیمانده</th>
                                <th>وضعیت</th>
                                <th>تاریخ صدور</th>
                                <th>عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var invoice in Model.Items)
                            {
                                var outstanding = invoice.OutstandingAmount;
                                var statusClass = outstanding switch
                                {
                                    var amount when amount <= 0 => "bg-success text-white",
                                    _ => "bg-warning text-dark"
                                };
                                var currency = string.IsNullOrWhiteSpace(invoice.Currency) ? "IRT" : invoice.Currency;

                                <tr>
                                    <td>
                                        <strong>@invoice.InvoiceNumber</strong>
                                    </td>
                                    <td>@invoice.Title</td>
                                    <td class="fw-semibold">@invoice.GrandTotal.ToString("N0") @currency</td>
                                    <td class="text-success">@invoice.PaidAmount.ToString("N0") @currency</td>
                                    <td class="@(outstanding > 0 ? "text-danger" : "text-success") fw-bold">@outstanding.ToString("N0") @currency</td>
                                    <td>
                                        <span class="badge @statusClass">@invoice.Status.GetDisplayName()</span>
                                    </td>
                                    <td class="text-muted small">@invoice.IssueDate.ToPersianDateString()</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@invoice.Id" class="btn btn-sm btn-outline-primary">
                                            مشاهده
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        @if (Model.TotalPages > 1)
        {
            <nav class="mt-4" aria-label="صفحه‌بندی فاکتورها">
                <ul class="pagination justify-content-center mb-0">
                    @{
                        var prevPage = Math.Max(1, Model.PageNumber - 1);
                        var nextPage = Math.Min(Model.TotalPages, Model.PageNumber + 1);
                        var maxDisplayedPages = 5;
                        var startPage = Math.Max(1, Model.PageNumber - 2);
                        var endPage = Math.Min(Model.TotalPages, startPage + maxDisplayedPages - 1);
                        startPage = Math.Max(1, endPage - maxDisplayedPages + 1);
                    }
                    
                    <li class="page-item @(Model.PageNumber == 1 ? "disabled" : string.Empty)">
                        <a class="page-link" 
                           asp-action="Index" 
                           asp-route-page="@prevPage" 
                           asp-route-pageSize="@Model.PageSize"
                           asp-route-searchTerm="@searchTerm"
                           asp-route-status="@status"
                           asp-route-fromDate="@fromDate"
                           asp-route-toDate="@toDate"
                           aria-label="قبلی">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    
                    @for (var i = startPage; i <= endPage; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : string.Empty)">
                            <a class="page-link" 
                               asp-action="Index" 
                               asp-route-page="@i" 
                               asp-route-pageSize="@Model.PageSize"
                               asp-route-searchTerm="@searchTerm"
                               asp-route-status="@status"
                               asp-route-fromDate="@fromDate"
                               asp-route-toDate="@toDate">
                                @i
                            </a>
                        </li>
                    }
                    
                    <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : string.Empty)">
                        <a class="page-link" 
                           asp-action="Index" 
                           asp-route-page="@nextPage" 
                           asp-route-pageSize="@Model.PageSize"
                           asp-route-searchTerm="@searchTerm"
                           asp-route-status="@status"
                           asp-route-fromDate="@fromDate"
                           asp-route-toDate="@toDate"
                           aria-label="بعدی">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
            
            <div class="mt-3 text-center">
                <p class="text-muted small">نمایش @((Model.PageNumber - 1) * Model.PageSize + 1) تا @(Math.Min(Model.PageNumber * Model.PageSize, Model.TotalCount)) از @Model.TotalCount فاکتور</p>
            </div>
        }
    }
</div>

<!-- Filter Modal -->
<div class="modal fade" id="invoice-filter-modal" tabindex="-1" aria-labelledby="invoice-filter-modal-label" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="invoice-filter-modal-label">فیلتر فاکتورها</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="بستن"></button>
            </div>
            <form method="get" asp-action="Index">
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label" for="InvoiceFilter_Status">وضعیت فاکتور</label>
                            <select class="form-select" id="InvoiceFilter_Status" name="status">
                                <option value="">همه وضعیت‌ها</option>
                                @foreach (InvoiceStatus s in Enum.GetValues(typeof(InvoiceStatus)))
                                {
                                    var selected = status.HasValue && status.Value == s;
                                    <option value="@s" selected="@(selected ? "selected" : null)">@StatusText(s)</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6" data-invoice-date>
                            <label class="form-label" for="InvoiceFilter_FromDateDisplay">از تاریخ</label>
                            <div class="jalali-picker" data-jalali-picker>
                                <div class="jalali-picker__controls">
                                    <input type="text"
                                           class="form-control"
                                           id="InvoiceFilter_FromDateDisplay"
                                           placeholder="انتخاب تاریخ"
                                           value="@(fromDate?.Replace("-", "/") ?? string.Empty)"
                                           data-jalali-input
                                           data-jdp
                                           data-jdp-only-date
                                           data-jdp-init-date="@(fromDate?.Replace("-", "/") ?? string.Empty)"
                                           autocomplete="off"
                                           dir="ltr" />
                                </div>
                                <input type="hidden"
                                       id="InvoiceFilter_FromDate"
                                       name="fromDate"
                                       value="@fromDate"
                                       data-jalali-target />
                            </div>
                        </div>
                        <div class="col-md-6" data-invoice-date>
                            <label class="form-label" for="InvoiceFilter_ToDateDisplay">تا تاریخ</label>
                            <div class="jalali-picker" data-jalali-picker>
                                <div class="jalali-picker__controls">
                                    <input type="text"
                                           class="form-control"
                                           id="InvoiceFilter_ToDateDisplay"
                                           placeholder="انتخاب تاریخ"
                                           value="@(toDate?.Replace("-", "/") ?? string.Empty)"
                                           data-jalali-input
                                           data-jdp
                                           data-jdp-only-date
                                           data-jdp-init-date="@(toDate?.Replace("-", "/") ?? string.Empty)"
                                           autocomplete="off"
                                           dir="ltr" />
                                </div>
                                <input type="hidden"
                                       id="InvoiceFilter_ToDate"
                                       name="toDate"
                                       value="@toDate"
                                       data-jalali-target />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-funnel-fill"></i>
                        اعمال فیلترها
                    </button>
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">انصراف</button>
                    <a class="btn btn-link text-danger ms-auto"
                       href="@Url.Action("Index", "Invoice", new { area = "User" })">
                        حذف فیلترها
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Head {
    <link rel="stylesheet" href="~/Plugins/JalaliDatePicker/css/jalalidatepicker.min.css" />
}

@section Scripts {
    <script src="~/Plugins/JalaliDatePicker/js/jalalidatepicker.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            jalaliDatepicker.startWatch();
        });
    </script>
}
