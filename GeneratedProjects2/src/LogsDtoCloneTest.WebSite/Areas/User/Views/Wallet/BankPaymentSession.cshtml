@model BankPaymentSessionViewModel
@{
    ViewData["Title"] ??= "اتصال به درگاه بانکی";
    var currency = string.IsNullOrWhiteSpace(Model.Currency) ? "IRT" : Model.Currency;
}

<div class="bank-payment-session" data-bank-payment-session>
    @await Html.PartialAsync("_StatusMessage")

    <div class="alert alert-info d-flex align-items-center" role="alert">
        <i class="bi bi-info-circle ms-2"></i>
        لطفاً پیش از بستن این صفحه، وضعیت پرداخت خود را در درگاه بانکی بررسی کنید و سپس گزینه تایید پرداخت را انتخاب نمایید.
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body p-4">
            <div class="row g-4 align-items-center">
                <div class="col-12 col-lg-6">
                    <h1 class="h4 mb-3">پرداخت فاکتور @Model.InvoiceNumber</h1>
                    <p class="text-muted mb-2">@Model.Title</p>
                    <div class="d-flex flex-wrap gap-3 text-muted small">
                        <span>
                            <i class="bi bi-bank ms-1"></i>
                            درگاه: <strong>@Model.GatewayName</strong>
                        </span>
                        <span>
                            <i class="bi bi-upc-scan ms-1"></i>
                            شناسه پیگیری: <strong>@Model.Reference</strong>
                        </span>
                    </div>
                </div>
                <div class="col-12 col-lg-6 text-lg-end">
                    <div class="text-muted small mb-1">مبلغ پرداخت</div>
                    <div class="fs-3 fw-bold text-primary">@Model.Amount.ToString("N0") @currency</div>
                    <div class="text-muted small mt-2">
                        اعتبار لینک تا: @Model.ExpiresAt.ToPersianDateTimeString()
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.PaymentUrl))
    {
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body d-flex flex-column flex-md-row justify-content-between align-items-start gap-3">
                <div>
                    <h2 class="h5 mb-2">ورود به درگاه بانکی</h2>
                    <p class="text-muted small mb-0">برای تکمیل پرداخت بر روی دکمه زیر کلیک کنید. لینک در یک زبانه جدید باز خواهد شد.</p>
                </div>
                <a class="btn btn-primary" asp-controller="Payment" asp-action="Payment" asp-route-orderId="@Model.InvoiceId">
                    ورود به درگاه بانکی
                </a>
            </div>
        </div>
    }

    <div class="mt-4">
        <a asp-action="PayInvoice" asp-route-id="@Model.InvoiceId" class="btn btn-link">
            انتخاب دوباره روش پرداخت
        </a>
        <a asp-action="Index" class="btn btn-link">
            بازگشت به کیف پول
        </a>
    </div>
</div>
