@using System.Globalization
@using LogsDtoCloneTest.Domain.Enums
@using LogsDtoCloneTest.SharedKernel.Extensions
@model WithdrawalRequestDetailsViewModel
@{
    ViewData["Title"] = "جزئیات درخواست برداشت";
    ViewData["Subtitle"] = "مشاهده و مدیریت درخواست برداشت";

    var culture = new CultureInfo("fa-IR");

    string FormatMoney(decimal value) => string.Format(culture, "{0:N0} تومان", value);
    string FormatDate(DateTimeOffset value) => value.ToPersianDateString();
    string FormatDateTime(DateTimeOffset value) => value.ToPersianDateTimeString();

    string StatusBadgeClass(WithdrawalRequestStatus status) => status switch
    {
        WithdrawalRequestStatus.Pending => "badge bg-warning-subtle text-warning-emphasis",
        WithdrawalRequestStatus.Approved => "badge bg-info-subtle text-info-emphasis",
        WithdrawalRequestStatus.Processed => "badge bg-success-subtle text-success-emphasis",
        WithdrawalRequestStatus.Rejected => "badge bg-danger-subtle text-danger-emphasis",
        WithdrawalRequestStatus.Cancelled => "badge bg-secondary-subtle text-secondary-emphasis",
        _ => "badge bg-secondary-subtle text-secondary-emphasis"
    };

    string StatusLabel(WithdrawalRequestStatus status) => status switch
    {
        WithdrawalRequestStatus.Pending => "در انتظار بررسی",
        WithdrawalRequestStatus.Approved => "تایید شده",
        WithdrawalRequestStatus.Processed => "پرداخت شده",
        WithdrawalRequestStatus.Rejected => "رد شده",
        WithdrawalRequestStatus.Cancelled => "لغو شده",
        _ => status.ToString()
    };
}

@section Breadcrumb {
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">داشبورد</a></li>
    <li class="breadcrumb-item"><a asp-action="Index">درخواست‌های برداشت</a></li>
    <li class="breadcrumb-item active" aria-current="page">جزئیات درخواست</li>
}

@await Html.PartialAsync("_StatusMessage")

<div class="row g-4">
    <div class="col-12 col-xl-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-bottom">
                <h5 class="mb-0">
                    <i class="bi bi-info-circle text-primary"></i>
                    اطلاعات درخواست
                </h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">شناسه درخواست:</dt>
                    <dd class="col-sm-8"><code>@Model.Id</code></dd>

                    <dt class="col-sm-4">فروشنده:</dt>
                    <dd class="col-sm-8">
                        <strong>@(Model.SellerName ?? Model.SellerId)</strong>
                        <div class="small text-muted">@Model.SellerId</div>
                    </dd>

                    <dt class="col-sm-4">مبلغ:</dt>
                    <dd class="col-sm-8">
                        <span class="h5 mb-0 text-primary">@FormatMoney(Model.Amount)</span>
                        <span class="text-muted">@Model.Currency</span>
                    </dd>

                    <dt class="col-sm-4">وضعیت:</dt>
                    <dd class="col-sm-8">
                        <span class="@StatusBadgeClass(Model.Status)">
                            @StatusLabel(Model.Status)
                        </span>
                    </dd>

                    <dt class="col-sm-4">نام بانک:</dt>
                    <dd class="col-sm-8">@(Model.BankName ?? "-")</dd>

                    <dt class="col-sm-4">شماره حساب:</dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrWhiteSpace(Model.BankAccountNumber))
                        {
                            <code>@Model.BankAccountNumber</code>
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </dd>

                    <dt class="col-sm-4">نام صاحب حساب:</dt>
                    <dd class="col-sm-8">@(Model.AccountHolderName ?? "-")</dd>

                    <dt class="col-sm-4">توضیحات:</dt>
                    <dd class="col-sm-8">@(Model.Description ?? "-")</dd>

                    <dt class="col-sm-4">یادداشت ادمین:</dt>
                    <dd class="col-sm-8">@(Model.AdminNotes ?? "-")</dd>

                    <dt class="col-sm-4">تاریخ ثبت:</dt>
                    <dd class="col-sm-8">@FormatDateTime(Model.CreateDate)</dd>

                    @if (Model.ProcessedAt.HasValue)
                    {
                        <dt class="col-sm-4">تاریخ پردازش:</dt>
                        <dd class="col-sm-8">@FormatDateTime(Model.ProcessedAt.Value)</dd>
                    }

                    @if (Model.WalletTransactionId.HasValue)
                    {
                        <dt class="col-sm-4">شناسه تراکنش کیف پول:</dt>
                        <dd class="col-sm-8"><code>@Model.WalletTransactionId</code></dd>
                    }
                </dl>
            </div>
        </div>
    </div>

    <div class="col-12 col-xl-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-bottom">
                <h5 class="mb-0">
                    <i class="bi bi-gear text-primary"></i>
                    عملیات
                </h5>
            </div>
            <div class="card-body">
                @if (Model.Status == WithdrawalRequestStatus.Pending)
                {
                    <form asp-action="Approve" method="post" class="mb-3">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div class="mb-3">
                            <label class="form-label">یادداشت (اختیاری)</label>
                            <textarea name="adminNotes" class="form-control" rows="3" placeholder="یادداشت برای تایید درخواست"></textarea>
                        </div>
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i>
                            تایید درخواست
                        </button>
                    </form>

                    <form asp-action="Reject" method="post" class="mb-3">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div class="mb-3">
                            <label class="form-label">یادداشت (اختیاری)</label>
                            <textarea name="adminNotes" class="form-control" rows="3" placeholder="دلیل رد درخواست"></textarea>
                        </div>
                        <button type="submit" class="btn btn-danger w-100" onclick="return confirm('آیا از رد این درخواست اطمینان دارید؟')">
                            <i class="bi bi-x-circle"></i>
                            رد درخواست
                        </button>
                    </form>
                }
                else if (Model.Status == WithdrawalRequestStatus.Approved)
                {
                    <form asp-action="Process" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-primary w-100" onclick="return confirm('آیا از پردازش این درخواست اطمینان دارید؟ مبلغ از کیف پول فروشنده کسر خواهد شد.')">
                            <i class="bi bi-check-circle"></i>
                            پردازش و کسر از کیف پول
                        </button>
                    </form>
                }
                else
                {
                    <div class="alert alert-info mb-0">
                        <i class="bi bi-info-circle"></i>
                        این درخواست @StatusLabel(Model.Status) است و قابل تغییر نیست.
                    </div>
                }

                <hr />

                <a asp-action="Index" class="btn btn-outline-secondary w-100">
                    <i class="bi bi-arrow-right"></i>
                    بازگشت به لیست
                </a>
            </div>
        </div>
    </div>
</div>

