@using LogsDtoCloneTest.Domain.Enums
@using LogsDtoCloneTest.WebSite.Areas.Admin.Models
@model TicketListViewModel
@{
    ViewData["Title"] ??= "مدیریت تیکت‌ها";
    ViewData["Subtitle"] ??= "رسیدگی به تیکت‌های کاربران";

    string StatusBadge(TicketStatus status) => status switch
    {
        TicketStatus.Pending => "badge bg-warning-subtle text-warning-emphasis",
        TicketStatus.InProgress => "badge bg-info-subtle text-info-emphasis",
        TicketStatus.Answered => "badge bg-success-subtle text-success-emphasis",
        TicketStatus.Closed => "badge bg-secondary-subtle text-secondary-emphasis",
        _ => "badge bg-secondary-subtle text-secondary-emphasis"
    };

    string StatusText(TicketStatus status) => status.GetDisplayName();

    var hasActiveFilters = Model.Filter.Status.HasValue 
        || !string.IsNullOrWhiteSpace(Model.Filter.UserId)
        || !string.IsNullOrWhiteSpace(Model.Filter.AssignedToId);
}

@await Html.PartialAsync("_StatusMessage")

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-2">تیکت‌ها</h1>
        <p class="text-muted mb-0">مدیریت و رسیدگی به تیکت‌های کاربران</p>
    </div>
    <div>
        <button type="button"
                class="btn btn-outline-secondary"
                data-bs-toggle="modal"
                data-bs-target="#ticket-filter-modal">
            <i class="bi bi-funnel"></i>
            فیلترها
        </button>
    </div>
</div>

@if (hasActiveFilters)
{
    <div class="alert alert-info d-flex justify-content-between align-items-center mb-3">
        <div>
            <i class="bi bi-funnel"></i>
            <strong>فیلترهای فعال:</strong>
            @if (Model.Filter.Status.HasValue)
            {
                <span class="badge bg-light text-dark ms-2">وضعیت: @StatusText(Model.Filter.Status.Value)</span>
            }
            @if (!string.IsNullOrWhiteSpace(Model.Filter.UserId))
            {
                <span class="badge bg-light text-dark ms-2">کاربر: @Model.Filter.UserId</span>
            }
            @if (!string.IsNullOrWhiteSpace(Model.Filter.AssignedToId))
            {
                <span class="badge bg-light text-dark ms-2">کارشناس: @Model.Filter.AssignedToId</span>
            }
        </div>
        <a class="btn btn-sm btn-link text-danger" asp-action="Index">
            <i class="bi bi-x-circle"></i> حذف فیلترها
        </a>
    </div>
}

@if (!Model.Tickets.Any())
{
    <div class="alert alert-info text-center py-4">
        <i class="bi bi-inbox fs-3 mb-2 d-block"></i>
        <p class="mb-0">هنوز تیکتی ثبت نشده است.</p>
    </div>
}
else
{
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th>کاربر</th>
                            <th>موضوع</th>
                            <th>بخش</th>
                            <th>وضعیت</th>
                            <th>تاریخ</th>
                            <th>پاسخ‌ها</th>
                            <th class="text-end">عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ticket in Model.Tickets)
                        {
                            <tr>
                                <td>
                                    <div class="fw-semibold">@ticket.UserFullName</div>
                                    @if (!string.IsNullOrWhiteSpace(ticket.UserPhoneNumber))
                                    {
                                        <small class="text-muted">
                                            <i class="bi bi-telephone"></i> @ticket.UserPhoneNumber
                                        </small>
                                    }
                                </td>
                                <td>
                                    <div class="fw-semibold">@ticket.Subject</div>
                                    @if (ticket.HasUnreadReplies)
                                    {
                                        <span class="badge bg-danger">جدید</span>
                                    }
                                </td>
                                <td>@(ticket.Department ?? "-")</td>
                                <td>
                                    <span class="@StatusBadge(ticket.Status)">@StatusText(ticket.Status)</span>
                                </td>
                                <td>@ticket.CreateDate.ToPersianDateString()</td>
                                <td>
                                    <span class="badge bg-secondary">@ticket.RepliesCount</span>
                                </td>
                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@ticket.Id" class="btn btn-sm btn-primary">
                                        <i class="bi bi-eye"></i> مشاهده
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (Model.TotalPages > 1)
            {
                <div class="d-flex justify-content-between align-items-center mt-4">
                    <div class="text-muted">
                        نمایش @((Model.PageNumber - 1) * Model.PageSize + 1) تا @(Math.Min(Model.PageNumber * Model.PageSize, Model.TotalCount)) از @Model.TotalCount مورد
                    </div>
                    <nav aria-label="صفحه‌بندی">
                        <ul class="pagination mb-0">
                            @if (Model.PageNumber > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" 
                                       asp-route-page="@(Model.PageNumber - 1)"
                                       asp-route-status="@Model.Filter.Status"
                                       asp-route-userId="@Model.Filter.UserId"
                                       asp-route-assignedToId="@Model.Filter.AssignedToId">
                                        <i class="bi bi-chevron-right"></i>
                                    </a>
                                </li>
                            }
                            @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                    <a class="page-link" asp-action="Index" 
                                       asp-route-page="@i"
                                       asp-route-status="@Model.Filter.Status"
                                       asp-route-userId="@Model.Filter.UserId"
                                       asp-route-assignedToId="@Model.Filter.AssignedToId">
                                        @i
                                    </a>
                                </li>
                            }
                            @if (Model.PageNumber < Model.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" 
                                       asp-route-page="@(Model.PageNumber + 1)"
                                       asp-route-status="@Model.Filter.Status"
                                       asp-route-userId="@Model.Filter.UserId"
                                       asp-route-assignedToId="@Model.Filter.AssignedToId">
                                        <i class="bi bi-chevron-left"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            }
        </div>
    </div>
}

<!-- Filter Modal -->
<div class="modal fade" id="ticket-filter-modal" tabindex="-1" aria-labelledby="ticketFilterModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Index" method="get">
                <div class="modal-header">
                    <h5 class="modal-title" id="ticketFilterModalLabel">فیلتر تیکت‌ها</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">وضعیت</label>
                        <select name="status" class="form-select">
                            <option value="">همه</option>
                            <option value="@TicketStatus.Pending" selected="@(Model.Filter.Status == TicketStatus.Pending)">@StatusText(TicketStatus.Pending)</option>
                            <option value="@TicketStatus.InProgress" selected="@(Model.Filter.Status == TicketStatus.InProgress)">@StatusText(TicketStatus.InProgress)</option>
                            <option value="@TicketStatus.Answered" selected="@(Model.Filter.Status == TicketStatus.Answered)">@StatusText(TicketStatus.Answered)</option>
                            <option value="@TicketStatus.Closed" selected="@(Model.Filter.Status == TicketStatus.Closed)">@StatusText(TicketStatus.Closed)</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">شناسه کاربر</label>
                        <input type="text" name="userId" class="form-control" value="@Model.Filter.UserId" placeholder="شناسه کاربر" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">کارشناس</label>
                        <input type="text" name="assignedToId" class="form-control" value="@Model.Filter.AssignedToId" placeholder="شناسه کارشناس" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">انصراف</button>
                    <button type="submit" class="btn btn-primary">اعمال فیلتر</button>
                </div>
            </form>
        </div>
    </div>
</div>
