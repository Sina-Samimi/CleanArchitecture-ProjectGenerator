@model PendingProductCommentListViewModel
@using System.Globalization
@{
    var persianCulture = CultureInfo.GetCultureInfo("fa-IR");
    string FormatDate(DateTimeOffset value) => value.ToPersianDateTimeString();
}

@section Breadcrumb {
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">داشبورد</a></li>
    <li class="breadcrumb-item active" aria-current="page">نظرات در انتظار</li>
}

@await Html.PartialAsync("_StatusMessage")

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div>
            <h3 class="mb-0">نظرات در انتظار بررسی</h3>
            <small class="text-muted">@Model.TotalCount نظر در انتظار بررسی</small>
        </div>
    </div>
    <div class="card-body p-0">
        @if (Model.Items == null || Model.Items.Count == 0)
        {
            <div class="p-4 text-center text-muted">
                <i class="bi bi-emoji-neutral display-4"></i>
                <p class="mt-2">نظری در انتظار بررسی وجود ندارد.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table mb-0 align-middle">
                    <thead>
                        <tr>
                            <th>محصول</th>
                            <th>نویسنده</th>
                            <th>خلاصه</th>
                            <th>تاریخ</th>
                            <th class="text-end">عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>
                                    <div>
                                        <div class="fw-semibold">@item.ProductName</div>
                                        @if (!string.IsNullOrWhiteSpace(item.ProductSlug))
                                        {
                                            <a asp-area="" asp-controller="Product" asp-action="Details" asp-route-slug="@item.ProductSlug" target="_blank">مشاهده محصول</a>
                                        }
                                    </div>
                                </td>
                                <td>@item.AuthorName</td>
                                <td>@item.Excerpt</td>
                                <td>@FormatDate(item.CreatedAt)</td>
                                <td class="text-end">
                                    <a asp-area="Admin" asp-controller="Catalog" asp-action="Comments" asp-route-id="@item.ProductId" class="btn btn-sm btn-outline-primary">مدیریت</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
