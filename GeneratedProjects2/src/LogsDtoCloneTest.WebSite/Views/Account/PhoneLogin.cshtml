@model PhoneLoginViewModel
@{
    ViewData["Title"] = "ورود / ثبت نام";
    Layout = "_HomeTemplateLayout";
}

@section Styles {
    <style>
        .login-section {
            min-height: calc(100vh - 200px);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 4rem 2rem;
            background: linear-gradient(135deg, rgba(45, 80, 22, 0.05), rgba(74, 124, 42, 0.05));
        }

        .login-container {
            max-width: 500px;
            width: 100%;
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            padding: 3rem 2.5rem;
            animation: fadeInUp 0.6s ease-out;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .login-header {
            text-align: center;
            margin-bottom: 2.5rem;
        }

        .login-logo {
            width: 80px;
            height: 80px;
            margin: 0 auto 1.5rem;
            background: linear-gradient(135deg, #2d5016 0%, #4a7c2a 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            color: white;
            box-shadow: 0 5px 20px rgba(45, 80, 22, 0.3);
        }

        .login-title {
            font-size: 2rem;
            color: #2d5016;
            margin-bottom: 0.5rem;
            font-weight: bold;
        }

        .login-subtitle {
            color: #666;
            font-size: 1rem;
        }

        .login-form {
            margin-top: 2rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            color: #2d5016;
            font-weight: 600;
            font-size: 0.95rem;
        }

        .form-input-wrapper {
            position: relative;
        }

        .form-input-icon {
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #4a7c2a;
            font-size: 1.2rem;
        }

        .form-input {
            width: 100%;
            padding: 1rem 3rem 1rem 1rem;
            border: 2px solid #e0e0e0;
            border-radius: 12px;
            font-size: 1rem;
            transition: all 0.3s;
            background: #f9f9f9;
            font-family: inherit;
        }

        .form-input:focus {
            outline: none;
            border-color: #4a7c2a;
            background: white;
            box-shadow: 0 0 0 3px rgba(74, 124, 42, 0.1);
        }

        .form-error {
            color: #d32f2f;
            font-size: 0.85rem;
            margin-top: 0.5rem;
            display: block;
        }

        .validation-summary-errors {
            background: #ffebee;
            border: 1px solid #ef5350;
            border-radius: 10px;
            padding: 1rem;
            margin-bottom: 1.5rem;
            color: #c62828;
            font-size: 0.9rem;
        }

        .validation-summary-errors:empty,
        .validation-summary-errors ul:empty {
            display: none;
        }

        .validation-summary-errors ul {
            list-style: none;
            margin: 0;
            padding: 0;
        }

        .validation-summary-errors li {
            margin-bottom: 0.5rem;
        }

        .validation-summary-errors li:last-child {
            margin-bottom: 0;
        }

        .field-validation-error {
            color: #d32f2f;
            font-size: 0.85rem;
            margin-top: 0.5rem;
            display: block;
        }

        .input-validation-error {
            border-color: #ef5350 !important;
            background: #ffebee !important;
        }

        .auth-message {
            padding: 1rem;
            border-radius: 10px;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .auth-message--info {
            background: #e3f2fd;
            color: #1976d2;
            border: 1px solid #90caf9;
        }

        .auth-message--error {
            background: #ffebee;
            color: #c62828;
            border: 1px solid #ef5350;
        }

        .form-checkbox-wrapper {
            display: flex;
            align-items: flex-start;
            gap: 0.75rem;
            margin-bottom: 1.5rem;
        }

        .form-checkbox {
            width: 20px;
            height: 20px;
            margin-top: 2px;
            cursor: pointer;
            accent-color: #4a7c2a;
        }

        .form-checkbox-label {
            color: #666;
            font-size: 0.9rem;
            line-height: 1.5;
            cursor: pointer;
        }

        .form-checkbox-label a {
            color: #4a7c2a;
            text-decoration: none;
            font-weight: 600;
        }

        .form-checkbox-label a:hover {
            text-decoration: underline;
        }

        .login-button {
            width: 100%;
            padding: 1rem 2rem;
            background: linear-gradient(135deg, #2d5016 0%, #4a7c2a 100%);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 1.1rem;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s;
            box-shadow: 0 4px 15px rgba(45, 80, 22, 0.3);
            margin-top: 1rem;
        }

        .login-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(45, 80, 22, 0.4);
        }

        .login-button:active {
            transform: translateY(0);
        }

        .login-button:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }

        .login-footer {
            text-align: center;
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 1px solid #e0e0e0;
            color: #666;
            font-size: 0.9rem;
        }

        .login-footer a {
            color: #4a7c2a;
            text-decoration: none;
            font-weight: 600;
        }

        .login-footer a:hover {
            text-decoration: underline;
        }

        @@media (max-width: 768px) {
            body {
                margin: 0;
                padding: 0;
                overflow-x: hidden;
            }

            .login-section {
                min-height: 100vh;
                min-height: 100dvh; /* Dynamic viewport height for mobile */
                padding: 1rem;
                padding-bottom: calc(1rem + 80px); /* Space for footer */
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .login-container {
                padding: 2rem 1.5rem;
                margin: 0;
                max-width: 100%;
                width: 100%;
                border-radius: 20px 20px 0 0;
                box-shadow: 0 -5px 20px rgba(0, 0, 0, 0.1);
            }

            .login-title {
                font-size: 1.5rem;
            }

            .login-logo {
                width: 60px;
                height: 60px;
                font-size: 2rem;
            }

            .login-subtitle {
                font-size: 0.9rem;
            }

            .form-input {
                padding: 0.875rem 2.5rem 0.875rem 0.875rem;
                font-size: 0.95rem;
            }

            .login-button {
                padding: 0.875rem 1.5rem;
                font-size: 1rem;
            }
        }

        @@media (max-width: 480px) {
            .login-section {
                padding: 0.5rem;
                padding-bottom: calc(0.5rem + 80px);
            }

            .login-container {
                padding: 1.5rem 1rem;
                border-radius: 15px 15px 0 0;
            }

            .login-title {
                font-size: 1.25rem;
            }

            .login-subtitle {
                font-size: 0.85rem;
            }

            .login-logo {
                width: 50px;
                height: 50px;
                font-size: 1.75rem;
                margin-bottom: 1rem;
            }

            .login-header {
                margin-bottom: 1.5rem;
            }
        }
    </style>
}

<section class="login-section">
    <div class="login-container">
        <div class="login-header">
            <div class="login-logo">
                🌿
            </div>
            <h1 class="login-title">ورود / ثبت نام</h1>
            <p class="login-subtitle">لطفا شماره موبایل خود را وارد کنید</p>
        </div>


        @if (!string.IsNullOrWhiteSpace(Model.InfoMessage))
        {
            <div class="auth-message auth-message--info">
                <span style="font-size: 1.2rem;">ℹ️</span>
                <span>@Model.InfoMessage</span>
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
        {
            <div class="auth-message auth-message--error">
                <span style="font-size: 1.2rem;">⚠️</span>
                <span>@Model.ErrorMessage</span>
            </div>
        }

        <form asp-action="SendCode" method="post" class="login-form">
            <input type="hidden" asp-for="ReturnUrl" />

            <div class="form-group">
                <label asp-for="PhoneNumber" class="form-label">شماره موبایل</label>
                <div class="form-input-wrapper">
                    <input 
                        asp-for="PhoneNumber" 
                        class="form-input" 
                        placeholder="09123456789" 
                        inputmode="tel" 
                        maxlength="11"
                        autocomplete="tel"
                        autofocus />
                </div>
                <span asp-validation-for="PhoneNumber" class="form-error"></span>
            </div>

            <div class="form-checkbox-wrapper">
                <input asp-for="AcceptTerms" class="form-checkbox" type="checkbox" id="AcceptTerms" />
                <label for="AcceptTerms" class="form-checkbox-label">
                    با <a href="#">قوانین و مقررات</a> @(ViewData["SiteName"] as string ?? "عطاری آنلاین") موافقم
                </label>
            </div>
            <span asp-validation-for="AcceptTerms" class="form-error"></span>

            <button type="submit" class="login-button">
                ورود
            </button>
        </form>

    </div>
</section>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <script>
        // Phone number formatting
        document.addEventListener('DOMContentLoaded', function() {
            const phoneInput = document.querySelector('input[name="PhoneNumber"]');

                if (phoneInput) {
                phoneInput.addEventListener('input', function(e) {
                    // Allow digits, plus sign, spaces and dashes for flexible input
                    let value = e.target.value.replace(/[^+\d\s\-()]/g, '');
                    e.target.value = value;
                });

                // Focus on load if empty
                if (!phoneInput.value) {
                    phoneInput.focus();
                }
            }

            // Form submission loading state
            const form = document.querySelector('.login-form');
            if (form) {
                form.addEventListener('submit', function(e) {
                    // Client-side phone regex (flexible separators, supports +98 and 09...)
                    const phoneRaw = phoneInput ? phoneInput.value.trim() : '';
                    const phonePattern = /^(?:(?:0?9)|(?:\+?989))\d{2}[\s\-]?\d{3}[\s\-]?\d{4}$/;
                    const phoneErrorSpan = document.querySelector('span[asp-validation-for="PhoneNumber"], span.form-error');

                    if (!phonePattern.test(phoneRaw)) {
                        e.preventDefault();
                        if (phoneErrorSpan) {
                            phoneErrorSpan.textContent = 'لطفاً شماره موبایل معتبر ایرانی وارد کنید (مثال: 09123456789).';
                        } else {
                            alert('لطفاً شماره موبایل معتبر ایرانی وارد کنید (مثال: 09123456789).');
                        }
                        return;
                    }

                    // Check other validations (jQuery)
                    const isValid = form.checkValidity();
                    const $form = $(form);
                    let isJQueryValid = true;
                    if ($form.length && $.fn.valid) {
                        isJQueryValid = $form.valid();
                    }

                    if (isValid && isJQueryValid) {
                        const button = form.querySelector('.login-button');
                        if (button) {
                            button.disabled = true;
                            button.textContent = 'در حال ارسال...';
                        }
                    }
                });
            }
        });
    </script>
}
